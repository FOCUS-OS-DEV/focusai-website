# Security Headers
<IfModule mod_headers.c>
  # HSTS - Force HTTPS (1 year)
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains" env=HTTPS

  # Prevent clickjacking
  Header always set X-Frame-Options "SAMEORIGIN"

  # Cross-Origin Opener Policy
  Header always set Cross-Origin-Opener-Policy "same-origin-allow-popups"

  # Prevent MIME type sniffing
  Header always set X-Content-Type-Options "nosniff"

  # Referrer Policy
  Header always set Referrer-Policy "strict-origin-when-cross-origin"

  # Permissions Policy
  Header always set Permissions-Policy "camera=(), microphone=(), geolocation=()"

  # Content Security Policy
  Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.clarity.ms https://www.google-analytics.com https://connect.facebook.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' https://res.cloudinary.com https://www.facebook.com data:; media-src 'self' https://res.cloudinary.com; connect-src 'self' https://*.n8n.cloud https://www.google-analytics.com https://www.clarity.ms https://region1.google-analytics.com; frame-src 'none';"
</IfModule>
