---
import BaseLayout from '../layouts/BaseLayout.astro';
import VideoTestimonials from '../components/VideoTestimonials.astro';
import { siteConfig } from '../data/config';

const cldBase = siteConfig.assets.cloudinaryBase;

// Hero assets (from HeroSection)
const chavobot = `${cldBase}/q_auto,f_auto,w_650/v1771022344/36c7efb5-d099-4cb1-94fe-1bd896f53cef_ivfe4n.png`;
const chavobotMobile = `${cldBase}/q_auto,f_auto,w_420/v1771022344/36c7efb5-d099-4cb1-94fe-1bd896f53cef_ivfe4n.png`;
const logoUrl = `${cldBase}/q_auto,f_auto,w_200/v1765265415/2_fxdcio.png`;
const fingerprintUrl = `${cldBase}/q_auto,f_auto,w_700/v1765571815/FOCUS_LOGO-06_2_grkja9.png`;

// Floating particles (deterministic)
const particles = Array.from({ length: 10 }, (_, i) => ({
  char: ['0', '1', '>', '<', '/', '*', '#', '@'][i % 8],
  x: (i * 37 + 13) % 100,
  y: (i * 29 + 7) % 100,
  duration: (i % 5) + 6,
  delay: (i * 1.2) % 5,
  size: (i % 4) + 12,
}));

// Links data - all nav menu items
const links = [
  {
    title: 'Bot-Camp',
    subtitle: 'הכשרת AI מקצועית - מפתחי אוטומציות וסוכני AI',
    href: '/academy',
    icon: 'fa-solid fa-graduation-cap',
    badge: 'מוביל',
    badgeClass: '',
    cardClass: 'featured',
  },
  {
    title: 'AI Ready',
    subtitle: 'יסודות AI לאנשי מקצוע - הכשרה ארגונית',
    href: '/academy/ai-ready',
    icon: 'fa-solid fa-users-gear',
    badge: 'פופולרי',
    badgeClass: 'popular',
    cardClass: 'featured',
  },
  {
    title: 'סדנת AI לעסקים',
    subtitle: 'סדנה חינמית - הרשמה פתוחה',
    href: '/ai-workshop',
    icon: 'fa-solid fa-chalkboard-user',
    badge: 'חינם',
    badgeClass: 'free',
    cardClass: 'featured',
  },
  {
    title: 'סוכני AI לעסקים',
    subtitle: 'נציגי AI חכמים - בוטים ואוטומציות',
    href: '/ai-agents',
    icon: 'fa-solid fa-robot',
    badge: '',
    badgeClass: '',
    cardClass: '',
  },
  {
    title: 'חדשות AI',
    subtitle: 'מאמרים, מדריכים וטיפים על בינה מלאכותית',
    href: '/ai-news',
    icon: 'fa-solid fa-newspaper',
    badge: '',
    badgeClass: '',
    cardClass: 'news',
  },
  {
    title: 'מרכז הכלים',
    subtitle: 'כלי AI מומלצים ומדריכים',
    href: '/tools',
    icon: 'fa-solid fa-wand-magic-sparkles',
    badge: '',
    badgeClass: '',
    cardClass: 'ai-tools',
  },
  {
    title: 'קהילת WhatsApp',
    subtitle: 'הצטרפו לקהילה שלנו - טיפים וחדשות AI',
    href: siteConfig.social.whatsappCommunity,
    icon: 'fa-brands fa-whatsapp',
    badge: '',
    badgeClass: '',
    cardClass: 'whatsapp',
    external: true,
  },
];
---

<BaseLayout title="Focus AI - Links | הקישורים שלנו" description="כל הקישורים של Focus AI - הכשרות, כלים, קהילה ועוד" image="https://res.cloudinary.com/dfudxxzlj/image/upload/b_rgb:0a0a1f,c_pad,g_east,h_630,w_1200/l_2_fxdcio/c_scale,w_150/fl_layer_apply,g_north_west,x_80,y_60/f_jpg/q_auto/v1771022344/36c7efb5-d099-4cb1-94fe-1bd896f53cef_ivfe4n.jpg">

<div class="linktree-page">
  <!-- Background Effects -->
  <div class="bg-effects">
    <div class="fingerprint-bg" style={`background-image: url('${fingerprintUrl}')`}></div>
    <div class="fingerprint-glow"></div>
    <div class="bg-orb bg-orb-1"></div>
    <div class="bg-orb bg-orb-2"></div>
    <div class="bg-orb bg-orb-3"></div>
    <div class="bg-noise"></div>
  </div>

  <!-- Scroll Progress Bar -->
  <div class="scroll-progress" id="scrollProgress"></div>

  <!-- Floating Data Particles -->
  <div class="lt-particles" aria-hidden="true">
    {particles.map((p) => (
      <span
        class="lt-particle"
        style={`left:${p.x}%;top:${p.y}%;font-size:${p.size}px;animation-duration:${p.duration}s;animation-delay:${p.delay}s`}
      >
        {p.char}
      </span>
    ))}
  </div>

  <!-- HERO SECTION (from homepage, without CTA buttons) -->
  <section class="lt-hero">
    <div class="lt-hero-content">
      <!-- Chavobot Image -->
      <div class="lt-hero-image">
        <img
          src={chavobotMobile}
          srcset={`${chavobotMobile} 420w, ${chavobot} 800w`}
          sizes="(max-width: 640px) 420px, 650px"
          alt="חבובוט - הנציג החכם של Focus AI"
          fetchpriority="high"
          decoding="async"
          width="650"
          height="650"
          class="lt-chavobot"
        />
      </div>

      <!-- Text Content -->
      <div class="lt-hero-text">
        <h1 class="lt-hero-title">
          <span class="lt-title-focus">Focus</span>
          <span class="lt-title-ai">AI</span>
        </h1>
        <p class="lt-hero-partner">Your AI Partner</p>
        <h2 class="lt-hero-subtitle">
          <span class="lt-sub-white">מחברים אנשים </span>
          <span class="lt-sub-gradient">וטכנולוגיה</span>
        </h2>
      </div>

      <!-- Social Icons -->
      <div class="social-icons">
        <a href={siteConfig.social.facebook} target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="Facebook">
          <i class="fa-brands fa-facebook-f"></i>
        </a>
        <a href={siteConfig.social.tiktok} target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="TikTok">
          <i class="fa-brands fa-tiktok"></i>
        </a>
        <a href={siteConfig.contact.whatsapp} target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="WhatsApp">
          <i class="fa-brands fa-whatsapp"></i>
        </a>
        <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="Instagram">
          <i class="fa-brands fa-instagram"></i>
        </a>
      </div>
    </div>
  </section>

  <div class="lt-container">
    <!-- Premium Homepage Link -->
    <a href="/" class="homepage-link">
      <div class="homepage-link-glow"></div>
      <div class="homepage-link-inner">
        <img src={logoUrl} alt="Focus AI" class="homepage-logo" width="56" height="56" />
        <div class="homepage-link-text">
          <span class="homepage-link-title">האתר הראשי של Focus AI</span>
          <span class="homepage-link-sub">focusai.co.il</span>
        </div>
        <i class="fa-solid fa-arrow-up-right-from-square homepage-link-icon"></i>
      </div>
    </a>

    <!-- Section Divider -->
    <div class="section-divider">
      <span>הקישורים שלנו</span>
    </div>

    <!-- Links Section -->
    <div class="links-section">
      {links.map((link) => (
        <a
          href={link.href}
          class={`link-card ${link.cardClass}`}
          target={link.external ? '_blank' : '_self'}
          rel={link.external ? 'noopener noreferrer' : undefined}
        >
          {link.badge && (
            <span class={`featured-badge ${link.badgeClass}`}>{link.badge}</span>
          )}
          <div class="link-icon">
            <i class={link.icon}></i>
          </div>
          <div class="link-content">
            <div class="link-title">{link.title}</div>
            <div class="link-subtitle">{link.subtitle}</div>
          </div>
          <i class="fa-solid fa-arrow-left link-arrow"></i>
          <div class="card-binary-overlay"></div>
        </a>
      ))}
    </div>

  </div>

  <!-- VideoTestimonials (full width) -->
  <VideoTestimonials theme="dark" badge="" />

  <div class="lt-container" style="padding-top: 0;">
    <!-- Footer -->
    <footer class="lt-footer">
      <div class="footer-text">&copy; {new Date().getFullYear()} Focus AI - כל הזכויות שמורות</div>
      <div class="footer-logo">Focus AI</div>
    </footer>
  </div>
</div>

<!-- Font Awesome - load in head for immediate icon rendering -->
<link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin slot="head" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" media="print" onload="this.media='all'" slot="head" />

<style is:global>
  /* ============================================
     LINKTREE PAGE STYLES
     ============================================ */
  /* Hide global body fingerprint watermark on this page (we have our own) */
  body:has(.linktree-page) .fingerprint-fixed {
    display: none !important;
  }

  .linktree-page {
    --lt-primary-purple: #b86cff;
    --lt-primary-pink: #ff4fd8;
    --lt-primary-gradient: linear-gradient(90deg, #b86cff 0%, #ff4fd8 100%);
    --lt-bg-dark: #050007;
    --lt-bg-dark-alt: #1b0125;
    --lt-bg-card: rgba(27, 1, 37, 0.6);
    --lt-glass-light-1: rgba(247, 240, 254, 0.08);
    --lt-glass-light-2: rgba(247, 240, 254, 0.04);
    --lt-glass-border: rgba(185, 107, 254, 0.25);
    --lt-text-light: #ffffff;
    --lt-text-muted: #d7cdef;
    --lt-stroke-light: rgba(255, 255, 255, 0.15);
    --lt-stroke-purple: rgba(185, 107, 254, 0.40);
    --lt-glow: rgba(184, 108, 255, 0.25);
    --lt-radius: 20px;
    --lt-radius-sm: 14px;

    position: relative;
    min-height: 100vh;
    overflow-x: hidden;
    background: linear-gradient(
      180deg,
      #050007 0%,
      #0a0412 15%,
      #0d0618 40%,
      #0a0412 65%,
      #080210 85%,
      #050007 100%
    );
  }

  /* Make VideoTestimonials section transparent so linktree bg shows through */
  .linktree-page section[data-vtc-theme] {
    background: transparent !important;
  }

  /* ============================================
     BACKGROUND EFFECTS
     ============================================ */
  .linktree-page .bg-effects {
    position: fixed;
    top: 0; left: 0;
    width: 100vw; height: 100vh;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .linktree-page .fingerprint-bg {
    position: fixed;
    width: 100vw; height: 100vh;
    top: 0; left: 0;
    background-size: 55% auto;
    background-repeat: no-repeat;
    background-position: center center;
    background-attachment: fixed;
    opacity: 0.06;
    filter: blur(2px);
    z-index: 1;
  }

  @media (min-width: 1024px) {
    .linktree-page .fingerprint-bg {
      opacity: 0.08;
      background-size: 45% auto;
    }
  }

  @media (max-width: 767px) {
    .linktree-page .fingerprint-bg {
      opacity: 0.06;
      background-size: 80% auto;
    }
  }

  .linktree-page .fingerprint-glow {
    position: fixed;
    width: 100vw; height: 100vh;
    top: 0; left: 0;
    background: radial-gradient(ellipse at center, rgba(184, 108, 255, 0.15) 0%, transparent 60%);
    z-index: 0;
    animation: lt-glowBreath 8s ease-in-out infinite;
  }

  @keyframes lt-glowBreath {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.6; }
  }

  .linktree-page .bg-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
    animation: lt-float 20s ease-in-out infinite;
  }

  .linktree-page .bg-orb-1 {
    width: 400px; height: 400px;
    background: radial-gradient(circle, #a855f7 0%, transparent 70%);
    top: -100px; right: -50px;
  }

  .linktree-page .bg-orb-2 {
    width: 350px; height: 350px;
    background: radial-gradient(circle, #ec4899 0%, transparent 70%);
    bottom: -100px; left: -50px;
    animation-delay: -7s;
  }

  .linktree-page .bg-orb-3 {
    width: 300px; height: 300px;
    background: radial-gradient(circle, #7c3aed 0%, transparent 70%);
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: -14s;
    opacity: 0.2;
    animation-name: lt-float3;
  }

  @keyframes lt-float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(30px, -30px) scale(1.05); }
    50% { transform: translate(-20px, 20px) scale(0.95); }
    75% { transform: translate(20px, 30px) scale(1.02); }
  }

  @keyframes lt-float3 {
    0%, 100% { transform: translate(-50%, -50%) scale(1); }
    25% { transform: translate(-45%, -55%) scale(1.05); }
    50% { transform: translate(-55%, -45%) scale(0.95); }
    75% { transform: translate(-48%, -52%) scale(1.02); }
  }

  .linktree-page .bg-noise {
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    opacity: 0.03;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
  }

  @media (max-width: 768px) {
    .linktree-page .bg-orb-1, .linktree-page .bg-orb-2 {
      opacity: 0.25;
      filter: blur(100px);
    }
    .linktree-page .bg-orb-3 { display: none; }
  }

  /* ============================================
     FLOATING PARTICLES
     ============================================ */
  .lt-particles {
    position: fixed;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
    z-index: 1;
  }

  .lt-particle {
    position: absolute;
    font-family: 'Courier New', monospace;
    color: rgba(168, 85, 247, 0.35);
    text-shadow: 0 0 8px rgba(168, 85, 247, 0.5);
    animation: lt-particleFloat linear infinite;
  }

  @keyframes lt-particleFloat {
    0%, 100% { opacity: 0; transform: translateY(0); }
    10% { opacity: 0.6; }
    90% { opacity: 0.6; }
    50% { transform: translateY(-40px); }
  }

  /* ============================================
     HERO SECTION
     ============================================ */
  .lt-hero {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 30px 20px 0;
  }

  .lt-hero-content {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Chavobot */
  .lt-hero-image {
    position: relative;
    margin-bottom: -20px;
    animation: lt-heroImageIn 1s ease-out 0.2s both;
  }

  .lt-chavobot {
    width: 90vw;
    max-width: 380px;
    height: auto;
    mask-image: linear-gradient(to bottom, transparent 0%, black 8%, black 88%, transparent 100%);
    -webkit-mask-image: linear-gradient(to bottom, transparent 0%, black 8%, black 88%, transparent 100%);
    filter: drop-shadow(0 0 40px rgba(168, 85, 247, 0.2));
  }

  @keyframes lt-heroImageIn {
    from { opacity: 0; transform: scale(0.9) translateY(20px); }
    to { opacity: 1; transform: scale(1) translateY(0); }
  }

  /* Title */
  .lt-hero-text {
    animation: lt-heroTextIn 0.8s ease-out 0.4s both;
  }

  .lt-hero-title {
    font-size: clamp(3rem, 12vw, 7rem);
    font-weight: 900;
    line-height: 0.95;
    letter-spacing: -0.04em;
    margin-bottom: 4px;
  }

  .lt-title-focus {
    color: #f5f5fa;
  }

  .lt-title-ai {
    background: linear-gradient(90deg, #a855f7, #c084fc, #e879f9);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    margin-right: 0.15em;
  }

  .lt-hero-partner {
    font-family: 'Courier New', monospace;
    font-size: clamp(0.85rem, 2.5vw, 1.1rem);
    color: rgba(144, 144, 168, 0.7);
    letter-spacing: 0.2em;
    margin-bottom: 8px;
  }

  .lt-hero-subtitle {
    font-size: clamp(1.5rem, 5vw, 2.5rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 0;
  }

  .lt-sub-white { color: #f5f5fa; }

  .lt-sub-gradient {
    background: linear-gradient(90deg, #a855f7, #c084fc, #e879f9);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  @keyframes lt-heroTextIn {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (min-width: 1024px) {
    .lt-hero { padding-top: 50px; }
    .lt-chavobot { max-width: 500px; }
    .lt-hero-image { margin-bottom: -30px; }
  }

  @media (max-width: 480px) {
    .lt-hero { padding-top: 15px; }
    .lt-chavobot { max-width: 320px; }
    .lt-hero-image { margin-bottom: -10px; }
  }

  /* ============================================
     SOCIAL ICONS
     ============================================ */
  .linktree-page .social-icons {
    display: flex;
    gap: 16px;
    justify-content: center;
    margin: 20px 0 10px;
    animation: lt-fadeIn 0.8s ease-out 0.6s both;
  }

  @keyframes lt-fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .linktree-page .social-icon {
    width: 44px; height: 44px;
    display: flex; align-items: center; justify-content: center;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--lt-glass-light-1), var(--lt-glass-light-2));
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid var(--lt-stroke-light);
    color: var(--lt-text-light);
    font-size: 18px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .linktree-page .social-icon:hover {
    transform: translateY(-3px) scale(1.05);
    background: var(--lt-primary-gradient);
    border-color: transparent;
    box-shadow: 0 8px 24px var(--lt-glow);
  }

  /* ============================================
     CONTAINER
     ============================================ */
  .lt-container {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    padding: 20px 20px 50px;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow-x: hidden;
  }

  @media (min-width: 1024px) {
    .lt-container {
      padding: 30px 60px 80px;
      max-width: 1400px;
    }
    .linktree-page .links-section {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
      max-width: 1000px;
      width: 100%;
    }
    .linktree-page .social-icons { max-width: 600px; }
    .linktree-page .section-divider { max-width: 600px; }
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .lt-container { max-width: 700px; padding: 20px 30px 60px; }
    .linktree-page .links-section { max-width: 600px; width: 100%; }
  }

  @media (max-width: 767px) {
    .lt-container { max-width: 100%; padding: 15px 15px 40px; }
    .linktree-page .links-section { width: 100%; }
  }

  /* ============================================
     PREMIUM HOMEPAGE LINK
     ============================================ */
  .linktree-page .homepage-link {
    position: relative;
    display: block;
    width: 100%;
    max-width: 550px;
    margin-bottom: 15px;
    text-decoration: none;
    border-radius: 24px;
    padding: 3px;
    background: linear-gradient(135deg, var(--lt-primary-purple), var(--lt-primary-pink), #7c3aed, var(--lt-primary-purple));
    background-size: 300% 300%;
    animation: lt-revealUp 0.8s ease-out 0.7s both, lt-gradientShift 6s ease-in-out infinite;
    opacity: 0;
    transform: translateY(30px);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .linktree-page .homepage-link:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(184, 108, 255, 0.4), 0 0 60px rgba(184, 108, 255, 0.15);
  }

  @keyframes lt-gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .linktree-page .homepage-link-glow {
    position: absolute;
    inset: -2px;
    border-radius: var(--lt-radius);
    background: linear-gradient(135deg, var(--lt-primary-purple), var(--lt-primary-pink));
    filter: blur(15px);
    opacity: 0.4;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .linktree-page .homepage-link:hover .homepage-link-glow {
    opacity: 0.7;
  }

  .linktree-page .homepage-link-inner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    padding: 22px 28px;
    background: linear-gradient(135deg, rgba(5, 0, 7, 0.95), rgba(27, 1, 37, 0.9));
    border-radius: 21px;
    transition: background 0.3s ease;
  }

  .linktree-page .homepage-link:hover .homepage-link-inner {
    background: linear-gradient(135deg, rgba(27, 1, 37, 0.95), rgba(40, 5, 55, 0.9));
  }

  .linktree-page .homepage-logo {
    width: 56px; height: 56px;
    border-radius: 14px;
    object-fit: contain;
    filter: drop-shadow(0 0 12px rgba(184, 108, 255, 0.5));
    flex-shrink: 0;
  }

  .linktree-page .homepage-link-text {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3px;
  }

  .linktree-page .homepage-link-title {
    font-size: 19px;
    font-weight: 700;
    color: var(--lt-text-light);
    transition: all 0.3s ease;
  }

  .linktree-page .homepage-link:hover .homepage-link-title {
    background: var(--lt-primary-gradient);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

