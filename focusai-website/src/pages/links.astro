<script is:inline slot="scripts">
  // ============================================
  // LINKTREE INTERACTIVE EFFECTS
  // ============================================

  document.addEventListener('DOMContentLoaded', function() {
    // --- Cursor Trail (desktop only) ---
    const cursorTrail = document.getElementById('cursorTrail');
    if (cursorTrail && window.innerWidth > 768) {
      cursorTrail.style.display = 'block';
      document.addEventListener('mousemove', function(e) {
        cursorTrail.style.left = e.clientX + 'px';
        cursorTrail.style.top = e.clientY + 'px';
      });
      document.addEventListener('mousedown', function() {
        cursorTrail.classList.add('clicking');
      });
      document.addEventListener('mouseup', function() {
        cursorTrail.classList.remove('clicking');
      });
    }

    // --- Scroll Progress Bar ---
    const scrollProgress = document.getElementById('scrollProgress');
    if (scrollProgress) {
      window.addEventListener('scroll', function() {
        var scrollTop = window.scrollY;
        var docHeight = document.documentElement.scrollHeight - window.innerHeight;
        var scrollPercent = docHeight > 0 ? scrollTop / docHeight : 0;
        scrollProgress.style.transform = 'scaleX(' + scrollPercent + ')';
      }, { passive: true });
    }

    // --- Card Build Animation (Binary/Matrix Reveal) ---
    var cards = document.querySelectorAll('.linktree-page .link-card');
    var binaryChars = '01アイウエオカキクケコ</>{}=;';

    function generateBinaryText(length) {
      var text = '';
      for (var i = 0; i < length; i++) {
        if (Math.random() < 0.1) text += '\n';
        text += binaryChars.charAt(Math.floor(Math.random() * binaryChars.length));
      }
      return text;
    }

    function revealCard(card, delay) {
      setTimeout(function() {
        var overlay = card.querySelector('.card-binary-overlay');
        if (!overlay) {
          card.classList.add('building', 'built', 'complete');
          return;
        }

        // Show card with binary overlay
        card.classList.add('building');
        overlay.classList.add('active');
        overlay.textContent = generateBinaryText(200);
        overlay.classList.add('decoding');

        // Update binary text rapidly
        var binaryInterval = setInterval(function() {
          overlay.textContent = generateBinaryText(200);
        }, 80);

        // After decoding, dissolve overlay
        setTimeout(function() {
          clearInterval(binaryInterval);
          overlay.classList.remove('decoding');
          overlay.classList.add('fade-out');
          card.classList.add('built');

          setTimeout(function() {
            overlay.classList.remove('active', 'fade-out');
            overlay.textContent = '';
            card.classList.add('complete');
          }, 500);
        }, 600);
      }, delay);
    }

    // Intersection Observer for scroll-triggered card reveal
    if ('IntersectionObserver' in window) {
      var cardObserver = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting && !entry.target.classList.contains('building')) {
            var index = Array.from(cards).indexOf(entry.target);
            revealCard(entry.target, index * 150);
            cardObserver.unobserve(entry.target);
          }
        });
      }, { threshold: 0.2 });

      cards.forEach(function(card) {
        cardObserver.observe(card);
      });
    } else {
      // Fallback: reveal all cards
      cards.forEach(function(card, i) {
        revealCard(card, i * 200);
      });
    }
  });
</script>

