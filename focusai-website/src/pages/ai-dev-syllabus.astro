<svg style="position:absolute;width:0;height:0">
  <defs>
    <filter id="grain" x="0" y="0" width="100%" height="100%">
      <feTurbulence type="fractalNoise" baseFrequency="0.65" numOctaves="4" stitchTiles="stitch"/>
      <feColorMatrix type="saturate" values="0"/>
    </filter>
  </defs>
</svg>

<style>
/* =============================================
   FOCUS AI DEV — SYLLABUS v4
   Monochrome purple + polished
   ============================================= */
*, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }

:root {
  --bg: #0a0a0f;
  --bg-card: rgba(255,255,255,0.035);
  --bg-card-solid: #12121c;
  --border: rgba(255,255,255,0.08);
  --border-accent: rgba(168,85,247,0.25);
  --purple: #a855f7;
  --purple-light: #c084fc;
  --purple-deep: #7c3aed;
  --purple-glow: rgba(168,85,247,0.15);
  --cyan: #22d3ee;
  --text: #ffffff;
  --text-mid: #ffffff;
  --text-dim: rgba(255,255,255,0.85);
  --page-w: 210mm;
  --page-h: 297mm;
  --pad: 14mm;
  --pad-x: 16mm;
}

body {
  font-family: 'Rubik', sans-serif;
  background: #04040a;
  color: var(--text);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
}

/* ---- Toolbar ---- */
.toolbar {
  position: sticky; top: 0; z-index: 1000;
  display: flex; align-items: center; justify-content: space-between;
  padding: 12px 32px;
  background: rgba(8,8,14,0.85);
  backdrop-filter: blur(20px) saturate(1.4);
  border-bottom: 1px solid rgba(255,255,255,0.06);
}
.toolbar-logo { height: 26px; opacity: 0.85; }
.toolbar-actions { display: flex; gap: 10px; align-items: center; }
.toolbar-btn {
  font-family: 'Rubik', sans-serif; font-size: 13px; font-weight: 600;
  padding: 8px 20px; border-radius: 8px; border: none; cursor: pointer;
  transition: all 0.25s ease; text-decoration: none;
  display: inline-flex; align-items: center; gap: 6px;
}
.toolbar-btn-primary {
  background: linear-gradient(135deg, var(--purple), var(--purple-deep));
  color: #fff; box-shadow: 0 4px 16px rgba(168,85,247,0.25);
}
.toolbar-btn-primary:hover { box-shadow: 0 6px 24px rgba(168,85,247,0.4); transform: translateY(-1px); }
.toolbar-btn-ghost {
  background: rgba(255,255,255,0.04); color: var(--text-mid);
  border: 1px solid rgba(255,255,255,0.08);
}
.toolbar-btn-ghost:hover { background: rgba(255,255,255,0.08); color: #fff; }

/* ---- Viewer ---- */
.viewer { display: flex; flex-direction: column; align-items: center; gap: 48px; padding: 48px 16px 120px; }

/* ---- A4 Page ---- */
.page {
  width: var(--page-w); height: var(--page-h);
  background: var(--bg); position: relative; overflow: hidden; flex-shrink: 0;
  box-shadow: 0 30px 100px rgba(0,0,0,0.6), 0 0 0 1px rgba(255,255,255,0.03), 0 0 80px rgba(168,85,247,0.03);
}
.page-inner { position: relative; z-index: 10; padding: var(--pad) var(--pad-x); height: 100%; display: flex; flex-direction: column; }

/* =============================================
   DECORATIVE LAYERS
   ============================================= */
.lyr-grid {
  position: absolute; inset: 0; z-index: 1; pointer-events: none;
  background-image:
    repeating-linear-gradient(0deg, transparent, transparent 39px, rgba(168,85,247,0.03) 39px, rgba(168,85,247,0.03) 40px),
    repeating-linear-gradient(90deg, transparent, transparent 39px, rgba(168,85,247,0.03) 39px, rgba(168,85,247,0.03) 40px);
  background-size: 40px 40px;
}
.lyr-grid::after {
  content: ''; position: absolute; inset: 0;
  background-image: radial-gradient(circle 1px at 0px 0px, rgba(168,85,247,0.08) 1px, transparent 1px);
  background-size: 40px 40px;
}

.lyr-noise {
  position: absolute; inset: 0; z-index: 5; pointer-events: none;
  opacity: 0.045; mix-blend-mode: overlay; filter: url(#grain); width: 100%; height: 100%;
}

.lyr-vig {
  position: absolute; inset: 0; z-index: 3; pointer-events: none;
  background: radial-gradient(ellipse 70% 60% at 50% 50%, transparent 35%, rgba(0,0,0,0.35) 100%);
}

.blob {
  position: absolute; border-radius: 50%; pointer-events: none; z-index: 2;
}

.corners { position: absolute; inset: 0; z-index: 6; pointer-events: none; }
.corners::before { content:''; position:absolute; top:7mm; right:7mm; width:10mm; height:10mm; border-top:1px solid rgba(168,85,247,0.15); border-right:1px solid rgba(168,85,247,0.15); }
.corners::after { content:''; position:absolute; top:7mm; left:7mm; width:10mm; height:10mm; border-top:1px solid rgba(168,85,247,0.15); border-left:1px solid rgba(168,85,247,0.15); }
.corners b { display:contents; }
.corners b::before { content:''; position:absolute; bottom:7mm; right:7mm; width:10mm; height:10mm; border-bottom:1px solid rgba(168,85,247,0.15); border-right:1px solid rgba(168,85,247,0.15); }
.corners b::after { content:''; position:absolute; bottom:7mm; left:7mm; width:10mm; height:10mm; border-bottom:1px solid rgba(168,85,247,0.15); border-left:1px solid rgba(168,85,247,0.15); }

.page-num { display: none; }
.page-footer {
  margin-top: auto;
  padding-top: 3mm;
  border-top: 1px solid rgba(168,85,247,0.1);
  text-align: center;
  font-family: 'Rubik', sans-serif;
  font-size: 9pt;
  color: var(--text-dim);
  opacity: 0.5;
  letter-spacing: 0.25em;
  z-index: 11;
  flex-shrink: 0;
}

/* ---- Glow divider ---- */
.glow-line {
  height: 1px; border: none;
  background: linear-gradient(90deg, transparent, rgba(168,85,247,0.4) 20%, rgba(168,85,247,0.6) 50%, rgba(168,85,247,0.4) 80%, transparent);
  box-shadow: 0 0 12px rgba(168,85,247,0.2);
}

/* =============================================
   GLASS CARD
   ============================================= */
.glass-card {
  background: var(--bg-card); border: 1px solid var(--border);
  border-radius: 14px; position: relative; overflow: hidden;
}
.glass-card::before {
  content: ''; position: absolute; inset: 0;
  background: linear-gradient(135deg, rgba(168,85,247,0.05) 0%, transparent 40%, transparent 70%, rgba(168,85,247,0.025) 100%);
  pointer-events: none; z-index: 0;
}
.glass-card::after {
  content: ''; position: absolute; inset: 0; border-radius: inherit; padding: 1px;
  background: linear-gradient(135deg, rgba(168,85,247,0.22), transparent 40%, transparent 60%, rgba(168,85,247,0.1));
  -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor; mask-composite: exclude;
  pointer-events: none; z-index: 1;
}
@media screen {
  .glass-card { transition: transform 0.3s ease, box-shadow 0.3s ease; }
  .glass-card:hover { transform: translateY(-1px); box-shadow: 0 8px 30px rgba(168,85,247,0.08); }
}

/* =============================================
   PAGE 1: COVER
   ============================================= */
.cover .page-inner {
  justify-content: space-between; padding-top: 12mm; padding-bottom: 10mm;
}

.cover-top { display: flex; justify-content: space-between; align-items: center; }
.cover-logo { height: 18mm; width: auto; opacity: 0.9; filter: drop-shadow(0 0 20px rgba(168,85,247,0.1)); }
.cover-uni-logo { height: 36mm; width: auto; opacity: 0.8; }

/* Fingerprint watermark on cover — left side, away from character */
.cover-fingerprint {
  position: absolute;
  top: 55%;
  left: -40%;
  transform: translateY(-50%);
  width: 170mm;
  height: auto;
  opacity: 0.04;
  pointer-events: none;
  z-index: 0;
  filter: drop-shadow(0 0 60px rgba(168,85,247,0.15));
}

/* Character mascot on cover — top-left area, behind title */
.cover-character {
  position: absolute;
  top: -5mm;
  right: 5mm;
  width: 160mm;
  height: 170mm;
  object-fit: cover;
  object-position: center 15%;
  opacity: 0.35;
  z-index: 1;
  pointer-events: none;
  -webkit-mask-image: radial-gradient(ellipse 85% 85% at 55% 40%, rgba(0,0,0,0.85) 15%, transparent 60%);
  mask-image: radial-gradient(ellipse 85% 85% at 55% 40%, rgba(0,0,0,0.85) 15%, transparent 60%);
}

/* ---- Neural Network Tech Logos ---- */
.nn-tech {
  position: relative;
  margin-top: 4mm;
  padding: 2mm 0;
  overflow: visible;
}
.nn-mesh {
  position: absolute;
  inset: -4mm -8mm;
  width: calc(100% + 16mm);
  height: calc(100% + 8mm);
  z-index: 0;
  pointer-events: none;
  opacity: 0.8;
}
.nn-row {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  gap: 6mm;
  position: relative;
  z-index: 1;
}
.nn-row + .nn-row { margin-top: 2mm; }
.nn-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1mm;
}
.nn-circle {
  width: 17mm;
  height: 17mm;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 3mm;
  position: relative;
  background: linear-gradient(145deg, #1a1a2e, #0e0e1a);
  flex-shrink: 0;
  box-shadow: 0 4px 16px rgba(0,0,0,0.5), 0 0 25px rgba(168,85,247,0.12);
}
.nn-circle::after {
  content: '';
  position: absolute;
  inset: -2px;
  border-radius: 50%;
  background: conic-gradient(from 0deg, #a855f7, #c084fc, #e879f9, #c084fc, #a855f7);
  z-index: -1;
  opacity: 0.55;
}
.nn-circle::before {
  content: '';
  position: absolute;
  inset: 2px;
  border-radius: 50%;
  background:
    radial-gradient(circle at 28% 18%, rgba(255,255,255,0.9) 0%, rgba(255,255,255,0.3) 20%, transparent 45%),
    radial-gradient(circle at 35% 28%, #ffffff 0%, #f4f4fa 25%, #eaeaf4 45%, #e2e2ee 65%, #dcdce8 100%);
  z-index: 0;
  box-shadow:
    inset 0 3px 10px rgba(0,0,0,0.1),
    inset 0 -2px 6px rgba(168,85,247,0.06),
    inset 0 1px 1px rgba(255,255,255,0.95);
}
.nn-circle img {
  position: relative;
  z-index: 1;
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  filter: drop-shadow(0 1px 2px rgba(0,0,0,0.12));
}
.nn-circle.nn-lg {
  width: 21mm;
  height: 21mm;
  padding: 4mm;
  box-shadow: 0 5px 20px rgba(0,0,0,0.5), 0 0 30px rgba(168,85,247,0.15);
}
.nn-circle.nn-lg::after { opacity: 0.7; }
.nn-circle.nn-xl {
  width: 24mm;
  height: 24mm;
  padding: 4.5mm;
  box-shadow: 0 6px 24px rgba(0,0,0,0.55), 0 0 40px rgba(168,85,247,0.2);
}
.nn-circle.nn-xl::after {
  opacity: 0.85;
  background: conic-gradient(from 0deg, #a855f7, #7c3aed, #c084fc, #e879f9, #c084fc, #a855f7);
}
.nn-lbl {
  font-family: 'Rubik', sans-serif;
  font-size: 12pt;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  letter-spacing: 0.03em;
}
.nn-row-sm { gap: 3mm; }
.nn-row-sm .nn-lbl { font-size: 12pt; }
.nn-title {
  font-size: 12pt; color: #fff; font-weight: 700; text-align: center;
  display: block; margin-top: 5mm; margin-bottom: 2mm;
  letter-spacing: 0.03em;
}

.cover-center {
  flex: 1; display: flex; flex-direction: column; align-items: center;
  justify-content: center; text-align: center; gap: 0;
}

.cover-pre {
  font-family: 'Rubik', sans-serif; font-size: 12pt; color: var(--purple);
  letter-spacing: 0.3em; text-transform: uppercase; margin-bottom: 5mm; opacity: 0.8;
}

.cover-title {
  font-size: 60pt; font-weight: 900; line-height: 0.92; color: #fff;
  letter-spacing: -0.04em; text-shadow: 0 0 60px rgba(168,85,247,0.1);
}
.cover-title .gradient {
  background: linear-gradient(135deg, #e0b3ff 0%, #c084fc 25%, #a855f7 50%, #7c3aed 100%);
  -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;
}

.cover-line {
  width: 70mm; height: 2px; margin: 6mm auto; border-radius: 1px;
  background: linear-gradient(90deg, transparent, var(--purple), transparent);
  box-shadow: 0 0 20px rgba(168,85,247,0.35), 0 0 50px rgba(168,85,247,0.1);
  position: relative;
}
.cover-line::after {
  content: ''; position: absolute; left: 50%; top: 50%;
  transform: translate(-50%,-50%) rotate(45deg);
  width: 5px; height: 5px; background: var(--purple-light);
  box-shadow: 0 0 8px var(--purple);
}

.cover-subtitle { font-size: 16pt; font-weight: 700; color: #fff; letter-spacing: 0.05em; margin-bottom: 2mm; }
.cover-desc { font-size: 12pt; color: var(--text-mid); max-width: 135mm; line-height: 1.7; }

/* Cover info (simple title + details) */
.cover-info { text-align: center; margin-top: 6mm; }
.cover-info-title {
  font-size: 14pt; font-weight: 700; color: #fff;
  letter-spacing: 0.02em; margin-bottom: 2mm;
}
.cover-info-details {
  font-size: 12pt; color: #fff; letter-spacing: 0.02em;
}

/* Academic subtitle (under "מאפס לפרודקשן") */
.cover-academic-sub {
  font-size: 12pt; color: var(--text-mid); text-align: center; line-height: 1.6;
  margin-top: 2mm; letter-spacing: 0.02em;
}

/* Bottom section */
.cover-bottom { display: flex; flex-direction: column; align-items: center; gap: 3mm; }
.cover-contact {
  display: flex; gap: 8mm; align-items: center;
  font-family: 'Rubik', sans-serif; font-size: 12pt;
  color: #fff; letter-spacing: 0.06em;
}
.cover-contact .sep { width: 1px; height: 4mm; background: rgba(255,255,255,0.15); }

/* =============================================
   PAGE HEADER (shared)
   ============================================= */
.pg-header { margin-bottom: 6mm; }
.pg-header .glow-line { margin-bottom: 4mm; }
.pg-label {
  font-family: 'Rubik', sans-serif; font-size: 12pt; color: var(--purple);
  letter-spacing: 0.2em; text-transform: uppercase; margin-bottom: 2mm; opacity: 0.8;
}
.pg-title { font-size: 22pt; font-weight: 800; color: #fff; line-height: 1.2; }

/* =============================================
   PAGE 2: ABOUT
   ============================================= */
.about-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 3mm; }

.about-card { padding: 3.5mm 4mm; display: flex; flex-direction: column; }
.about-icon {
  width: 10mm; height: 10mm; border-radius: 8px;
  background: linear-gradient(135deg, rgba(168,85,247,0.15), rgba(168,85,247,0.05));
  border: 1px solid var(--border-accent);
  display: flex; align-items: center; justify-content: center; margin-bottom: 3mm;
}
.about-icon svg { width: 5mm; height: 5mm; color: var(--purple-light); }

.about-card h3 { font-size: 12pt; font-weight: 700; color: #fff; margin-bottom: 1.5mm; }
.about-card ul { list-style: none; display: flex; flex-direction: column; gap: 1.5mm; }
.about-card li {
  font-size: 12pt; color: var(--text-mid); padding-right: 4mm;
  position: relative; line-height: 1.55;
}
.about-card li::before {
  content: ''; position: absolute; right: 0; top: 2.2mm;
  width: 1.5mm; height: 1.5mm; border-radius: 50%;
  background: var(--purple); box-shadow: 0 0 4px var(--purple);
}

.about-intro {
  font-size: 12pt; color: var(--text-dim); line-height: 1.7;
  display: flex; flex-direction: column; gap: 2.5mm;
}
.about-intro p { margin: 0; }

.format-bar { margin-top: auto; padding: 3mm 5mm; }
.format-inner {
  display: grid; grid-template-columns: repeat(4, 1fr); gap: 3mm;
  position: relative; z-index: 2;
}
.fmt-item { text-align: center; }
.fmt-item .num {
  font-family: 'Rubik', sans-serif; font-size: 18pt; font-weight: 700;
  color: var(--purple); display: block; line-height: 1.2;
}
.fmt-item .label { font-size: 12pt; color: var(--text-dim); display: block; margin-top: 1mm; }

/* ---- Instructors mini-section ---- */
.instructors { margin-top: 3mm; }
.instructors-title {
  font-size: 12pt; font-weight: 700; color: #fff;
  margin-bottom: 3mm; text-align: center;
}
.instructors-row {
  display: flex; justify-content: center; gap: 10mm; align-items: flex-start;
}
.instructor {
  display: flex; flex-direction: column; align-items: center; gap: 1.5mm;
  width: 42mm;
}
.instructor-img {
  width: 24mm; height: 34mm; border-radius: 4mm;
  object-fit: cover;
  border: 2px solid rgba(168,85,247,0.3);
  box-shadow: 0 4px 20px rgba(0,0,0,0.4), 0 0 0 3px rgba(168,85,247,0.08);
  -webkit-mask-image: linear-gradient(to bottom, black 70%, transparent 100%);
  mask-image: linear-gradient(to bottom, black 70%, transparent 100%);
}
.instructor-name {
  font-size: 12pt; font-weight: 600; color: #fff; text-align: center;
}
.instructor-role {
  font-size: 12pt; color: var(--text-dim); text-align: center; line-height: 1.3;
}
.guest-badge {
  font-size: 12pt; color: var(--purple-light);
  opacity: 0.45; text-align: center; margin-top: 0.5mm;
  font-style: italic;
}

/* =============================================
   PAGES 3-4: MODULES
   ============================================= */
.mod-grid { display: flex; flex-direction: column; gap: 4mm; flex: 1; }

.mod-card {
  padding: 5mm 5mm 5mm 5mm; display: grid;
  grid-template-columns: auto 1fr; gap: 4mm; flex: 1; align-content: start;
}

/* Right accent bar */
.mod-accent {
  position: absolute; right: 0; top: 10%; bottom: 10%; width: 3px;
  background: linear-gradient(180deg, var(--purple-light), var(--purple), var(--purple-deep));
  border-radius: 2px; z-index: 5;
  box-shadow: 0 0 12px rgba(168,85,247,0.25);
}

.mod-num-col { display: flex; flex-direction: column; align-items: center; gap: 2mm; padding-top: 1mm; }

.mod-ring {
  --progress: 0;
  width: 13mm; height: 13mm; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  background:
    radial-gradient(closest-side, var(--bg) 74%, transparent 75%),
    conic-gradient(var(--purple) calc(var(--progress) * 1%), rgba(168,85,247,0.1) 0%);
  box-shadow: 0 0 14px rgba(168,85,247,0.15);
}
.mod-ring .n {
  font-family: 'Rubik', sans-serif; font-size: 12pt; font-weight: 700; color: var(--purple-light);
}
.mod-hrs {
  font-family: 'Rubik', sans-serif; font-size: 12pt; color: var(--text-dim); text-align: center;
}

.mod-body { position: relative; z-index: 2; }
.mod-body h3 { font-size: 12pt; font-weight: 700; color: #fff; margin-bottom: 0.5mm; }
.mod-meta {
  font-family: 'Rubik', sans-serif; font-size: 12pt; color: var(--purple);
  margin-bottom: 3mm; letter-spacing: 0.04em; opacity: 0.8;
}
.mod-items { display: grid; grid-template-columns: 1fr 1fr; gap: 1.5mm 4mm; list-style: none; }
.mod-items li {
  font-size: 12pt; color: var(--text-mid); padding-right: 3.5mm;
  position: relative; line-height: 1.5;
}
.mod-items li::before {
  content: '\2713'; position: absolute; right: 0;
  color: var(--purple); font-size: 12pt; font-weight: 700;
  text-shadow: 0 0 5px rgba(168,85,247,0.35);
}

.mod-total { margin-top: auto; padding: 3.5mm 5mm; }
.mod-total-inner {
  display: flex; align-items: center; justify-content: space-between;
  position: relative; z-index: 2;
}
.mod-total span { font-size: 12pt; color: var(--text-mid); }
.mod-total strong { font-family: 'Rubik', sans-serif; font-size: 13pt; color: var(--purple); }

/* =============================================
   PAGE 5: BONUSES
   ============================================= */
.bonus-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 4mm; flex: 1; }

.bonus-card { padding: 4.5mm; display: flex; flex-direction: column; gap: 2mm; }
.bonus-icon {
  width: 10mm; height: 10mm; border-radius: 10px;
  background: linear-gradient(135deg, rgba(168,85,247,0.15), rgba(168,85,247,0.05));
  border: 1px solid var(--border-accent);
  display: flex; align-items: center; justify-content: center;
  position: relative; z-index: 2;
}
.bonus-icon svg { width: 5mm; height: 5mm; color: var(--purple-light); stroke-width: 1.5; }

.bonus-card h4 { font-size: 12pt; font-weight: 700; color: #fff; position: relative; z-index: 2; }
