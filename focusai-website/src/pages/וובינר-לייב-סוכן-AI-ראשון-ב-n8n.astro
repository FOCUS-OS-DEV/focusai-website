    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            zoom: 1 !important;
        }

        :root {
            --primary: #8b5cf6;
            --primary-dark: #7c3aed;
            --secondary: #06b6d4;
            --accent: #f59e0b;
            --success: #10b981;
            --live-red: #ef4444;
            --dark: #0f0f1a;
            --darker: #080810;
            --card-bg: rgba(255, 255, 255, 0.03);
            --card-border: rgba(255, 255, 255, 0.08);
            --text: #ffffff;
            --text-muted: rgba(255, 255, 255, 0.6);
            --glow-primary: rgba(139, 92, 246, 0.4);
            --glow-secondary: rgba(6, 182, 212, 0.4);
        }

        body {
            font-family: 'Heebo', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--darker);
            min-height: 100vh;
            color: var(--text);
            overflow-x: hidden;
        }

        /* Animated Background */
        .bg-animation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            overflow: hidden;
        }

        .bg-animation::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background:
                radial-gradient(circle at 20% 80%, var(--glow-primary) 0%, transparent 40%),
                radial-gradient(circle at 80% 20%, var(--glow-secondary) 0%, transparent 40%),
                radial-gradient(circle at 40% 40%, rgba(239, 68, 68, 0.1) 0%, transparent 30%);
            animation: bgMove 20s ease-in-out infinite;
        }

        @keyframes bgMove {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            33% { transform: translate(2%, 2%) rotate(1deg); }
            66% { transform: translate(-1%, 1%) rotate(-1deg); }
        }

        /* Floating particles */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            overflow: hidden;
        }

        .particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: var(--primary);
            border-radius: 50%;
            opacity: 0.3;
            animation: float 15s infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(100vh) rotate(0deg); opacity: 0; }
            10% { opacity: 0.3; }
            90% { opacity: 0.3; }
            100% { transform: translateY(-100vh) rotate(720deg); opacity: 0; }
        }

        .container {
            max-width: 700px;
            margin: 0 auto;
            padding: 15px;
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Header */
        header {
            text-align: center;
            padding: 28px 12px 20px;
            position: relative;
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .logo {
            height: 48px;
            width: auto;
            filter: drop-shadow(0 0 20px rgba(139, 92, 246, 0.3));
            margin-bottom: 20px;
            transition: all 0.3s ease;
            display: block;
        }

        .logo:hover {
            transform: scale(1.05);
            filter: drop-shadow(0 0 30px rgba(139, 92, 246, 0.5));
        }

        /* LIVE Badge */
        .live-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            background: linear-gradient(135deg, var(--live-red), #dc2626);
            padding: 8px 20px;
            border-radius: 30px;
            font-size: 0.85rem;
            font-weight: 700;
            margin-bottom: 16px;
            box-shadow: 0 4px 20px rgba(239, 68, 68, 0.4);
            animation: livePulse 2s ease-in-out infinite;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .live-badge .live-dot {
            width: 10px;
            height: 10px;
            background: white;
            border-radius: 50%;
            animation: liveDot 1.5s ease-in-out infinite;
        }

        @keyframes livePulse {
            0%, 100% { box-shadow: 0 4px 20px rgba(239, 68, 68, 0.4); }
            50% { box-shadow: 0 4px 35px rgba(239, 68, 68, 0.6), 0 0 60px rgba(239, 68, 68, 0.2); }
        }

        @keyframes liveDot {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.3; }
        }

        /* Event Date Badge */
        .event-date-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            flex-wrap: wrap;
            justify-content: center;
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.15), rgba(6, 182, 212, 0.1));
            border: 1px solid rgba(139, 92, 246, 0.3);
            padding: 10px 18px;
            border-radius: 16px;
            margin-bottom: 22px;
            font-size: 0.9rem;
            font-weight: 600;
        }

        .event-date-badge i {
            color: var(--secondary);
            font-size: 1.1rem;
        }

        .event-date-badge .separator {
            width: 1px;
            height: 20px;
            background: var(--card-border);
        }

        header h1 {
            font-size: 1.9rem;
            font-weight: 800;
            background: linear-gradient(135deg, #fff 0%, var(--primary) 50%, var(--secondary) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            color: transparent;
            margin-bottom: 12px;
            line-height: 1.2;
        }

        .n8n-highlight {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 16px;
        }

        .n8n-highlight img {
            height: 22px;
            width: auto;
        }

        .n8n-highlight span {
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--text-muted);
        }

        header .subtitle {
            font-size: 0.95rem;
            color: var(--text-muted);
            font-weight: 400;
            line-height: 1.6;
            max-width: 500px;
            margin: 0 auto;
        }

        header .subtitle strong {
            color: var(--text);
        }

        /* No Recording Badge */
        .no-recording-badge {
            display: inline-flex;
            flex-direction: column;
            align-items: center;
            gap: 6px;
            margin-top: 14px;
            position: relative;
            animation: noRecPulse 3s ease-in-out infinite;
        }

        .no-recording-badge i {
            font-size: 1.6rem;
            color: var(--live-red);
            filter: drop-shadow(0 0 8px rgba(239, 68, 68, 0.5));
            animation: noRecShake 4s ease-in-out infinite;
        }

        .no-rec-text {
            font-size: 2rem;
            font-weight: 900;
            color: transparent;
            background: linear-gradient(135deg, var(--live-red), #ff6b6b, var(--live-red));
            background-size: 200% auto;
            -webkit-background-clip: text;
            background-clip: text;
            animation: noRecShimmer 3s linear infinite;
            letter-spacing: 1px;
        }

        .no-rec-line {
            display: block;
            width: 0;
            height: 3px;
            background: linear-gradient(90deg, transparent, var(--live-red), #ff6b6b, var(--live-red), transparent);
            border-radius: 2px;
            animation: noRecLineGrow 2s ease-out 0.5s forwards;
            box-shadow: 0 0 10px rgba(239, 68, 68, 0.4);
        }

        @keyframes noRecShimmer {
            0% { background-position: 200% center; }
            100% { background-position: -200% center; }
        }

        @keyframes noRecLineGrow {
            0% { width: 0; }
            100% { width: 100%; }
        }

        @keyframes noRecShake {
            0%, 100% { transform: rotate(0deg); }
            10% { transform: rotate(-5deg); }
            20% { transform: rotate(5deg); }
            30% { transform: rotate(0deg); }
        }

        @keyframes noRecPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.03); }
        }

        /* Hero Character */
        .hero-character {
            margin: 10px 0 16px;
        }

        .hero-character img {
            height: 180px;
            width: auto;
            filter: drop-shadow(0 10px 30px rgba(139, 92, 246, 0.3));
            animation: heroFloat 4s ease-in-out infinite;
        }

        @keyframes heroFloat {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-8px); }
        }

        /* Countdown Timer */
        .countdown-section {
            width: 100%;
            margin-bottom: 25px;
        }

        .countdown-label {
            text-align: center;
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-bottom: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .countdown-timer {
            display: flex;
            justify-content: center;
            gap: 12px;
            direction: ltr;
        }

        .countdown-unit {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--card-border);
            border-radius: 14px;
            padding: 10px 12px;
            min-width: 60px;
            text-align: center;
        }

        .countdown-unit .number {
            font-size: 1.4rem;
            font-weight: 800;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: block;
            line-height: 1;
        }

        .countdown-unit .label {
            font-size: 0.7rem;
            color: var(--text-muted);
            margin-top: 4px;
            display: block;
        }

        .countdown-expired {
            text-align: center;
            padding: 20px;
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--live-red);
        }

        /* Main Card */
        .main-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 22px 16px;
            margin-bottom: 25px;
            border: 1px solid var(--card-border);
            box-shadow:
                0 25px 50px -12px rgba(0, 0, 0, 0.5),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
            position: relative;
            overflow: hidden;
            width: 100%;
        }

        .main-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--live-red), var(--primary), var(--secondary));
        }

        /* Section title */
        .section-title {
            font-size: 1.15rem;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            text-align: center;
        }

        .section-title i {
            color: var(--primary);
            font-size: 1.2rem;
        }

        .section-title::before,
        .section-title::after {
            content: '';
            flex: 1;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--card-border), transparent);
            max-width: 80px;
        }

        /* Speakers Section */
        .speakers-section {
            margin-bottom: 30px;
        }

        .speakers-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 12px;
        }

        .speaker-card {
            background: rgba(139, 92, 246, 0.05);
            border: 1px solid rgba(139, 92, 246, 0.15);
            border-radius: 16px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s ease;
        }

        .speaker-card:hover {
            background: rgba(139, 92, 246, 0.1);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(139, 92, 246, 0.15);
        }

        .speaker-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 12px;
            font-size: 3rem;
            font-weight: 800;
            color: white;
            box-shadow: 0 4px 15px rgba(139, 92, 246, 0.3);
            overflow: hidden;
        }

        .speaker-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Hosts vs Presenters sub-labels */
        .speakers-sublabel {
            text-align: center;
            font-size: 0.78rem;
            color: var(--text-muted);
            margin-bottom: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .speaker-name {
            font-size: 1.05rem;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 4px;
        }

        .speaker-role {
            font-size: 0.8rem;
            color: var(--secondary);
            font-weight: 600;
            margin-bottom: 6px;
        }

        .speaker-business {
            font-size: 0.78rem;
            color: var(--text-muted);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
        }

        .speaker-business i {
            font-size: 0.7rem;
            color: var(--primary);
        }

        .speaker-badge {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            margin-top: 10px;
            padding: 4px 12px;
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.15), rgba(6, 182, 212, 0.1));
            border: 1px solid rgba(139, 92, 246, 0.25);
            border-radius: 20px;
            font-size: 0.7rem;
            font-weight: 600;
            color: var(--primary);
        }

        .speaker-badge i {
            font-size: 0.65rem;
        }

        /* What you'll see */
        /* Customer Journey Narrative */
        .journey-section {
            margin-bottom: 36px;
            padding: 0 4px;
        }

        .journey-opener {
            font-size: 1.6rem;
            font-weight: 300;
            color: rgba(255, 255, 255, 0.85);
            line-height: 1.7;
            margin-bottom: 24px;
            font-style: italic;
        }

        .journey-opener strong {
            font-weight: 700;
            color: var(--text);
            font-style: normal;
        }

        .journey-highlight {
            display: block;
            font-size: 1.3rem;
            font-weight: 800;
            color: transparent;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            background-clip: text;
            margin: 28px 0 16px;
            line-height: 1.5;
        }

        .journey-text {
            font-size: 1rem;
            color: rgba(255, 255, 255, 0.7);
            line-height: 1.9;
            margin-bottom: 18px;
        }

        .journey-text strong {
            color: var(--text);
            font-weight: 600;
        }

        .journey-text em {
            color: var(--primary);
            font-style: normal;
            font-weight: 500;
        }

        .journey-pullquote {
            font-size: 1.15rem;
            font-weight: 600;
            color: var(--text);
            padding: 16px 20px;
            border-right: 3px solid var(--primary);
            background: rgba(139, 92, 246, 0.06);
            border-radius: 0 12px 12px 0;
            margin: 24px 0;
            line-height: 1.7;
        }

        .journey-divider {
            width: 60px;
            height: 2px;
            background: linear-gradient(90deg, var(--primary), transparent);
            margin: 28px 0;
            border: none;
        }

        .journey-chapter {
            font-size: 0.75rem;
            font-weight: 700;
            letter-spacing: 3px;
            text-transform: uppercase;
            color: var(--secondary);
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .journey-chapter::before {
            content: '';
            width: 8px;
            height: 8px;
            background: var(--secondary);
            border-radius: 50%;
            display: inline-block;
        }

        .journey-big {
            font-size: 1.8rem;
            font-weight: 900;
            color: var(--text);
            line-height: 1.4;
            margin-bottom: 14px;
        }

        .journey-steps {
            display: flex;
            flex-direction: column;
            gap: 14px;
            margin: 20px 0;
        }

        .journey-step {
            display: flex;
            align-items: baseline;
            gap: 10px;
            font-size: 1rem;
            color: rgba(255, 255, 255, 0.75);
            line-height: 1.7;
        }

        .journey-step .step-marker {
            font-size: 1.4rem;
            line-height: 1;
        }

        .journey-step strong {
            color: var(--text);
        }


        /* Exclusive Benefits */
        .benefits-section {
            margin-bottom: 30px;
            padding: 20px;
            background: linear-gradient(135deg, rgba(245, 158, 11, 0.08), rgba(139, 92, 246, 0.05));
            border-radius: 16px;
            border: 1px solid rgba(245, 158, 11, 0.25);
        }

        .benefits-header {
            text-align: center;
            margin-bottom: 16px;
        }

        .benefits-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(135deg, var(--accent), #d97706);
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 700;
            color: #0f0f1a;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .benefits-title {
            font-size: 1rem;
            font-weight: 700;
            color: var(--text);
        }

        .benefits-list {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .benefit-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 16px;
            background: rgba(255, 255, 255, 0.03);
            border-radius: 12px;
            border: 1px solid var(--card-border);
        }

        .benefit-item i {
            font-size: 1.2rem;
            color: var(--accent);
            flex-shrink: 0;
        }

        .benefit-item span {
            font-size: 0.9rem;
            color: var(--text);
            font-weight: 500;
        }

        /* Target Audience */
        .audience-note {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 15px 18px;
            background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(139, 92, 246, 0.05));
            border-radius: 12px;
            margin-bottom: 30px;
            border: 1px solid rgba(6, 182, 212, 0.2);
        }

        .audience-note i {
            font-size: 1.4rem;
            color: var(--secondary);
            flex-shrink: 0;
        }

        .audience-note p {
            font-size: 0.9rem;
            color: var(--text);
            line-height: 1.5;
        }

        .audience-note strong {
            color: var(--secondary);
        }

        /* Form Section */
        .form-section {
            padding-top: 25px;
            border-top: 1px solid var(--card-border);
        }

        .form-header {
            text-align: center;
            margin-bottom: 25px;
        }

        .form-title {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 8px;
            color: var(--text);
            background: linear-gradient(135deg, var(--text) 0%, var(--primary) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .form-subtitle {
            font-size: 0.85rem;
            color: var(--text-muted);
        }

        .form-row {
            display: flex;
