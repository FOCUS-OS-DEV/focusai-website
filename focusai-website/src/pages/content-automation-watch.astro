    }

    .cta-subtitle {
      color: var(--text-muted);
      font-size: 0.9rem;
      margin-bottom: 25px;
    }

    .cta-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .cta-card {
