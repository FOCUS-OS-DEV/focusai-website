      align-items: center;
      gap: 15px;
      padding: 18px;
      background: rgba(255, 255, 255, 0.02);
      border: 1px solid var(--card-border);
      border-radius: 14px;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .cta-card:hover {
      background: rgba(16, 185, 129, 0.1);
      border-color: var(--primary);
      transform: translateY(-3px);
    }

