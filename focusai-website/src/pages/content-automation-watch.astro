  <style>
    *{margin:0;padding:0;box-sizing:border-box}
    html{zoom:1!important}

    :root {
      --primary: #a855f7;
      --primary-dark: #9333ea;
      --primary-light: #c084fc;
      --cta: #ef4444;
      --cta-dark: #dc2626;
      --cta-darker: #b91c1c;
      --dark: #0a0a0f;
      --darker: #07070c;
      --card-bg: rgba(255,255,255,0.03);
      --card-border: rgba(255,255,255,0.08);
      --text: #f0f0f5;
      --text-secondary: rgba(255,255,255,0.75);
      --text-dim: rgba(255,255,255,0.45);
      --glow: rgba(168,85,247,0.2);
    }

    body {
      font-family: 'Heebo', sans-serif;
      background: var(--dark);
      color: var(--text);
      overflow-x: hidden;
      min-height: 100vh;
    }

    body::before {
      content: '';
      position: fixed;
      inset: 0;
      z-index: -1;
      background:
        radial-gradient(ellipse 70% 50% at 20% 80%, var(--glow) 0%, transparent 70%),
        radial-gradient(ellipse 60% 40% at 85% 15%, rgba(168,85,247,0.08) 0%, transparent 70%);
      animation: ambientShift 25s ease-in-out infinite alternate;
    }

    @keyframes ambientShift {
      0% { opacity: 1; }
      50% { opacity: 0.7; }
      100% { opacity: 1; }
    }

    body::after {
      content: '';
      position: fixed;
      inset: 0;
      z-index: -1;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
      pointer-events: none;
    }

    .page {
      max-width: 900px;
      margin: 0 auto;
      padding: 0 20px;
    }

    /* ===== BACK LINK ===== */
    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 14px 0 0;
      font-size: 0.85rem;
      color: var(--text-dim);
      text-decoration: none;
      transition: color 0.3s;
    }
    .back-link:hover { color: var(--primary-light); }

    /* ===== HEADER ===== */
    header {
      text-align: center;
      padding: 24px 0 20px;
    }

    .logo {
      height: 80px;
      width: auto;
      filter: drop-shadow(0 0 16px var(--glow));
      margin-bottom: 24px;
      transition: transform 0.3s;
    }
    .logo:hover { transform: scale(1.05); }

    .welcome-text {
      color: var(--primary-light);
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 8px;
    }

    header h1 {
      font-size: 2rem;
      font-weight: 800;
      margin-bottom: 10px;
    }

    .subtitle {
      color: var(--text-secondary);
      font-size: 0.95rem;
      line-height: 1.6;
    }
    .subtitle strong { color: var(--text); }

    /* ===== VIDEO ===== */
    .video-wrapper {
      background: var(--card-bg);
      border-radius: 20px;
      border: 1px solid var(--card-border);
      overflow: hidden;
      margin-bottom: 28px;
      box-shadow: 0 25px 50px -12px rgba(0,0,0,0.5);
    }

    .video-container {
      position: relative;
      padding: 56.25% 0 0 0;
    }

    .video-container iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    /* ===== TOOLS SECTION ===== */
    .tools-section {
      text-align: center;
      padding: 24px;
      background: var(--card-bg);
      border: 1px solid var(--card-border);
      border-radius: 18px;
      margin-bottom: 28px;
    }

    .tools-label {
      font-size: 0.7rem;
      font-weight: 700;
      color: var(--primary);
      letter-spacing: 2.5px;
      text-transform: uppercase;
      margin-bottom: 10px;
    }

    .tools-section h3 {
      font-size: 1.2rem;
      font-weight: 700;
      margin-bottom: 18px;
    }

    .tools-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    .tool-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      padding: 12px 16px;
      border-radius: 12px;
      font-size: 0.9rem;
      font-weight: 600;
      text-decoration: none;
      color: var(--text);
      background: rgba(255,255,255,0.04);
      border: 1px solid rgba(255,255,255,0.1);
      transition: all 0.3s;
    }
    .tool-btn:hover {
      transform: translateY(-2px);
    }
    .tool-btn i {
      font-size: 1rem;
      flex-shrink: 0;
    }

    .tool-btn.n8n:hover {
      border-color: #ea4b71;
      color: #ea4b71;
      background: rgba(234,75,113,0.08);
      box-shadow: 0 4px 16px rgba(234,75,113,0.2);
    }
    .tool-btn.openrouter:hover {
      border-color: #6366f1;
      color: #6366f1;
      background: rgba(99,102,241,0.08);
      box-shadow: 0 4px 16px rgba(99,102,241,0.2);
    }
    .tool-btn.supabase:hover {
      border-color: #3ecf8e;
      color: #3ecf8e;
      background: rgba(62,207,142,0.08);
      box-shadow: 0 4px 16px rgba(62,207,142,0.2);
    }
    .tool-btn.gcloud:hover {
      border-color: #4285f4;
      color: #4285f4;
      background: rgba(66,133,244,0.08);
      box-shadow: 0 4px 16px rgba(66,133,244,0.2);
    }
    .tool-btn.aistudio:hover {
      border-color: #fbbc04;
      color: #fbbc04;
      background: rgba(251,188,4,0.08);
      box-shadow: 0 4px 16px rgba(251,188,4,0.2);
    }
    .tool-btn.perplexity:hover {
      border-color: #20b8cd;
      color: #20b8cd;
      background: rgba(32,184,205,0.08);
      box-shadow: 0 4px 16px rgba(32,184,205,0.2);
    }

    @media (max-width: 700px) {
      .tools-grid { grid-template-columns: 1fr; }
    }

    /* ===== INSTRUCTOR NOTE ===== */
    .instructor-note {
      display: flex;
      align-items: center;
      gap: 16px;
      padding: 20px;
      background: rgba(168,85,247,0.05);
      border: 1px solid rgba(168,85,247,0.15);
      border-radius: 16px;
      margin-bottom: 28px;
    }

    .instructor-avatar {
      width: 56px;
      height: 56px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid rgba(168,85,247,0.3);
      flex-shrink: 0;
    }

    .instructor-info h4 {
      font-size: 1rem;
      font-weight: 700;
      margin-bottom: 2px;
    }

    .instructor-info p {
      font-size: 0.85rem;
      color: var(--text-secondary);
      line-height: 1.5;
    }

    /* ===== BOT-CAMP SECTION ===== */
    .botcamp-section {
      background: var(--card-bg);
      backdrop-filter: blur(16px);
      border: 1px solid var(--card-border);
      border-radius: 22px;
      padding: 34px 24px;
      margin-bottom: 24px;
      border-top: 2px solid var(--primary);
    }

    .botcamp-header {
      text-align: center;
      margin-bottom: 24px;
    }

    .botcamp-header h2 {
      font-size: 2rem;
      font-weight: 800;
      margin-bottom: 10px;
    }

    .botcamp-header p {
      font-size: 1rem;
      color: var(--text-secondary);
      line-height: 1.6;
    }

    .botcamp-partners {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 48px;
      margin: 24px auto 8px;
      max-width: 500px;
    }

    .botcamp-partners img {
      height: auto;
      max-height: 100px;
      width: 200px;
      object-fit: contain;
      opacity: 0.85;
      transition: opacity 0.3s;
    }
    .botcamp-partners img:hover { opacity: 1; }

    .botcamp-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
      margin-bottom: 24px;
    }

    .botcamp-item {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 12px 14px;
      background: rgba(168,85,247,0.04);
      border: 1px solid rgba(168,85,247,0.1);
      border-radius: 12px;
    }

    .botcamp-item i {
      color: var(--primary-light);
      font-size: 1rem;
      flex-shrink: 0;
      width: 20px;
      text-align: center;
    }

    .botcamp-item span {
      font-size: 0.9rem;
      font-weight: 500;
      color: var(--text);
      line-height: 1.4;
    }

    .botcamp-badges {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 8px;
      margin-bottom: 20px;
    }

    .botcamp-badge {
      padding: 6px 16px;
      background: rgba(168,85,247,0.08);
      border: 1px solid rgba(168,85,247,0.2);
      border-radius: 20px;
      font-size: 0.82rem;
      font-weight: 600;
      color: var(--primary-light);
    }

    .botcamp-cta {
      text-align: center;
      margin-top: 20px;
    }

    .btn-botcamp {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 16px 36px;
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
      color: #fff;
      border-radius: 14px;
      font-size: 1.1rem;
      font-weight: 700;
      text-decoration: none;
      transition: all 0.3s;
      box-shadow: 0 4px 20px rgba(168,85,247,0.3);
    }
    .btn-botcamp:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 30px rgba(168,85,247,0.4);
    }

    .botcamp-note {
      text-align: center;
      margin-top: 14px;
      font-size: 0.88rem;
      color: var(--text-dim);
    }
    .botcamp-note strong { color: var(--cta); font-weight: 600; }

    /* ===== WHATSAPP COMMUNITY ===== */
    .whatsapp-cta {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      padding: 14px 26px;
      background: rgba(37,211,102,0.08);
      border: 1px solid rgba(37,211,102,0.25);
      border-radius: 14px;
      color: var(--text);
      text-decoration: none;
      font-weight: 600;
      font-size: 1rem;
      transition: all 0.3s;
      margin-bottom: 24px;
      text-align: center;
    }
    .whatsapp-cta:hover {
      background: rgba(37,211,102,0.15);
      transform: translateY(-2px);
    }
    .whatsapp-cta i { font-size: 1.3rem; color: #25d366; }

    /* ===== FOOTER ===== */
    .site-footer {
      text-align: center;
      padding: 28px 0;
      border-top: 1px solid var(--card-border);
      margin-top: 10px;
    }

    .footer-social {
      display: flex;
      justify-content: center;
      gap: 12px;
      margin-bottom: 18px;
    }

    .footer-social a {
      width: 40px;
      height: 40px;
      background: rgba(255,255,255,0.05);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--text-dim);
      text-decoration: none;
      transition: all 0.3s;
      font-size: 1rem;
    }
    .footer-social a:hover {
      background: rgba(168,85,247,0.2);
      color: var(--text);
    }

    .footer-links {
      display: flex;
      justify-content: center;
      gap: 18px;
      margin-bottom: 14px;
      flex-wrap: wrap;
    }

    .footer-links a {
      color: var(--text-dim);
      text-decoration: none;
      font-size: 0.82rem;
      display: inline-flex;
      align-items: center;
      gap: 5px;
      transition: color 0.3s;
    }
    .footer-links a:hover { color: var(--primary-light); }

    .footer-legal {
      font-size: 0.75rem;
      color: var(--text-dim);
      opacity: 0.7;
      line-height: 1.5;
      max-width: 600px;
      margin: 0 auto;
    }
    .footer-legal a { color: var(--primary-light); text-decoration: none; }

    /* ===== BONUS SECTION ===== */
    .bonus-section {
      text-align: center;
      padding: 28px 24px;
      background: var(--card-bg);
      border: 1px solid var(--card-border);
      border-radius: 18px;
      margin-bottom: 28px;
    }

    .bonus-label {
      font-size: 0.7rem;
      font-weight: 700;
      color: var(--primary);
      letter-spacing: 2.5px;
      text-transform: uppercase;
      margin-bottom: 10px;
    }

    .bonus-section h3 {
      font-size: 1.3rem;
      font-weight: 700;
      margin-bottom: 8px;
    }

    .bonus-section p {
      font-size: 0.9rem;
      color: var(--text-secondary);
      line-height: 1.7;
      margin-bottom: 18px;
    }

    .bonus-buttons {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
    }

    .btn-bonus {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      padding: 11px 28px;
      border-radius: 10px;
      font-size: 0.9rem;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s;
      min-width: 240px;
    }
    .btn-bonus:hover { transform: translateY(-2px); }

    .btn-bonus.chatgpt {
      background: rgba(168,85,247,0.06);
      border: 1px solid rgba(168,85,247,0.2);
      color: var(--primary-light);
    }
    .btn-bonus.chatgpt:hover {
      background: rgba(168,85,247,0.12);
      box-shadow: 0 4px 16px rgba(168,85,247,0.2);
    }

    .btn-bonus.gemini {
      background: rgba(37,211,102,0.06);
      border: 1px solid rgba(37,211,102,0.2);
      color: #4ade80;
    }
    .btn-bonus.gemini:hover {
      background: rgba(37,211,102,0.12);
      box-shadow: 0 4px 16px rgba(37,211,102,0.2);
    }

    /* ===== TESTIMONIALS WRAPPER ===== */
    .testimonials-wrapper {
      margin: 8px -20px 28px;
    }

    /* ===== AI NEWS SECTION ===== */
    .news-section {
      text-align: center;
      padding: 24px;
      background: var(--card-bg);
      border: 1px solid var(--card-border);
      border-radius: 18px;
      margin-bottom: 24px;
    }

    .news-label {
      font-size: 0.7rem;
      font-weight: 700;
      color: #f59e0b;
      letter-spacing: 2.5px;
      text-transform: uppercase;
      margin-bottom: 10px;
    }

    .news-section h3 {
      font-size: 1.2rem;
      font-weight: 700;
      margin-bottom: 8px;
    }

    .news-section p {
      font-size: 0.88rem;
      color: var(--text-secondary);
      line-height: 1.7;
      margin-bottom: 16px;
    }

    .btn-news {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 10px 24px;
      background: rgba(245,158,11,0.06);
      border: 1px solid rgba(245,158,11,0.2);
      border-radius: 10px;
      color: #fbbf24;
      font-size: 0.9rem;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s;
    }
    .btn-news:hover {
      background: rgba(245,158,11,0.12);
      transform: translateY(-2px);
      box-shadow: 0 4px 16px rgba(245,158,11,0.2);
    }

    /* ===== SOCIAL SECTION ===== */
    .social-section {
      text-align: center;
      margin-bottom: 24px;
    }

    .social-section p {
      font-size: 0.9rem;
      color: var(--text-dim);
      margin-bottom: 14px;
    }

    .social-buttons {
      display: flex;
      justify-content: center;
      gap: 12px;
      flex-wrap: wrap;
    }

    .social-btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 10px 22px;
      border-radius: 50px;
      font-size: 0.85rem;
      font-weight: 600;
      text-decoration: none;
      color: var(--text);
      background: rgba(255,255,255,0.04);
      border: 1px solid rgba(255,255,255,0.1);
      transition: all 0.35s;
    }
    .social-btn:hover { transform: translateY(-2px); }

    .social-btn.tiktok:hover {
      border-color: #ff0050;
      color: #ff0050;
      box-shadow: 0 4px 16px rgba(255,0,80,0.2);
    }
    .social-btn.instagram:hover {
      border-color: #E4405F;
      color: #E4405F;
      box-shadow: 0 4px 16px rgba(228,64,95,0.2);
    }
    .social-btn.facebook:hover {
      border-color: #1877F2;
      color: #1877F2;
      box-shadow: 0 4px 16px rgba(24,119,242,0.2);
    }

    /* ===== RESPONSIVE ===== */
    @media (min-width: 768px) {
      header h1 { font-size: 2.4rem; }
      .botcamp-header h2 { font-size: 2.3rem; }
    }

    @media (max-width: 700px) {
      .page { padding: 0 14px; }
      header h1 { font-size: 1.6rem; }
      .botcamp-grid { grid-template-columns: 1fr; }
      .botcamp-section { padding: 26px 18px; }
      .instructor-note {
        flex-direction: column;
        text-align: center;
      }
    }
