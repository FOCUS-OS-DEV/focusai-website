      document.querySelectorAll('.reveal').forEach(el => {
        gsap.to(el,{opacity:1,y:0,duration:.5,ease:'power2.out',
          scrollTrigger:{trigger:el,start:'top 88%',once:true}
        });
      });

      ['.pain-card','.sol-card','.portal-item','.how-step','.whom','.guest'].forEach(sel => {
        gsap.utils.toArray(sel).forEach((el,i) => {
          gsap.from(el,{opacity:0,y:18,duration:.4,ease:'power2.out',
            scrollTrigger:{trigger:el,start:'top 93%',once:true},delay:i*.05
          });
        });
      });

      gsap.utils.toArray('.tl-item').forEach((el,i) => {
        gsap.from(el,{opacity:0,x:24,duration:.4,ease:'power2.out',
          scrollTrigger:{trigger:el,start:'top 90%',once:true},delay:i*.06
        });
      });
    }
    window.addEventListener('load', initG);
  </script>
