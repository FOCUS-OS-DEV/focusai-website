(function(){
var canvas=document.getElementById('nnCanvas'),wrap=document.getElementById('nnWrap'),grid=document.getElementById('nnGrid');
if(!canvas||!wrap||!grid)return;
var ctx=canvas.getContext('2d'),dpr=window.devicePixelRatio||1;
var cw,ch,nodePos=[],conns=[],pulses=[],time=0,running=false,posCount=0,nnVisible=true;
new IntersectionObserver(function(e){nnVisible=e[0].isIntersecting;if(nnVisible&&running)frame()},{threshold:0}).observe(wrap);
var MAXD=isMobile?240:500;
function resize(){
var r=wrap.getBoundingClientRect();cw=r.width;ch=r.height;
canvas.width=cw*dpr;canvas.height=ch*dpr;
ctx.setTransform(dpr,0,0,dpr,0,0);
getPos();
}
function getPos(){
nodePos=[];conns=[];
var wr=wrap.getBoundingClientRect();
grid.querySelectorAll('.nn-node .nn-logo').forEach(function(logo){
var r=logo.getBoundingClientRect();
nodePos.push({x:r.left+r.width/2-wr.left,y:r.top+r.height/2-wr.top,rad:r.width/2});
});
for(var i=0;i<nodePos.length;i++){
for(var j=i+1;j<nodePos.length;j++){
var dx=nodePos[i].x-nodePos[j].x,dy=nodePos[i].y-nodePos[j].y,d=Math.sqrt(dx*dx+dy*dy);
if(d<MAXD)conns.push({a:i,b:j,d:d});
}}
}
function frame(){
if(!running||!nnVisible)return;
posCount++;
if(posCount%10===0)getPos();
ctx.clearRect(0,0,cw,ch);
time+=.016;
/* Draw lines center-to-center */
for(var i=0;i<conns.length;i++){
var c=conns[i],a=nodePos[c.a],b=nodePos[c.b];
if(!a||!b)continue;
var al=.18*(1-c.d/MAXD)+.04*Math.sin(time*1.2+i*.5);
ctx.beginPath();ctx.moveTo(a.x,a.y);ctx.lineTo(b.x,b.y);
ctx.strokeStyle='rgba(168,85,247,'+Math.max(.06,al)+')';
ctx.lineWidth=1;ctx.stroke();
}
/* Purple pulses traveling along lines */
for(var p=pulses.length-1;p>=0;p--){
var pl=pulses[p];pl.t+=pl.s;
if(pl.t>1){pulses.splice(p,1);continue}
var c=conns[pl.ci];if(!c)continue;
var a=nodePos[c.a],b=nodePos[c.b];
if(!a||!b){pulses.splice(p,1);continue}
var px=a.x+(b.x-a.x)*pl.t,py=a.y+(b.y-a.y)*pl.t;
var pa=.85*(1-Math.pow(Math.abs(pl.t-.5)*2,2));
ctx.beginPath();ctx.arc(px,py,3,0,6.28);
ctx.fillStyle='rgba(200,160,252,'+pa+')';ctx.fill();
ctx.beginPath();ctx.arc(px,py,8,0,6.28);
ctx.fillStyle='rgba(168,85,247,'+pa*.25+')';ctx.fill();
}
if(conns.length&&Math.random()<.14)
pulses.push({ci:Math.floor(Math.random()*conns.length),t:0,s:.005+Math.random()*.01});
requestAnimationFrame(frame);
}
