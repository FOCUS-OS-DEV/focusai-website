---
// AI Fullstack — Neon Brutalist
// Black · Neon Green · Space Mono · Hebrew RTL
---
<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AI Fullstack | Focus AI — בנה אפליקציות מלאות עם AI</title>
  <meta name="description" content="94 שעות. 18 מודולים. VS Code + Claude Code. בנה אפליקציות fullstack מהיום - בלי רקע בתכנות.">
  <link rel="icon" href="https://res.cloudinary.com/dfudxxzlj/image/upload/v1765265408/5_aeotfd.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;700;800;900&family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js" defer></script>
  <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js" defer></script>
  <style>
    :root {
      --bg:    #000000;
      --bg1:   #0a0510;
      --neon:  #a855f7;
      --term:  #39ff14;
      --pink:  #ff006e;
      --cyan:  #00f5ff;
      --amber: #ffd60a;
      --text:  #ede8ff;
      --muted: #9080a8;
      --dim:   rgba(168,85,247,0.06);
      --b:     rgba(168,85,247,0.25);
      --mono: 'Space Mono', monospace;
    }
    *{margin:0;padding:0;box-sizing:border-box}
    html{direction:rtl;scroll-behavior:smooth}
    body{
      font-family:'Heebo',sans-serif;
      background:var(--bg);
      color:var(--text);
      overflow-x:hidden;
    }

    /* ── SCAN LINES ── */
    body::after{
      content:'';
      position:fixed;inset:0;
      background:repeating-linear-gradient(0deg,transparent,transparent 3px,rgba(0,0,0,0.18) 3px,rgba(0,0,0,0.18) 4px);
      pointer-events:none;z-index:9999;opacity:.4;
    }

    .rel{position:relative;z-index:1}
    .mono{font-family:var(--mono)}

    /* ── NAV ── */
    .nav{
      position:sticky;top:0;z-index:200;
      background:#000;
      border-bottom:1px solid var(--neon);
    }
    .nav-in{
      max-width:1280px;margin:0 auto;padding:0 32px;
      height:48px;display:flex;align-items:center;gap:0;
    }
    .nav-logo{
      font-family:var(--mono);font-size:13px;font-weight:700;
      color:var(--neon);padding:0 20px 0 0;
      border-left:1px solid var(--b);text-decoration:none;
      white-space:nowrap;letter-spacing:.05em;
    }
    .nav-links{display:flex;flex:1;align-items:stretch}
    .nav-link{
      font-family:var(--mono);font-size:11px;color:var(--muted);
      padding:0 16px;text-decoration:none;
      border-left:1px solid rgba(57,255,20,0.1);
      display:flex;align-items:center;
      transition:color .15s,background .15s;
      white-space:nowrap;letter-spacing:.04em;
    }
    .nav-link:hover{color:var(--neon);background:var(--dim)}
    .nav-cta{
      font-family:var(--mono);font-size:12px;font-weight:700;
      background:var(--neon);color:#000;padding:0 22px;
      text-decoration:none;display:flex;align-items:center;
      margin-right:auto;letter-spacing:.05em;
      transition:opacity .15s;white-space:nowrap;
    }
    .nav-cta:hover{opacity:.85}
    @media(max-width:720px){
      .nav-links{display:none}
      .nav-cta{padding:0 16px;font-size:11px}
    }

    /* ── HERO ── */
    .hero{
      min-height:calc(100vh - 48px);
      max-width:1280px;margin:0 auto;padding:64px 32px 48px;
      display:grid;grid-template-columns:1fr 420px;gap:64px;align-items:center;
    }
    @media(max-width:960px){.hero{grid-template-columns:1fr;gap:40px;padding:48px 24px 40px;min-height:auto}}

    .hero-num{
      font-family:var(--mono);font-size:11px;color:var(--muted);
      letter-spacing:.15em;margin-bottom:20px;
    }
    .hero-num::before{content:'// ';color:var(--neon)}

    .hero-h1{
      font-size:clamp(3rem,7vw,6rem);
      font-weight:900;line-height:1;letter-spacing:-.03em;
      margin-bottom:12px;
    }
    .hero-h1 .hl{color:var(--neon)}
    .hero-h1 .en{
      font-family:var(--mono);font-size:.65em;
      display:block;color:var(--neon);letter-spacing:-.01em;
      font-weight:700;
    }

    @keyframes glitch{
      0%,89%,100%{text-shadow:none}
      90%{text-shadow:3px 0 var(--pink),-3px 0 var(--cyan)}
      92%{text-shadow:-4px 0 var(--pink),4px 0 var(--cyan)}
      94%{text-shadow:2px 0 var(--neon)}
      96%{text-shadow:-2px 0 var(--pink),2px 0 var(--cyan)}
    }
    .hero-h1{animation:glitch 8s ease-in-out infinite}

    .hero-rule{height:1px;background:var(--neon);margin:20px 0;opacity:.4}
    .hero-sub{font-size:1rem;color:var(--muted);line-height:1.75;margin-bottom:36px;max-width:520px}
    .hero-stats{
      display:flex;gap:0;margin-bottom:36px;
      border:1px solid var(--b);
    }
    .hs{
      flex:1;padding:14px 16px;border-left:1px solid var(--b);
      display:flex;flex-direction:column;gap:3px;
    }
    .hs:last-child{border-left:none}
    .hs-val{font-family:var(--mono);font-size:1.5rem;font-weight:700;color:var(--neon);line-height:1}
    .hs-lab{font-family:var(--mono);font-size:9px;color:var(--muted);letter-spacing:.1em}

    .hero-btns{display:flex;gap:12px;flex-wrap:wrap}
    .btn-neon{
      font-family:var(--mono);font-size:13px;font-weight:700;
      background:var(--neon);color:#000;padding:13px 28px;
      text-decoration:none;letter-spacing:.04em;
      transition:opacity .15s,transform .15s;display:inline-flex;align-items:center;gap:8px;
    }
    .btn-neon:hover{opacity:.85;transform:translateY(-1px)}
    .btn-ghost{
      font-family:var(--mono);font-size:13px;
      border:1px solid var(--b);color:var(--muted);padding:13px 24px;
      text-decoration:none;letter-spacing:.04em;
      transition:all .15s;display:inline-flex;align-items:center;gap:8px;
    }
    .btn-ghost:hover{border-color:var(--neon);color:var(--neon)}

    /* ── HERO TERMINAL ── */
    .hterm{border:1px solid var(--neon);background:#000;position:relative;overflow:hidden}
    .hterm::before{
      content:'';position:absolute;inset:0;
      background:repeating-linear-gradient(0deg,transparent,transparent 2px,rgba(57,255,20,0.015) 2px,rgba(57,255,20,0.015) 4px);
      pointer-events:none;z-index:0;
    }
    .hterm-bar{
      position:relative;z-index:1;
      display:flex;align-items:center;gap:8px;
      padding:8px 14px;border-bottom:1px solid var(--b);
      background:rgba(57,255,20,0.04);
    }
    .hterm-title{font-family:var(--mono);font-size:10px;color:var(--muted);flex:1;letter-spacing:.05em}
    .hterm-status{
      width:7px;height:7px;background:var(--term);
      box-shadow:0 0 6px var(--term);
      animation:blink .9s step-end infinite;
    }
    @keyframes blink{0%,100%{opacity:1}50%{opacity:0}}
    .hterm-body{padding:18px 16px;font-family:var(--mono);font-size:12px;line-height:1.9;position:relative;z-index:1}
    .ht{display:flex;gap:8px}
    .ht-p{color:var(--term);flex-shrink:0}
    .ht-t{color:var(--text)}
    .ht-o{color:var(--muted);padding-right:16px}
    .ht-s{color:var(--term)}
    .ht-c{color:var(--muted);font-style:italic}
    .ht-cursor{display:inline-block;width:8px;height:13px;background:var(--term);vertical-align:middle;animation:blink .9s step-end infinite;box-shadow:0 0 8px var(--term)}

    /* ── SECTION COMMON ── */
    .s-wrap{max-width:1280px;margin:0 auto;padding:80px 32px}
    @media(max-width:768px){.s-wrap{padding:56px 24px}}
    .s-rule{width:100%;height:1px;background:var(--b)}
    .s-header{margin-bottom:52px}
    .s-eyebrow{
      font-family:var(--mono);font-size:10px;letter-spacing:.15em;
      text-transform:uppercase;color:var(--neon);margin-bottom:12px;
      display:flex;align-items:center;gap:8px;
    }
    .s-eyebrow::before{content:'[ ';color:var(--muted)}
    .s-eyebrow::after{content:' ]';color:var(--muted)}
    .s-h2{
      font-size:clamp(2rem,4vw,3.2rem);font-weight:900;
      line-height:1.05;letter-spacing:-.02em;
    }
    .s-sub{font-size:1rem;color:var(--muted);line-height:1.7;margin-top:12px;max-width:600px}

    /* ── PAIN ── */
    .pain-grid{
      display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));
      gap:1px;background:rgba(255,0,110,0.2);
      border:1px solid rgba(255,0,110,0.3);margin-top:40px;
    }
    .pain-card{
      background:#000;padding:28px 22px;
      transition:background .2s;
    }
    .pain-card:hover{background:rgba(255,0,110,0.06)}
    .pain-num{font-family:var(--mono);font-size:9px;color:rgba(255,0,110,0.5);letter-spacing:.1em;margin-bottom:12px}
    .pain-icon{font-size:22px;margin-bottom:12px}
    .pain-title{font-size:15px;font-weight:700;margin-bottom:8px;color:var(--text)}
    .pain-desc{font-size:14px;color:var(--muted);line-height:1.7}

    /* ── SOLUTION ── */
    .sol-grid{
      display:grid;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));
      gap:1px;background:var(--b);
      border:1px solid var(--b);margin-top:40px;
    }
    .sol-card{background:#000;padding:28px 22px;transition:background .2s}
    .sol-card:hover{background:var(--dim)}
    .sol-num{font-family:var(--mono);font-size:9px;color:var(--muted);letter-spacing:.1em;margin-bottom:14px}
    .sol-title{font-size:15px;font-weight:700;margin-bottom:8px;color:var(--neon)}
    .sol-desc{font-size:14px;color:var(--muted);line-height:1.7}

    /* ── TIMELINE ── */
    .tl{margin-top:48px;display:flex;flex-direction:column;gap:0;border:1px solid var(--b)}
    .tl-item{
      display:grid;grid-template-columns:100px 1fr;gap:0;
      border-bottom:1px solid var(--b);
      transition:background .2s;
    }
    .tl-item:last-child{border-bottom:none}
    .tl-item:hover{background:var(--dim)}
    .tl-week{
      font-family:var(--mono);font-size:10px;color:var(--neon);
      padding:20px 16px;border-left:1px solid var(--b);
      display:flex;align-items:flex-start;justify-content:center;
      writing-mode:vertical-lr;transform:rotate(180deg);
      letter-spacing:.1em;
    }
    @media(max-width:640px){.tl-item{grid-template-columns:60px 1fr}.tl-week{font-size:9px;padding:16px 8px}}
    .tl-content{padding:20px 24px}
    .tl-title{font-size:15px;font-weight:700;margin-bottom:6px}
    .tl-desc{font-size:14px;color:var(--muted);line-height:1.7;margin-bottom:10px}
    .tl-tags{display:flex;flex-wrap:wrap;gap:6px}
    .tl-tag{
      font-family:var(--mono);font-size:9px;
      padding:3px 8px;border:1px solid var(--b);
      color:var(--muted);letter-spacing:.05em;
    }

    /* ── SYLLABUS ── */
    .syl-wrap{border:1px solid var(--neon);margin-top:40px;overflow:hidden}
    .syl-bar{
      background:rgba(168,85,247,0.06);border-bottom:1px solid var(--b);
      padding:9px 16px;display:flex;align-items:center;gap:8px;
    }
    .syl-bar-title{font-family:var(--mono);font-size:10px;color:var(--muted);letter-spacing:.05em}
    .syl-pane{display:grid;grid-template-columns:220px 1fr;min-height:380px}
    @media(max-width:640px){.syl-pane{grid-template-columns:1fr}.syl-detail{display:none}}
    .syl-tree{border-left:1px solid var(--b);overflow-y:auto;max-height:400px}
    .syl-item{
      display:flex;align-items:center;gap:8px;
      padding:8px 14px;font-family:var(--mono);font-size:11px;
      color:var(--muted);cursor:pointer;
      transition:all .15s;border-bottom:1px solid rgba(57,255,20,0.06);
      border-right:2px solid transparent;
    }
    .syl-item:hover,.syl-item.active{color:var(--neon);background:var(--dim);border-right-color:var(--neon)}
    .syl-item-num{color:rgba(168,85,247,0.45);font-size:9px;flex-shrink:0}
    .syl-detail{padding:24px;border-left:1px solid var(--b)}
    .syl-d-num{font-family:var(--mono);font-size:9px;color:var(--neon);margin-bottom:8px;letter-spacing:.1em}
    .syl-d-title{font-size:17px;font-weight:700;margin-bottom:10px}
    .syl-d-desc{font-size:14px;color:var(--muted);line-height:1.75;margin-bottom:16px}
    .syl-topics{display:flex;flex-direction:column;gap:7px}
    .syl-topic{
      display:flex;align-items:center;gap:8px;
      font-family:var(--mono);font-size:11px;color:var(--muted);
    }
    .syl-topic::before{content:'▸';color:var(--neon)}

    /* ── TRACKS ── */
    .tracks-grid{display:grid;grid-template-columns:1fr 1fr;gap:1px;background:var(--b);border:1px solid var(--b);margin-top:40px}
    @media(max-width:640px){.tracks-grid{grid-template-columns:1fr}}
    .track{background:#000;padding:32px 24px;transition:background .2s}
    .track:hover{background:var(--dim)}
    .track.featured{background:rgba(168,85,247,0.05)}
    .track-icon{font-size:26px;margin-bottom:16px}
    .track-label{font-family:var(--mono);font-size:9px;color:var(--neon);letter-spacing:.12em;margin-bottom:10px}
    .track-title{font-size:19px;font-weight:800;margin-bottom:8px}
    .track-sub{font-size:14px;color:var(--muted);margin-bottom:18px;line-height:1.7}
    .track-feats{display:flex;flex-direction:column;gap:8px}
    .track-feat{display:flex;align-items:flex-start;gap:8px;font-size:14px}
    .track-feat-chk{font-family:var(--mono);color:var(--neon);flex-shrink:0;font-size:11px;margin-top:1px}

    /* ── PORTAL ── */
    .portal-grid{
      display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));
      gap:1px;background:var(--b);border:1px solid var(--b);margin-top:40px;
    }
    .portal-item{background:#000;padding:22px;transition:background .2s}
    .portal-item:hover{background:var(--dim)}
    .portal-num{font-family:var(--mono);font-size:9px;color:var(--muted);letter-spacing:.1em;margin-bottom:10px}
    .portal-title{font-size:14px;font-weight:700;margin-bottom:6px;color:var(--text)}
    .portal-desc{font-size:13px;color:var(--muted);line-height:1.65}

    /* ── HOW ── */
    .how-grid{
      display:grid;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));
      gap:1px;background:var(--b);border:1px solid var(--b);margin-top:40px;
    }
    .how-step{background:#000;padding:28px 22px;transition:background .2s}
    .how-step:hover{background:var(--dim)}
    .how-n{font-family:var(--mono);font-size:36px;font-weight:700;color:rgba(168,85,247,0.18);line-height:1;margin-bottom:14px}
    .how-icon{font-size:24px;margin-bottom:12px}
    .how-title{font-size:15px;font-weight:700;margin-bottom:8px}
    .how-desc{font-size:14px;color:var(--muted);line-height:1.7}

    /* ── FOR WHOM ── */
    .whom-grid{
      display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));
      gap:1px;background:var(--b);border:1px solid var(--b);margin-top:40px;
    }
    .whom{background:#000;padding:22px;display:flex;gap:12px;transition:background .2s}
    .whom:hover{background:var(--dim)}
    .whom-ico{font-family:var(--mono);font-size:10px;color:var(--neon);letter-spacing:.05em;flex-shrink:0;padding:4px 7px;border:1px solid var(--b);background:var(--dim);line-height:1;align-self:flex-start;white-space:nowrap}
    .whom-title{font-size:14px;font-weight:700;margin-bottom:5px}
    .whom-desc{font-size:13px;color:var(--muted);line-height:1.65}

    /* ── INSTRUCTORS ── */
    .inst-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(360px,1fr));gap:1px;background:var(--b);border:1px solid var(--b);margin-top:40px}
    @media(max-width:640px){.inst-grid{grid-template-columns:1fr}}
    .inst-card{background:#000;display:flex;transition:background .2s}
    .inst-card:hover{background:var(--dim)}
    .inst-photo{width:130px;flex-shrink:0;object-fit:cover;filter:grayscale(60%) contrast(1.1)}
    @media(max-width:480px){.inst-card{flex-direction:column}.inst-photo{width:100%;height:160px}}
    .inst-body{padding:22px;flex:1}
    .inst-role{font-family:var(--mono);font-size:9px;color:var(--neon);letter-spacing:.12em;margin-bottom:8px}
    .inst-name{font-size:19px;font-weight:800;margin-bottom:10px}
    .inst-bio{font-size:14px;color:var(--muted);line-height:1.7;margin-bottom:14px}
    .inst-tags{display:flex;flex-wrap:wrap;gap:6px}
    .inst-tag{font-family:var(--mono);font-size:9px;padding:3px 8px;border:1px solid var(--b);color:var(--muted);letter-spacing:.05em}

    /* ── GUESTS ── */
    .guests-grid{
      display:grid;grid-template-columns:repeat(auto-fit,minmax(180px,1fr));
      gap:1px;background:var(--b);border:1px solid var(--b);margin-top:40px;
    }
    .guest{background:#000;padding:20px;text-align:center;transition:background .2s}
    .guest:hover{background:var(--dim)}
    .guest-av{width:48px;height:48px;background:var(--dim);border:1px solid var(--b);display:flex;align-items:center;justify-content:center;font-family:var(--mono);font-size:11px;font-weight:700;color:var(--neon);letter-spacing:.05em;margin:0 auto 12px}
    .guest-name{font-size:13px;font-weight:700;margin-bottom:3px}
    .guest-role{font-size:12px;color:var(--muted);margin-bottom:8px}
    .guest-topic{font-family:var(--mono);font-size:9px;color:var(--neon);letter-spacing:.05em}

    /* ── FAQ ── */
    .faq-list{margin-top:40px;display:flex;flex-direction:column;gap:0;border:1px solid var(--b);max-width:860px}
    .faq-item{border-bottom:1px solid var(--b)}
    .faq-item:last-child{border-bottom:none}
    .faq-q{
      padding:18px 20px;font-size:14px;font-weight:600;
      cursor:pointer;display:flex;justify-content:space-between;align-items:center;gap:12px;
      user-select:none;transition:background .15s;
    }
    .faq-q:hover{background:var(--dim)}
    .faq-arr{font-family:var(--mono);font-size:11px;color:var(--neon);flex-shrink:0;transition:transform .25s}
    .faq-item.open .faq-arr{transform:rotate(180deg)}
    .faq-a{display:none;padding:0 20px 18px;font-size:14px;color:var(--muted);line-height:1.75;border-top:1px solid var(--b)}
    .faq-item.open .faq-a{display:block}
    .faq-item.open .faq-q{color:var(--neon)}

    /* ── PRICING ── */
    .price-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(280px,1fr));gap:1px;background:var(--b);border:1px solid var(--b);margin-top:40px;max-width:820px}
    .price-card{background:#000;padding:32px 24px;transition:background .2s}
    .price-card.featured{background:rgba(57,255,20,0.04)}
    .price-label{font-family:var(--mono);font-size:9px;letter-spacing:.12em;color:var(--muted);margin-bottom:16px;text-transform:uppercase}
    .price-label.f{color:var(--neon)}
    .price-amt{font-family:var(--mono);font-size:2.6rem;font-weight:700;color:var(--text);line-height:1;margin-bottom:6px}
    .price-card.featured .price-amt{color:var(--neon)}
    .price-vat{font-family:var(--mono);font-size:10px;color:var(--muted);margin-bottom:20px}
    .price-feats{display:flex;flex-direction:column;gap:9px;margin-bottom:24px}
    .price-feat{display:flex;align-items:flex-start;gap:8px;font-size:14px}
    .price-chk{font-family:var(--mono);color:var(--neon);flex-shrink:0;font-size:11px}
    .price-btn{
      display:block;text-align:center;padding:13px;
      font-family:var(--mono);font-size:12px;font-weight:700;
      text-decoration:none;letter-spacing:.06em;transition:all .15s;
    }
    .price-btn.primary{background:var(--neon);color:#000}
    .price-btn.primary:hover{opacity:.85}
    .price-btn.ghost{border:1px solid var(--b);color:var(--muted)}
    .price-btn.ghost:hover{border-color:var(--neon);color:var(--neon)}

    /* ── REGISTER ── */
    .reg-section{padding:80px 32px}
    .reg-inner{max-width:640px;margin:0 auto}
