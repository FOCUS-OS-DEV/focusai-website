---
/**
 * Bot-Camp Syllabus Page - Light Theme Document Viewer
 * Mobile-first with fullscreen zoom support
 * Direct link: /bot-camp-syllabus
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';

const syllabusImages = [
  'https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_1200/v1770470074/111_kyis5b.jpg',
  'https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_1200/v1770470080/222_enxevc.jpg',
  'https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_1200/v1770470082/333_odscrk.jpg',
  'https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_1200/v1770470083/444_icwizs.jpg',
  'https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_1200/v1770470076/222_2_trdefs.jpg',
  'https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_1200/v1770470088/555_djukfo.jpg'
];

const totalPages = syllabusImages.length;
---

<BaseLayout
  title="סילבוס Bot-Camp | Focus AI Academy"
  description="סילבוס מפורט של תוכנית Bot-Camp - הכשרת מפתחי סוכני AI ואוטומציות עסקיות בשיתוף אוניברסיטת חיפה"
>
  <Header slot="header" theme="light" currentPath="/academy" />

  <div class="syllabus-viewer" id="syllabusViewer">
    <!-- Top Bar -->
    <div class="sv-topbar">
      <div class="sv-topbar-inner">
        <a href="/academy" class="sv-back">
          ← Bot-Camp
        </a>

        <div class="sv-counter">
          <span class="sv-counter-current" id="counterCurrent">1</span>
          <span class="sv-counter-sep">/</span>
          <span>{totalPages}</span>
        </div>

        <div class="sv-topbar-actions">
          <!-- Zoom button -->
          <button class="sv-zoom-btn" id="zoomBtn" aria-label="הגדלה">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8" />
              <line x1="21" y1="21" x2="16.65" y2="16.65" />
              <line x1="11" y1="8" x2="11" y2="14" />
              <line x1="8" y1="11" x2="14" y2="11" />
            </svg>
          </button>
          <a href="/academy#pricing" class="sv-cta">
            להרשמה
          </a>
        </div>
      </div>
    </div>

    <!-- Main Viewer Area -->
    <div class="sv-main" id="svMain">
      <!-- Navigation Arrow - Previous (RTL: right side) -->
      <button class="sv-nav sv-nav-prev" id="prevBtn" aria-label="עמוד קודם" disabled>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 18l6-6-6-6" />
        </svg>
      </button>

      <!-- Document Display -->
      <div class="sv-document" id="svDocument">
        <div class="sv-pages-track" id="pagesTrack">
          {syllabusImages.map((img, idx) => (
            <div class={`sv-page ${idx === 0 ? 'visible' : ''}`} data-page={idx}>
              <img
                src={img}
                alt={`סילבוס Bot-Camp - עמוד ${idx + 1}`}
                class="sv-page-img"
                loading={idx < 2 ? 'eager' : 'lazy'}
                draggable="false"
              />
            </div>
          ))}
        </div>
      </div>

      <!-- Navigation Arrow - Next (RTL: left side) -->
      <button class="sv-nav sv-nav-next" id="nextBtn" aria-label="עמוד הבא">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M15 18l-6-6 6-6" />
        </svg>
      </button>
    </div>

    <!-- Bottom Bar - Page Selector -->
    <div class="sv-bottombar">
      <div class="sv-pages-selector" id="pagesSelector">
        {syllabusImages.map((img, idx) => (
          <button
            class={`sv-page-btn ${idx === 0 ? 'active' : ''}`}
            data-page={idx}
            aria-label={`עמוד ${idx + 1}`}
          >
            <span class="sv-page-btn-num">{idx + 1}</span>
          </button>
        ))}
      </div>
    </div>
  </div>

  <!-- Fullscreen Zoom Overlay -->
  <div class="sv-fs" id="svFullscreen" role="dialog" aria-label="צפייה בגודל מלא">
    <div class="sv-fs-topbar">
      <button class="sv-fs-close" id="fsClose" aria-label="סגירה">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18" />
          <line x1="6" y1="6" x2="18" y2="18" />
        </svg>
      </button>
      <span class="sv-fs-counter" id="fsCounter">1 / {totalPages}</span>
      <div class="sv-fs-nav">
        <button class="sv-fs-nav-btn" id="fsPrev" aria-label="עמוד קודם">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M9 18l6-6-6-6" /></svg>
        </button>
        <button class="sv-fs-nav-btn" id="fsNext" aria-label="עמוד הבא">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M15 18l-6-6 6-6" /></svg>
        </button>
      </div>
    </div>
    <div class="sv-fs-body" id="fsBody">
      <img class="sv-fs-img" id="fsImg" alt="" />
    </div>
  </div>
</BaseLayout>

<style is:global>
  /* ============================================
     SYLLABUS VIEWER - Mobile-First, Light Theme
     ============================================ */

  /* Hide footer/watermark on viewer page */
  body:has(.syllabus-viewer) footer,
  body:has(.syllabus-viewer) .fingerprint-watermark,
  body:has(.syllabus-viewer) .back-to-top,
  body:has(.syllabus-viewer) .whatsapp-float {
    display: none !important;
  }

  body:has(.syllabus-viewer) {
    background: #f0e8ff !important;
    overflow: hidden !important;
  }

  .syllabus-viewer {
    display: flex;
    flex-direction: column;
    overflow: hidden;
    background: linear-gradient(135deg, #f5eeff 0%, #efe6ff 50%, #e8deff 100%);
  }

  /* ---- Top Bar ---- */
  .sv-topbar {
    flex-shrink: 0;
    padding: 8px 12px;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(168, 85, 247, 0.15);
  }

  @media (min-width: 768px) {
    .sv-topbar { padding: 10px 24px; }
  }

  .sv-topbar-inner {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 8px;
  }

  .sv-topbar-actions {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .sv-back {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 6px 14px;
    background: rgba(168, 85, 247, 0.08);
    border: 1px solid rgba(168, 85, 247, 0.2);
    border-radius: 50px;
    color: #7c3aed;
    font-weight: 700;
    font-size: 13px;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  @media (min-width: 768px) {
    .sv-back { padding: 8px 20px; font-size: 14px; }
  }

  .sv-back:hover {
    background: rgba(168, 85, 247, 0.15);
    border-color: rgba(168, 85, 247, 0.4);
  }

  .sv-counter {
    display: flex;
    align-items: baseline;
    gap: 3px;
    font-family: 'Courier New', monospace;
    font-size: 14px;
    color: #9090a8;
    font-weight: 600;
  }

  .sv-counter-current {
    font-size: 17px;
    color: #7c3aed;
    min-width: 14px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .sv-counter-sep { color: #c0b0d8; }

  .sv-zoom-btn {
    display: none; /* Hidden on mobile */
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 1px solid rgba(168, 85, 247, 0.25);
    background: rgba(168, 85, 247, 0.06);
    color: #7c3aed;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  @media (min-width: 768px) {
    .sv-zoom-btn { display: flex; }
  }

  .sv-zoom-btn:hover {
    background: rgba(168, 85, 247, 0.15);
    border-color: rgba(168, 85, 247, 0.5);
    transform: scale(1.1);
  }

  .sv-cta {
    display: inline-flex;
    align-items: center;
    padding: 6px 16px;
    background: linear-gradient(135deg, #a855f7, #7c3aed);
    color: white;
    font-weight: 700;
    font-size: 13px;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
    box-shadow: 0 4px 15px rgba(168, 85, 247, 0.3);
  }

  @media (min-width: 768px) {
    .sv-cta { padding: 8px 22px; font-size: 14px; }
  }

  .sv-cta:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(168, 85, 247, 0.4);
  }

  /* ---- Main Viewer Area ---- */
  .sv-main {
    flex: 1;
    position: relative;
    overflow: hidden;
    min-height: 0;
  }

  /* Nav arrows - overlay on image, smaller on mobile */
  .sv-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 34px;
    height: 34px;
    border-radius: 50%;
    border: 1px solid rgba(168, 85, 247, 0.3);
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    color: #7c3aed;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    z-index: 20;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  /* Mobile: arrows tight to edges, overlaying the image */
  .sv-nav-prev { right: 4px; }
  .sv-nav-next { left: 4px; }

  @media (min-width: 768px) {
    .sv-nav { width: 44px; height: 44px; }
    .sv-nav-prev { right: 16px; }
    .sv-nav-next { left: 16px; }
  }

  .sv-nav:hover:not(:disabled) {
    background: #a855f7;
    border-color: #a855f7;
    color: white;
    transform: translateY(-50%) scale(1.1);
    box-shadow: 0 4px 20px rgba(168, 85, 247, 0.4);
  }

  .sv-nav:active:not(:disabled) {
    transform: translateY(-50%) scale(0.95);
  }

  .sv-nav:disabled {
    opacity: 0.2;
    cursor: default;
  }

  /* Document area */
  .sv-document {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .sv-pages-track {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sv-page {
    flex: 0 0 100%;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    /* Mobile: minimal padding, arrows overlay */
    padding: 6px 8px;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .sv-page.visible {
    opacity: 1;
  }

  @media (min-width: 768px) {
    .sv-page { padding: 10px 56px; cursor: zoom-in; }
  }

  .sv-page-img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    border-radius: 6px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1), 0 1px 4px rgba(0, 0, 0, 0.06);
    user-select: none;
    -webkit-user-drag: none;
    transition: box-shadow 0.3s ease;
  }

  @media (min-width: 768px) {
    .sv-page-img {
      border-radius: 8px;
      box-shadow: 0 8px 40px rgba(0, 0, 0, 0.12), 0 2px 8px rgba(0, 0, 0, 0.08);
    }
  }

  /* ---- Bottom Bar ---- */
  .sv-bottombar {
    flex-shrink: 0;
    padding: 6px 12px 8px;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-top: 1px solid rgba(168, 85, 247, 0.15);
  }

  @media (min-width: 768px) {
    .sv-bottombar { padding: 10px 32px 12px; }
  }

  .sv-pages-selector {
    display: flex;
    justify-content: center;
    gap: 6px;
  }

  @media (min-width: 768px) {
    .sv-pages-selector { gap: 8px; }
  }

  .sv-page-btn {
    width: 34px;
    height: 34px;
    border-radius: 8px;
    border: 1.5px solid rgba(168, 85, 247, 0.2);
    background: rgba(168, 85, 247, 0.05);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    padding: 0;
  }

  @media (min-width: 768px) {
    .sv-page-btn { width: 40px; height: 40px; border-radius: 10px; }
  }

  .sv-page-btn-num {
    font-family: 'Courier New', monospace;
    font-weight: 700;
    font-size: 13px;
    color: #9090a8;
    transition: all 0.3s ease;
  }

  @media (min-width: 768px) {
    .sv-page-btn-num { font-size: 15px; }
  }

  .sv-page-btn:hover {
    border-color: rgba(168, 85, 247, 0.5);
    background: rgba(168, 85, 247, 0.1);
    transform: translateY(-2px);
  }

  .sv-page-btn:hover .sv-page-btn-num {
    color: #7c3aed;
  }

  .sv-page-btn.active {
    border-color: #a855f7;
    background: rgba(168, 85, 247, 0.15);
    transform: translateY(-2px);
    box-shadow: 0 3px 12px rgba(168, 85, 247, 0.25);
  }

  .sv-page-btn.active .sv-page-btn-num {
    color: #7c3aed;
    font-size: 15px;
  }

  @media (min-width: 768px) {
    .sv-page-btn.active .sv-page-btn-num { font-size: 17px; }
  }

  /* ============================================
     FULLSCREEN ZOOM OVERLAY
     ============================================ */
  .sv-fs {
    position: fixed;
    inset: 0;
    z-index: 9999;
    background: rgba(0, 0, 0, 0.95);
    display: none;
    flex-direction: column;
  }

  .sv-fs.open {
    display: flex;
  }

  .sv-fs-topbar {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .sv-fs-close {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.1);
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .sv-fs-close:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.1);
  }

  .sv-fs-counter {
    font-family: 'Courier New', monospace;
    font-size: 14px;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 600;
  }

  .sv-fs-nav {
    display: flex;
    gap: 8px;
  }

  .sv-fs-nav-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.1);
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .sv-fs-nav-btn:hover {
    background: rgba(168, 85, 247, 0.4);
    border-color: rgba(168, 85, 247, 0.6);
  }

  .sv-fs-body {
    flex: 1;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
    display: flex;
    justify-content: center;
    padding: 16px;
    overscroll-behavior: contain;
  }

  .sv-fs-img {
    max-width: 100%;
    width: auto;
    height: auto;
    border-radius: 4px;
    /* No max-height - image is scrollable at full size */
  }

  @media (min-width: 768px) {
    .sv-fs-img {
      max-width: 700px;
    }
  }
</style>

<script is:inline>
  (function() {
    // === CRITICAL: Reset zoom to 1 on this page ===
    document.documentElement.style.zoom = '1';

    // === SIZE: Calculate viewer height from actual viewport ===
    function sizeViewer() {
      var viewer = document.getElementById('syllabusViewer');
      var header = document.getElementById('main-header');
      if (!viewer || !header) return;
      var headerBottom = header.getBoundingClientRect().bottom;
      viewer.style.marginTop = headerBottom + 'px';
      viewer.style.height = (window.innerHeight - headerBottom) + 'px';
    }

    sizeViewer();
    window.addEventListener('resize', sizeViewer);
    document.addEventListener('DOMContentLoaded', sizeViewer);

    // === PAGE NAVIGATION + FULLSCREEN ===
    document.addEventListener('DOMContentLoaded', function() {
      var currentPage = 0;
      var totalPages = 6;
      var track = document.getElementById('pagesTrack');
      var prevBtn = document.getElementById('prevBtn');
      var nextBtn = document.getElementById('nextBtn');
      var counter = document.getElementById('counterCurrent');
      var pageBtns = document.querySelectorAll('.sv-page-btn');
      var pages = document.querySelectorAll('.sv-page');
      var images = document.querySelectorAll('.sv-page-img');
      var touchStartX = 0;
      var touchStartY = 0;
      var isSwiping = false;

      // Fullscreen elements
      var fsOverlay = document.getElementById('svFullscreen');
      var fsClose = document.getElementById('fsClose');
      var fsImg = document.getElementById('fsImg');
      var fsCounter = document.getElementById('fsCounter');
      var fsPrev = document.getElementById('fsPrev');
      var fsNext = document.getElementById('fsNext');
      var fsBody = document.getElementById('fsBody');
      var zoomBtn = document.getElementById('zoomBtn');

      // Image sources array
      var imgSrcs = [];
      images.forEach(function(img) { imgSrcs.push(img.src); });

      function goToPage(idx) {
        if (idx < 0 || idx >= totalPages || idx === currentPage) return;
        currentPage = idx;
        updateView();
      }

      function updateView() {
        track.style.transform = 'translateX(' + (currentPage * 100) + '%)';

        counter.style.transform = 'scale(1.3)';
        counter.textContent = currentPage + 1;
        setTimeout(function() {
          counter.style.transform = 'scale(1)';
        }, 200);

        pages.forEach(function(page, i) {
          page.classList.toggle('visible', i === currentPage);
        });

        prevBtn.disabled = currentPage === 0;
        nextBtn.disabled = currentPage === totalPages - 1;

        pageBtns.forEach(function(btn) {
          var idx = parseInt(btn.getAttribute('data-page'));
          btn.classList.toggle('active', idx === currentPage);
        });
      }

      // --- Fullscreen zoom ---
      function openFullscreen() {
        fsImg.src = imgSrcs[currentPage];
        fsCounter.textContent = (currentPage + 1) + ' / ' + totalPages;
        fsOverlay.classList.add('open');
        document.body.style.overflow = 'hidden';
        // Scroll to top of image
        fsBody.scrollTop = 0;
      }

      function closeFullscreen() {
        fsOverlay.classList.remove('open');
        document.body.style.overflow = '';
      }

      function fsGoToPage(idx) {
        if (idx < 0 || idx >= totalPages) return;
        currentPage = idx;
        updateView();
        fsImg.src = imgSrcs[currentPage];
        fsCounter.textContent = (currentPage + 1) + ' / ' + totalPages;
        fsBody.scrollTop = 0;
      }

      // Click image to zoom (desktop only)
      var isDesktop = window.matchMedia('(min-width: 768px)');
      images.forEach(function(img) {
        img.addEventListener('click', function(e) {
          if (!isDesktop.matches) return;
          e.stopPropagation();
          openFullscreen();
        });
      });

      // Zoom button
      zoomBtn.addEventListener('click', openFullscreen);

      // Close fullscreen
      fsClose.addEventListener('click', closeFullscreen);
      fsOverlay.addEventListener('click', function(e) {
        if (e.target === fsOverlay || e.target === fsBody) closeFullscreen();
      });

      // Fullscreen navigation
      fsPrev.addEventListener('click', function(e) {
        e.stopPropagation();
        fsGoToPage(currentPage - 1);
      });
      fsNext.addEventListener('click', function(e) {
        e.stopPropagation();
        fsGoToPage(currentPage + 1);
      });

      // --- Main viewer navigation ---
      prevBtn.addEventListener('click', function() { goToPage(currentPage - 1); });
      nextBtn.addEventListener('click', function() { goToPage(currentPage + 1); });

      pageBtns.forEach(function(btn) {
        btn.addEventListener('click', function() {
          goToPage(parseInt(this.getAttribute('data-page')));
        });
      });

      // Keyboard navigation
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && fsOverlay.classList.contains('open')) {
          closeFullscreen();
          return;
        }
        if (e.key === 'ArrowRight') {
          if (fsOverlay.classList.contains('open')) fsGoToPage(currentPage - 1);
          else goToPage(currentPage - 1);
        }
        if (e.key === 'ArrowLeft') {
          if (fsOverlay.classList.contains('open')) fsGoToPage(currentPage + 1);
          else goToPage(currentPage + 1);
        }
        if (e.key === 'Home') goToPage(0);
        if (e.key === 'End') goToPage(totalPages - 1);
        var num = parseInt(e.key);
        if (num >= 1 && num <= totalPages) {
          if (fsOverlay.classList.contains('open')) fsGoToPage(num - 1);
          else goToPage(num - 1);
        }
      });

      // Touch swipe on main viewer
      var main = document.getElementById('svMain');
      main.addEventListener('touchstart', function(e) {
        touchStartX = e.changedTouches[0].screenX;
        touchStartY = e.changedTouches[0].screenY;
        isSwiping = false;
      }, { passive: true });

      main.addEventListener('touchmove', function(e) {
        var diffX = Math.abs(e.changedTouches[0].screenX - touchStartX);
        var diffY = Math.abs(e.changedTouches[0].screenY - touchStartY);
        if (diffX > diffY && diffX > 20) isSwiping = true;
      }, { passive: true });

      main.addEventListener('touchend', function(e) {
        if (!isSwiping) return;
        var diff = touchStartX - e.changedTouches[0].screenX;
        if (Math.abs(diff) > 50) {
          if (diff > 0) goToPage(currentPage + 1);
          else goToPage(currentPage - 1);
        }
      }, { passive: true });
    });
  })();
