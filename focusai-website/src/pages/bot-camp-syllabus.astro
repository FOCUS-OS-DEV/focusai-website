---
/**
 * Bot-Camp Syllabus Page - Full Document Viewer
 * Direct link: /bot-camp-syllabus
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';

const syllabusImages = [
  'https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_1200/v1770470074/111_kyis5b.jpg',
  'https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_1200/v1770470080/222_enxevc.jpg',
  'https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_1200/v1770470082/333_odscrk.jpg',
  'https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_1200/v1770470083/444_icwizs.jpg',
  'https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_1200/v1770470076/222_2_trdefs.jpg',
  'https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_1200/v1770470088/555_djukfo.jpg'
];

const totalPages = syllabusImages.length;
---

<BaseLayout
  title="סילבוס Bot-Camp | Focus AI Academy"
  description="סילבוס מפורט של תוכנית Bot-Camp - הכשרת מפתחי סוכני AI ואוטומציות עסקיות בשיתוף אוניברסיטת חיפה"
>
  <Header slot="header" currentPath="/academy" theme="light" />

  <div class="syllabus-viewer" id="syllabusViewer">
    <!-- Top Bar -->
    <div class="sv-topbar">
      <div class="sv-topbar-inner">
        <!-- Back Button - Glassmorphic, no arrow -->
        <a href="/academy" class="sv-back">
          Bot-Camp
        </a>

        <!-- Page Counter -->
        <div class="sv-counter">
          <span class="sv-counter-current" id="counterCurrent">1</span>
          <span class="sv-counter-sep">/</span>
          <span class="sv-counter-total">{totalPages}</span>
        </div>

        <!-- CTA -->
        <a href="/academy#pricing" class="sv-cta">
          להרשמה
        </a>
      </div>
    </div>

    <!-- Main Viewer Area -->
    <div class="sv-main" id="svMain">
      <!-- Navigation Arrow - Previous (RTL: right side) -->
      <button class="sv-nav sv-nav-prev" id="prevBtn" aria-label="עמוד קודם" disabled>
        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 18l6-6-6-6" />
        </svg>
      </button>

      <!-- Document Display - edge-to-edge -->
      <div class="sv-document" id="svDocument">
        <div class="sv-pages-track" id="pagesTrack">
          {syllabusImages.map((img, idx) => (
            <div class="sv-page" data-page={idx}>
              <img
                src={img}
                alt={`סילבוס Bot-Camp - עמוד ${idx + 1}`}
                class="sv-page-img"
                loading={idx < 2 ? 'eager' : 'lazy'}
                draggable="false"
              />
            </div>
          ))}
        </div>
      </div>

      <!-- Navigation Arrow - Next (RTL: left side) -->
      <button class="sv-nav sv-nav-next" id="nextBtn" aria-label="עמוד הבא">
        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M15 18l-6-6 6-6" />
        </svg>
      </button>
    </div>

    <!-- Bottom Bar - Page Selector -->
    <div class="sv-bottombar">
      <div class="sv-pages-selector" id="pagesSelector">
        {syllabusImages.map((img, idx) => (
          <button
            class={`sv-page-btn ${idx === 0 ? 'active' : ''}`}
            data-page={idx}
            aria-label={`עמוד ${idx + 1}`}
          >
            <span class="sv-page-btn-num">{idx + 1}</span>
            <div class="sv-page-btn-thumb">
              <img src={img.replace('w_1200', 'w_100')} alt="" draggable="false" />
            </div>
          </button>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>

<style is:global>
  /* ============================================
     SYLLABUS DOCUMENT VIEWER
     Full-height layout that works WITH the header
     ============================================ */

  /* Hide footer and watermark on this page */
  body:has(.syllabus-viewer) footer,
  body:has(.syllabus-viewer) .fingerprint-watermark {
    display: none !important;
  }

  /* Make the viewer fill remaining viewport below header */
  .syllabus-viewer {
    display: flex;
    flex-direction: column;
    height: calc(100vh - 72px);
    height: calc(100dvh - 72px);
    overflow: hidden;
    background: linear-gradient(180deg, #f0e8ff 0%, #e8ddf7 30%, #f5f0ff 100%);
  }

  @media (min-width: 768px) {
    .syllabus-viewer {
      height: calc(100vh - 76px);
      height: calc(100dvh - 76px);
    }
  }

  /* ---- Top Bar ---- */
  .sv-topbar {
    flex-shrink: 0;
    padding: 10px 16px;
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(168, 85, 247, 0.08);
  }

  @media (min-width: 768px) {
    .sv-topbar { padding: 12px 24px; }
  }

  .sv-topbar-inner {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
  }

  /* Back button - Glassmorphic */
  .sv-back {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 20px;
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(168, 85, 247, 0.15);
    border-radius: 50px;
    color: #7c3aed;
    font-weight: 700;
    font-size: 14px;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
    box-shadow: 0 2px 12px rgba(168, 85, 247, 0.08);
  }

  .sv-back:hover {
    background: rgba(255, 255, 255, 0.75);
    border-color: rgba(168, 85, 247, 0.35);
    box-shadow: 0 4px 20px rgba(168, 85, 247, 0.15);
    transform: translateY(-1px);
  }

  .sv-counter {
    display: flex;
    align-items: baseline;
    gap: 4px;
    font-family: 'Courier New', monospace;
    font-size: 15px;
    color: #6b6b8a;
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    padding: 6px 14px;
    border-radius: 50px;
    border: 1px solid rgba(168, 85, 247, 0.1);
  }

  .sv-counter-current {
    font-weight: 700;
    font-size: 18px;
    color: #a855f7;
    min-width: 16px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .sv-counter-sep { color: #c0b0d8; }

  .sv-cta {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 20px;
    background: linear-gradient(135deg, #a855f7, #d946ef);
    color: white;
    font-weight: 700;
    font-size: 14px;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
    box-shadow: 0 4px 20px rgba(168, 85, 247, 0.3);
  }

  .sv-cta:hover {
    transform: scale(1.05) translateY(-1px);
    box-shadow: 0 6px 28px rgba(168, 85, 247, 0.4);
  }

  /* ---- Main Viewer Area ---- */
  .sv-main {
    flex: 1;
    display: flex;
    align-items: stretch;
    min-height: 0;
    position: relative;
    overflow: hidden;
  }

  /* Navigation Arrows - floating over the image */
  .sv-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: none;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    color: #a855f7;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    z-index: 20;
  }

  .sv-nav-prev { right: 12px; }
  .sv-nav-next { left: 12px; }

  @media (min-width: 768px) {
    .sv-nav { width: 56px; height: 56px; }
    .sv-nav-prev { right: 20px; }
    .sv-nav-next { left: 20px; }
  }

  .sv-nav:hover:not(:disabled) {
    background: rgba(168, 85, 247, 0.9);
    color: white;
    transform: translateY(-50%) scale(1.1);
    box-shadow: 0 8px 32px rgba(168, 85, 247, 0.3);
  }

  .sv-nav:active:not(:disabled) {
    transform: translateY(-50%) scale(0.95);
  }

  .sv-nav:disabled {
    opacity: 0.25;
    cursor: default;
    box-shadow: none;
  }

  /* Document Container - edge-to-edge, no box/border */
  .sv-document {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
  }

  .sv-pages-track {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sv-page {
    flex: 0 0 100%;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .sv-page-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    user-select: none;
    -webkit-user-drag: none;
  }

  /* ---- Bottom Bar - Page Selector ---- */
  .sv-bottombar {
    flex-shrink: 0;
    padding: 10px 16px 14px;
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-top: 1px solid rgba(168, 85, 247, 0.08);
  }

  @media (min-width: 768px) {
    .sv-bottombar { padding: 12px 24px 16px; }
  }

  .sv-pages-selector {
    display: flex;
    justify-content: center;
    gap: 8px;
  }

  @media (min-width: 768px) {
    .sv-pages-selector { gap: 12px; }
  }

  .sv-page-btn {
    position: relative;
    width: 44px;
    height: 56px;
    border-radius: 10px;
    border: 2px solid transparent;
    background: rgba(168, 85, 247, 0.06);
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    padding: 0;
  }

  @media (min-width: 768px) {
    .sv-page-btn { width: 56px; height: 72px; border-radius: 12px; }
  }

  .sv-page-btn-num {
    position: relative;
    z-index: 2;
    font-family: 'Courier New', monospace;
    font-weight: 700;
    font-size: 16px;
    color: #8b7aa8;
    transition: all 0.3s ease;
  }

  @media (min-width: 768px) {
    .sv-page-btn-num { font-size: 18px; }
  }

  .sv-page-btn-thumb {
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .sv-page-btn-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .sv-page-btn:hover {
    border-color: rgba(168, 85, 247, 0.3);
    background: rgba(168, 85, 247, 0.1);
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 6px 20px rgba(168, 85, 247, 0.15);
  }

  .sv-page-btn:hover .sv-page-btn-thumb {
    opacity: 0.2;
  }

  .sv-page-btn:hover .sv-page-btn-num {
    color: #a855f7;
  }

  .sv-page-btn.active {
    border-color: #a855f7;
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.15), rgba(217, 70, 239, 0.1));
    transform: translateY(-4px) scale(1.1);
    box-shadow: 0 8px 28px rgba(168, 85, 247, 0.25);
  }

  .sv-page-btn.active .sv-page-btn-num {
    color: #a855f7;
    font-size: 18px;
  }

  @media (min-width: 768px) {
    .sv-page-btn.active .sv-page-btn-num { font-size: 22px; }
  }

  .sv-page-btn.active .sv-page-btn-thumb {
    opacity: 0.15;
  }

  /* ---- Page transition animation ---- */
  .sv-page {
    opacity: 0;
    transform: scale(0.95);
    transition: opacity 0.5s ease, transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sv-page.visible {
    opacity: 1;
    transform: scale(1);
  }

  /* ---- Mobile adjustments ---- */
  @media (max-width: 767px) {
    .sv-nav {
      width: 36px;
      height: 36px;
    }
    .sv-nav svg {
      width: 20px;
      height: 20px;
    }
    .sv-nav-prev { right: 8px; }
    .sv-nav-next { left: 8px; }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    var currentPage = 0;
    var totalPages = 6;
    var track = document.getElementById('pagesTrack');
    var prevBtn = document.getElementById('prevBtn');
    var nextBtn = document.getElementById('nextBtn');
    var counter = document.getElementById('counterCurrent');
    var pageBtns = document.querySelectorAll('.sv-page-btn');
    var pages = document.querySelectorAll('.sv-page');
    var touchStartX = 0;
    var touchStartY = 0;
    var isSwiping = false;

    function goToPage(idx) {
      if (idx < 0 || idx >= totalPages || idx === currentPage) return;
      currentPage = idx;
      updateView();
    }

    function updateView() {
      // Move track (RTL: positive translateX)
      track.style.transform = 'translateX(' + (currentPage * 100) + '%)';

      // Update counter with animation
      counter.style.transform = 'scale(1.3)';
      counter.style.color = '#a855f7';
      counter.textContent = currentPage + 1;
      setTimeout(function() {
        counter.style.transform = 'scale(1)';
      }, 200);

      // Update page visibility
      pages.forEach(function(page, idx) {
        if (idx === currentPage) {
          page.classList.add('visible');
        } else {
          page.classList.remove('visible');
        }
      });

      // Update nav buttons
      prevBtn.disabled = currentPage === 0;
      nextBtn.disabled = currentPage === totalPages - 1;

      // Update page buttons
      pageBtns.forEach(function(btn) {
        var pageIdx = parseInt(btn.getAttribute('data-page'));
        btn.classList.toggle('active', pageIdx === currentPage);
      });
    }

    // Initialize first page
    pages[0].classList.add('visible');

    // Nav buttons
    prevBtn.addEventListener('click', function() { goToPage(currentPage - 1); });
    nextBtn.addEventListener('click', function() { goToPage(currentPage + 1); });

    // Page selector buttons
    pageBtns.forEach(function(btn) {
      btn.addEventListener('click', function() {
        goToPage(parseInt(this.getAttribute('data-page')));
      });
    });

    // Keyboard navigation
    document.addEventListener('keydown', function(e) {
      if (e.key === 'ArrowRight') goToPage(currentPage - 1); // RTL
      if (e.key === 'ArrowLeft') goToPage(currentPage + 1);  // RTL
      if (e.key === 'Home') goToPage(0);
      if (e.key === 'End') goToPage(totalPages - 1);
      // Number keys 1-6
      var num = parseInt(e.key);
      if (num >= 1 && num <= totalPages) goToPage(num - 1);
    });

    // Touch swipe on main area
    var main = document.getElementById('svMain');
    main.addEventListener('touchstart', function(e) {
      touchStartX = e.changedTouches[0].screenX;
      touchStartY = e.changedTouches[0].screenY;
      isSwiping = false;
    }, { passive: true });

    main.addEventListener('touchmove', function(e) {
      var diffX = Math.abs(e.changedTouches[0].screenX - touchStartX);
      var diffY = Math.abs(e.changedTouches[0].screenY - touchStartY);
      if (diffX > diffY && diffX > 20) isSwiping = true;
    }, { passive: true });

    main.addEventListener('touchend', function(e) {
      if (!isSwiping) return;
      var diff = touchStartX - e.changedTouches[0].screenX;
      if (Math.abs(diff) > 50) {
        if (diff > 0) {
          goToPage(currentPage + 1); // Swipe left → next (RTL forward)
        } else {
          goToPage(currentPage - 1); // Swipe right → prev (RTL backward)
        }
      }
    }, { passive: true });
  });
</script>
