    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            zoom: 1 !important;
        }

        :root {
            --primary: #8b5cf6;
            --primary-dark: #7c3aed;
            --secondary: #06b6d4;
            --accent: #f59e0b;
            --success: #10b981;
            --dark: #0f0f1a;
            --darker: #080810;
            --card-bg: rgba(255, 255, 255, 0.03);
            --card-border: rgba(255, 255, 255, 0.08);
            --text: #ffffff;
            --text-muted: rgba(255, 255, 255, 0.6);
            --glow-primary: rgba(139, 92, 246, 0.4);
            --glow-secondary: rgba(6, 182, 212, 0.4);
        }

        body {
            font-family: 'Heebo', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--darker);
            min-height: 100vh;
            color: var(--text);
            overflow-x: hidden;
        }

        /* Animated Background */
        .bg-animation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            overflow: hidden;
        }

        .bg-animation::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background:
                radial-gradient(circle at 20% 80%, var(--glow-primary) 0%, transparent 40%),
                radial-gradient(circle at 80% 20%, var(--glow-secondary) 0%, transparent 40%),
                radial-gradient(circle at 40% 40%, rgba(245, 158, 11, 0.15) 0%, transparent 30%);
            animation: bgMove 20s ease-in-out infinite;
        }

        @keyframes bgMove {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            33% { transform: translate(2%, 2%) rotate(1deg); }
            66% { transform: translate(-1%, 1%) rotate(-1deg); }
        }

        /* Floating particles */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            overflow: hidden;
        }

        .particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: var(--primary);
            border-radius: 50%;
            opacity: 0.3;
            animation: float 15s infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(100vh) rotate(0deg); opacity: 0; }
            10% { opacity: 0.3; }
            90% { opacity: 0.3; }
            100% { transform: translateY(-100vh) rotate(720deg); opacity: 0; }
        }

        .container {
            max-width: 650px;
            margin: 0 auto;
            padding: 20px;
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Header */
        header {
            text-align: center;
            padding: 40px 20px 30px;
            position: relative;
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .logo {
            height: 55px;
            width: auto;
            filter: drop-shadow(0 0 20px rgba(139, 92, 246, 0.3));
            margin-bottom: 30px;
            transition: all 0.3s ease;
            display: block;
        }

        .logo:hover {
            transform: scale(1.05);
            filter: drop-shadow(0 0 30px rgba(139, 92, 246, 0.5));
        }

        .free-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            background: linear-gradient(135deg, var(--success), #059669);
            padding: 10px 24px;
            border-radius: 30px;
            font-size: 0.95rem;
            font-weight: 600;
            margin-bottom: 25px;
            box-shadow: 0 4px 20px rgba(16, 185, 129, 0.4);
        }

        .free-badge i {
            font-size: 1.1rem;
        }

        header h1 {
            font-size: 2.8rem;
            font-weight: 800;
            background: linear-gradient(135deg, #fff 0%, var(--primary) 50%, var(--secondary) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            color: transparent;
            margin-bottom: 20px;
            line-height: 1.2;
        }

        /* Purpose Tags */
        .purpose-tags {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
            margin-bottom: 25px;
        }

        .purpose-tag {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 18px;
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.15), rgba(6, 182, 212, 0.1));
            border: 1px solid rgba(139, 92, 246, 0.3);
            border-radius: 25px;
            font-size: 0.95rem;
            font-weight: 600;
            color: var(--text);
            transition: all 0.3s ease;
        }

        .purpose-tag:hover {
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.25), rgba(6, 182, 212, 0.15));
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(139, 92, 246, 0.2);
        }

        .purpose-tag i {
            color: var(--secondary);
            font-size: 0.9rem;
        }

        .purpose-divider {
            color: var(--primary);
            font-size: 1.2rem;
            font-weight: 300;
            opacity: 0.6;
        }

        /* Platform Logos */
        .platform-logos {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
            margin-bottom: 20px;
        }

        .platform-logo {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .platform-logo img {
            height: 20px;
            width: auto;
        }

        .platform-logo img.white-logo {
            filter: brightness(0) invert(1);
        }

        .platform-logo span {
            font-size: 0.95rem;
            font-weight: 600;
            color: var(--text);
        }

        .platforms-divider {
            color: var(--text-muted);
            font-size: 1rem;
            font-weight: 300;
            opacity: 0.5;
        }

        header .subtitle {
            font-size: 1.1rem;
            color: var(--text-muted);
            font-weight: 400;
            line-height: 1.6;
            max-width: 450px;
            margin: 0 auto;
        }

        header .subtitle strong {
            color: var(--text);
        }

        /* Main Card */
        .main-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            padding: 35px;
            margin-bottom: 25px;
            border: 1px solid var(--card-border);
            box-shadow:
                0 25px 50px -12px rgba(0, 0, 0, 0.5),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
            position: relative;
            overflow: hidden;
            width: 100%;
        }

        .main-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
        }

        /* What You'll Learn Section */
        .learn-section {
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 1.15rem;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            text-align: center;
        }

        .section-title i {
            color: var(--primary);
            font-size: 1.2rem;
        }

        .section-title::before,
        .section-title::after {
            content: '';
            flex: 1;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--card-border), transparent);
            max-width: 80px;
        }

        .learn-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .learn-item {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            padding: 15px;
            background: rgba(139, 92, 246, 0.05);
            border-radius: 14px;
            border-right: 3px solid var(--primary);
            transition: all 0.3s ease;
        }

        .learn-item:hover {
            background: rgba(139, 92, 246, 0.1);
            transform: translateX(-3px);
        }

        .learn-item i {
            font-size: 1.3rem;
            color: var(--secondary);
            flex-shrink: 0;
            margin-top: 2px;
        }

        .learn-item-content h4 {
            font-size: 0.95rem;
            font-weight: 600;
            color: var(--text);
            margin-bottom: 4px;
        }

        .learn-item-content p {
            font-size: 0.85rem;
            color: var(--text-muted);
            line-height: 1.5;
        }

        /* Target Audience */
        .audience-note {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 15px 18px;
            background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(139, 92, 246, 0.05));
            border-radius: 12px;
            margin-bottom: 30px;
            border: 1px solid rgba(6, 182, 212, 0.2);
        }

        .audience-note i {
            font-size: 1.4rem;
            color: var(--secondary);
        }

        .audience-note p {
            font-size: 0.9rem;
            color: var(--text);
            line-height: 1.5;
        }

        .audience-note strong {
            color: var(--secondary);
        }

        /* Form Section */
        .form-section {
            padding-top: 25px;
            border-top: 1px solid var(--card-border);
        }

        .form-header {
            text-align: center;
            margin-bottom: 25px;
        }

        .form-title {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 8px;
            color: var(--text);
            background: linear-gradient(135deg, var(--text) 0%, var(--primary) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .form-subtitle {
            font-size: 0.85rem;
            color: var(--text-muted);
        }

        .form-group {
            margin-bottom: 16px;
        }

        .form-group label {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 500;
            color: var(--text);
            margin-bottom: 8px;
            font-size: 0.95rem;
        }

        .form-group label i {
            color: var(--primary);
            font-size: 0.9rem;
        }

        .required::after {
            content: " *";
            color: var(--accent);
        }

        input[type="text"],
        input[type="email"],
        input[type="tel"] {
            width: 100%;
            padding: 14px 18px;
            background: rgba(255, 255, 255, 0.03);
            border: 2px solid var(--card-border);
            border-radius: 12px;
            font-size: 1rem;
            font-family: inherit;
            color: var(--text);
            transition: all 0.3s ease;
        }

        input::placeholder {
            color: var(--text-muted);
        }

        input:focus {
            outline: none;
            border-color: var(--primary);
            background: rgba(139, 92, 246, 0.05);
            box-shadow: 0 0 0 4px var(--glow-primary);
        }

        /* Prevent autofill from turning inputs white */
        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active {
            -webkit-box-shadow: 0 0 0 1000px rgba(15, 15, 26, 0.97) inset !important;
            -webkit-text-fill-color: var(--text) !important;
            background-color: rgba(255, 255, 255, 0.03) !important;
            border-color: var(--card-border) !important;
            transition: background-color 5000s ease-in-out 0s;
        }

        input:-webkit-autofill:focus {
            -webkit-box-shadow: 0 0 0 1000px rgba(139, 92, 246, 0.08) inset !important;
            border-color: var(--primary) !important;
        }

        /* Privacy Section */
        .privacy-section {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid var(--card-border);
        }

        .privacy-notice {
            font-size: 0.8rem;
            color: var(--text-muted);
            margin-bottom: 15px;
            line-height: 1.6;
            padding: 12px 15px;
            background: rgba(245, 158, 11, 0.05);
            border-radius: 10px;
            border-right: 3px solid var(--accent);
            display: flex;
            align-items: flex-start;
            gap: 10px;
        }

        .privacy-notice i {
            color: var(--accent);
            margin-top: 2px;
        }

        .checkbox-group {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            margin-bottom: 12px;
            cursor: pointer;
        }

        .checkbox-group input[type="checkbox"] {
            width: 20px;
            height: 20px;
            flex-shrink: 0;
            margin-top: 2px;
            accent-color: var(--primary);
            cursor: pointer;
        }

        .checkbox-label {
            font-size: 0.85rem;
            color: var(--text-muted);
            line-height: 1.5;
        }

        .checkbox-label a {
            color: var(--primary);
            text-decoration: underline;
        }

        .checkbox-label a:hover {
            color: var(--secondary);
        }

        /* Submit Button */
        .btn-submit {
            width: 100%;
            padding: 20px 30px;
            margin-top: 20px;
            background: linear-gradient(135deg, #10b981 0%, #059669 50%, #047857 100%);
            color: white;
            border: none;
            border-radius: 16px;
            font-size: 1.2rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            font-family: inherit;
            box-shadow:
                0 4px 20px rgba(16, 185, 129, 0.4),
                0 0 0 0 rgba(16, 185, 129, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            position: relative;
            overflow: hidden;
        }

        .btn-submit::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .btn-submit:hover::before {
            left: 100%;
        }

        .btn-submit:hover {
            transform: translateY(-4px);
            box-shadow:
                0 12px 35px rgba(16, 185, 129, 0.5),
                0 0 0 4px rgba(16, 185, 129, 0.15),
                inset 0 1px 0 rgba(255, 255, 255, 0.2);
        }

        .btn-submit:active {
            transform: translateY(-2px);
        }

        .btn-submit:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none !important;
        }

        .btn-submit .btn-text {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .btn-submit i {
            font-size: 1.3rem;
            animation: pulse-icon 2s ease-in-out infinite;
        }

        @keyframes pulse-icon {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        /* Bonus Section */
        .bonus-section {
            margin-top: 30px;
            padding: 25px;
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.08), rgba(6, 182, 212, 0.05));
            border-radius: 16px;
            border: 1px solid rgba(139, 92, 246, 0.2);
        }

        .bonus-header {
            text-align: center;
            margin-bottom: 18px;
        }

        .bonus-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 700;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .bonus-title {
            font-size: 1.05rem;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 5px;
        }

        .bonus-subtitle {
            font-size: 0.8rem;
            color: var(--text-muted);
        }

        .bonus-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            justify-content: center;
        }

        .bonus-btn {
            flex: 1;
            min-width: 200px;
            padding: 14px 18px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid var(--card-border);
            border-radius: 12px;
            color: var(--text);
            text-decoration: none;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 8px;
            text-align: center;
        }

        .bonus-btn:hover {
            border-color: var(--primary);
            background: rgba(139, 92, 246, 0.1);
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(139, 92, 246, 0.15);
        }

        .bonus-btn i {
            font-size: 1.5rem;
            color: var(--secondary);
        }

        .bonus-btn-title {
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--text);
        }

        .bonus-btn-desc {
            font-size: 0.75rem;
            color: var(--text-muted);
            line-height: 1.4;
        }

        /* Community Section */
        .community-section {
            margin-top: 25px;
            padding-top: 25px;
            border-top: 1px solid var(--card-border);
            text-align: center;
        }

        .community-section .section-label {
            font-size: 0.8rem;
            color: var(--text-muted);
            margin-bottom: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .community-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            padding: 14px 28px;
            background: linear-gradient(135deg, rgba(37, 211, 102, 0.15), rgba(37, 211, 102, 0.08));
            border: 1px solid rgba(37, 211, 102, 0.4);
            border-radius: 14px;
            color: var(--text);
            text-decoration: none;
            font-size: 0.95rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .community-btn:hover {
            background: linear-gradient(135deg, rgba(37, 211, 102, 0.25), rgba(37, 211, 102, 0.15));
            border-color: rgba(37, 211, 102, 0.6);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(37, 211, 102, 0.2);
        }

        .community-btn i {
            font-size: 1.3rem;
            color: #25d366;
        }

        .community-btn span {
            color: #25d366;
            font-weight: 700;
        }

        /* Footer/Disclaimer */
        .disclaimer {
            margin-top: 25px;
            padding: 20px;
            background: rgba(0, 0, 0, 0.3);
            border-radius: 16px;
            border: 1px solid var(--card-border);
            width: 100%;
        }

        .disclaimer-title {
            font-size: 0.8rem;
            font-weight: 600;
            color: var(--text-muted);
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .disclaimer-title i {
            color: var(--accent);
        }

        .disclaimer-text {
            font-size: 0.75rem;
            color: var(--text-muted);
            line-height: 1.7;
            opacity: 0.8;
        }

        .disclaimer-text a {
            color: var(--primary);
            text-decoration: underline;
        }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin: 20px 0;
        }

        .social-link {
            width: 40px;
