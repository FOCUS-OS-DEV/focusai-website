---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await render(post);

// Format date in Hebrew
function formatDate(date: Date): string {
  return date.toLocaleDateString('he-IL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

// Get related posts (same tags)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p => p.id !== post.id)
  .filter(p => p.data.tags?.some(tag => post.data.tags?.includes(tag)))
  .slice(0, 3);
---

<BaseLayout title={`${post.data.title} | Focus AI Blog`} description={post.data.description}>
  <Header slot="header" currentPath="/blog" />

  <article class="relative pt-24 pb-16">
    <!-- Background Effects -->
    <div class="absolute inset-0 z-0 pointer-events-none" aria-hidden="true">
      <div class="absolute top-1/4 right-1/4 w-[400px] h-[400px] bg-purple-500/10 rounded-full blur-[120px]"></div>
      <div class="absolute bottom-1/4 left-1/4 w-[300px] h-[300px] bg-[#a855f7]/5 rounded-full blur-[100px]"></div>
      <!-- Grid pattern -->
      <div class="absolute inset-0 opacity-[0.02]" style="background-image: linear-gradient(rgba(168, 85, 247, 0.5) 1px, transparent 1px), linear-gradient(90deg, rgba(168, 85, 247, 0.5) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10 max-w-4xl">
      <!-- Breadcrumb -->
      <nav class="mb-8 font-mono text-sm">
        <a href="/" class="text-[#b0b0c0] hover:text-[#a855f7] transition-colors">בית</a>
        <span class="text-[#b0b0c0] mx-2">/</span>
        <a href="/blog" class="text-[#b0b0c0] hover:text-[#a855f7] transition-colors">בלוג</a>
        <span class="text-[#b0b0c0] mx-2">/</span>
        <span class="text-[#a855f7]">{post.data.title}</span>
      </nav>

      <!-- Article Header -->
      <header class="mb-12">
        <!-- Tags -->
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-4">
            {post.data.tags.map((tag) => (
              <span class="px-3 py-1 bg-[#a855f7]/10 text-[#a855f7] text-sm font-mono">
                #{tag}
              </span>
            ))}
          </div>
        )}

        <!-- Title -->
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-black text-white mb-6 leading-tight">
          {post.data.title}
        </h1>

        <!-- Description -->
        <p class="text-lg md:text-xl text-[#d0d0e0] mb-6">
          {post.data.description}
        </p>

        <!-- Meta -->
        <div class="flex flex-wrap items-center gap-4 text-sm font-mono text-[#b0b0c0] pb-6 border-b border-[#2a2a3a]">
          <time datetime={post.data.pubDate.toISOString()} class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            {formatDate(post.data.pubDate)}
          </time>
          {post.data.author && (
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              {post.data.author}
            </span>
          )}
        </div>
      </header>

      <!-- Hero Image -->
      {post.data.heroImage && (
        <div class="relative mb-12 border border-[#2a2a3a] overflow-hidden" style="clip-path: polygon(0 15px, 15px 0, calc(100% - 15px) 0, 100% 15px, 100% calc(100% - 15px), calc(100% - 15px) 100%, 15px 100%, 0 calc(100% - 15px));">
          <img
            src={post.data.heroImage}
            alt={post.data.title}
            class="w-full h-auto"
          />
        </div>
      )}

      <!-- Article Content -->
      <div class="prose prose-invert prose-lg max-w-none">
        <Content />
      </div>

      <!-- Share Section -->
      <div class="mt-12 pt-8 border-t border-[#2a2a3a]">
        <p class="font-mono text-[#a855f7] text-sm mb-4">[SHARE]</p>
        <div class="flex gap-4">
          <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 px-4 py-2 border border-[#2a2a3a] bg-[#12121a] text-[#d0d0e0] hover:border-[#a855f7]/50 hover:text-[#a855f7] transition-all duration-300"
            style="clip-path: polygon(0 6px, 6px 0, calc(100% - 6px) 0, 100% 6px, 100% calc(100% - 6px), calc(100% - 6px) 100%, 6px 100%, 0 calc(100% - 6px));"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
            X
          </a>
          <a
            href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(Astro.url.href)}&title=${encodeURIComponent(post.data.title)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 px-4 py-2 border border-[#2a2a3a] bg-[#12121a] text-[#d0d0e0] hover:border-[#a855f7]/50 hover:text-[#a855f7] transition-all duration-300"
            style="clip-path: polygon(0 6px, 6px 0, calc(100% - 6px) 0, 100% 6px, 100% calc(100% - 6px), calc(100% - 6px) 100%, 6px 100%, 0 calc(100% - 6px));"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
          <a
            href={`https://wa.me/?text=${encodeURIComponent(post.data.title + ' ' + Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 px-4 py-2 border border-[#2a2a3a] bg-[#12121a] text-[#d0d0e0] hover:border-[#a855f7]/50 hover:text-[#a855f7] transition-all duration-300"
            style="clip-path: polygon(0 6px, 6px 0, calc(100% - 6px) 0, 100% 6px, 100% calc(100% - 6px), calc(100% - 6px) 100%, 6px 100%, 0 calc(100% - 6px));"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            WhatsApp
          </a>
        </div>
      </div>

      <!-- Back to Blog -->
      <div class="mt-12">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-[#a855f7] font-mono hover:gap-3 transition-all"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
          חזרה לבלוג
        </a>
      </div>
    </div>
  </article>

  <!-- Related Posts -->
  {relatedPosts.length > 0 && (
    <section class="relative py-20 bg-[#0d0d12]">
      <div class="container mx-auto px-4 max-w-7xl">
        <header class="text-center mb-12">
          <p class="font-mono text-[#a855f7] text-sm mb-2">[RELATED]</p>
          <h2 class="text-2xl md:text-3xl font-black">
            מאמרים <span class="text-[#a855f7]">קשורים</span>
          </h2>
        </header>

        <div class="grid md:grid-cols-3 gap-8">
          {relatedPosts.map((relatedPost) => (
            <article
              class="group relative border border-[#2a2a3a] bg-[#12121a] hover:border-[#a855f7]/30 transition-all duration-300 overflow-hidden"
              style="clip-path: polygon(0 15px, 15px 0, calc(100% - 15px) 0, 100% 15px, 100% calc(100% - 15px), calc(100% - 15px) 100%, 15px 100%, 0 calc(100% - 15px));"
            >
              {relatedPost.data.heroImage && (
                <div class="relative h-40 overflow-hidden">
                  <img
                    src={relatedPost.data.heroImage}
                    alt={relatedPost.data.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-[#12121a] to-transparent"></div>
                </div>
              )}

              <div class="p-6">
                <h3 class="text-lg font-bold text-white mb-2 group-hover:text-[#a855f7] transition-colors line-clamp-2">
                  <a href={`/blog/${relatedPost.id}`}>
                    {relatedPost.data.title}
                  </a>
                </h3>
                <p class="text-[#d0d0e0] text-sm line-clamp-2">
                  {relatedPost.data.description}
                </p>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <Footer slot="footer" />
</BaseLayout>

<style>
  /* Prose styling for article content */
  .prose {
    color: #d0d0e0;
  }

  .prose h2 {
    color: white;
    font-size: 1.75rem;
    font-weight: 800;
    margin-top: 2rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid #2a2a3a;
    padding-bottom: 0.5rem;
  }

  .prose h3 {
    color: white;
    font-size: 1.25rem;
    font-weight: 700;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.8;
  }

  .prose a {
    color: #a855f7;
    text-decoration: none;
  }

  .prose a:hover {
    text-decoration: underline;
  }

  .prose strong {
    color: white;
  }

  .prose ul, .prose ol {
    margin-bottom: 1.25rem;
    padding-right: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose code {
    background: #1a1a24;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
    color: #a855f7;
  }

  .prose pre {
    background: #1a1a24;
    border: 1px solid #2a2a3a;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1.25rem;
  }

  .prose pre code {
    background: transparent;
    padding: 0;
  }

  .prose blockquote {
    border-right: 4px solid #a855f7;
    padding-right: 1rem;
    margin-right: 0;
    font-style: italic;
    color: #b0b0c0;
  }

  .prose img {
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
