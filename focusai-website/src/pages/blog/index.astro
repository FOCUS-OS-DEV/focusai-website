---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';
import TerminalTypewriter from '../../components/TerminalTypewriter.astro';

// Page metadata
const pageTitle = 'Focus AI | בלוג - חדשות, מדריכים וטיפים בעולם ה-AI';
const pageDescription = 'הבלוג של Focus AI - מאמרים, מדריכים וטיפים מעשיים על בינה מלאכותית, אוטומציות, סוכני AI ועוד.';

// Get all blog posts sorted by date
const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Categories for filtering
const categories = [
  { id: 'all', label: 'הכל', code: 'ALL' },
  { id: 'ai-agents', label: 'סוכני AI', code: 'AGENTS' },
  { id: 'automation', label: 'אוטומציות', code: 'AUTO' },
  { id: 'tools', label: 'כלי AI', code: 'TOOLS' },
  { id: 'guides', label: 'מדריכים', code: 'GUIDES' },
  { id: 'news', label: 'חדשות', code: 'NEWS' },
];

// Format date in Hebrew
function formatDate(date: Date): string {
  return date.toLocaleDateString('he-IL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header slot="header" currentPath="/blog" />

  <!-- Hero Section -->
  <section class="relative pt-24 pb-16 overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 z-0 pointer-events-none" aria-hidden="true">
      <div class="absolute top-1/4 right-1/4 w-[400px] h-[400px] bg-purple-500/15 rounded-full blur-[120px]"></div>
      <div class="absolute bottom-1/4 left-1/4 w-[300px] h-[300px] bg-[#a855f7]/10 rounded-full blur-[100px]"></div>
      <!-- Grid pattern -->
      <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(rgba(168, 85, 247, 0.5) 1px, transparent 1px), linear-gradient(90deg, rgba(168, 85, 247, 0.5) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10 max-w-7xl">
      <header class="text-center mb-12">
        <p class="font-mono text-[#a855f7] text-sm mb-4 uppercase tracking-wider">[BLOG]</p>

        <TerminalTypewriter
          id="tw-blog"
          texts={[
            "fetching latest_articles...",
            "מדריכים מעשיים מהשטח",
            "reading_time.reduce() // we keep it short",
            "טיפים שאפשר ליישם מיד",
            "cat blog/*.md | grep 'practical tips'",
            "כותבים על AI בלי באזוורדס מיותרים",
            "new Post('something actually useful')",
          ]}
        />

        <h1 class="text-4xl sm:text-5xl md:text-6xl font-black mb-6">
          <span class="text-white">הבלוג של </span>
          <span class="text-[#a855f7]" style="text-shadow: 0 0 40px rgba(168, 85, 247, 0.5);">Focus AI</span>
        </h1>
        <p class="text-lg md:text-xl text-[#d0d0e0] max-w-2xl mx-auto">
          מאמרים, מדריכים וטיפים מעשיים על בינה מלאכותית, אוטומציות וסוכני AI
        </p>
      </header>

      <!-- Category Filter -->
      <div class="flex flex-wrap justify-center gap-3 mb-12">
        {categories.map((category) => (
          <button
            data-category={category.id}
            class="category-btn px-4 py-2 border border-[#2a2a3a] bg-[#12121a] text-[#d0d0e0] font-mono text-sm transition-all duration-300 hover:border-[#a855f7]/50 hover:text-[#a855f7] data-[active=true]:bg-[#a855f7] data-[active=true]:text-[#0a0a0f] data-[active=true]:border-[#a855f7]"
            style="clip-path: polygon(0 6px, 6px 0, calc(100% - 6px) 0, 100% 6px, 100% calc(100% - 6px), calc(100% - 6px) 100%, 6px 100%, 0 calc(100% - 6px));"
          >
            <span class="text-xs opacity-70">[{category.code}]</span> {category.label}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="relative pb-20">
    <div class="container mx-auto px-4 max-w-7xl">
      {posts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" id="posts-grid">
          {posts.map((post) => (
            <article
              class="post-card group relative border border-[#2a2a3a] bg-[#12121a] hover:border-[#a855f7]/30 transition-all duration-300 overflow-hidden"
              data-tags={post.data.tags?.join(',') || ''}
              style="clip-path: polygon(0 15px, 15px 0, calc(100% - 15px) 0, 100% 15px, 100% calc(100% - 15px), calc(100% - 15px) 100%, 15px 100%, 0 calc(100% - 15px));"
            >
              <!-- Hero Image -->
              {post.data.heroImage && (
                <div class="relative h-48 overflow-hidden">
                  <img
                    src={post.data.heroImage}
                    alt={post.data.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-[#12121a] to-transparent"></div>
                </div>
              )}

              <div class="p-6">
                <!-- Tags -->
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-3">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="px-2 py-1 bg-[#a855f7]/10 text-[#a855f7] text-xs font-mono">
                        #{tag}
                      </span>
                    ))}
                  </div>
                )}

                <!-- Title -->
                <h2 class="text-xl font-bold text-white mb-3 group-hover:text-[#a855f7] transition-colors line-clamp-2">
                  <a href={`/blog/${post.id}`} class="block">
                    {post.data.title}
                  </a>
                </h2>

                <!-- Description -->
                <p class="text-[#d0d0e0] text-sm mb-4 line-clamp-3">
                  {post.data.description}
                </p>

                <!-- Meta -->
                <div class="flex items-center justify-between text-xs font-mono text-[#b0b0c0]">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                  {post.data.author && (
                    <span>{post.data.author}</span>
                  )}
                </div>

                <!-- Read More Link -->
                <a
                  href={`/blog/${post.id}`}
                  class="mt-4 inline-flex items-center gap-2 text-[#a855f7] text-sm font-mono hover:gap-3 transition-all"
                >
                  קרא עוד
                  <svg class="w-4 h-4 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>

              <!-- Corner decoration -->
              <div class="absolute top-0 left-0 w-3 h-3 border-t-2 border-l-2 border-[#a855f7] opacity-0 group-hover:opacity-100 transition-opacity"></div>
              <div class="absolute top-0 right-0 w-3 h-3 border-t-2 border-r-2 border-[#a855f7] opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </article>
          ))}
        </div>
      ) : (
        <!-- Empty State -->
        <div class="text-center py-20">
          <div class="inline-flex items-center justify-center w-24 h-24 bg-[#12121a] border border-[#2a2a3a] mb-6" style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);">
            <svg class="w-12 h-12 text-[#b0b0c0]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
          </div>
          <h2 class="text-2xl font-bold text-white mb-4">עוד לא פרסמנו מאמרים</h2>
          <p class="text-[#d0d0e0] mb-8">בקרוב יעלו כאן מאמרים, מדריכים וטיפים מעשיים על עולם ה-AI</p>
          <a
            href="/"
            class="inline-flex items-center gap-2 px-6 py-3 bg-[#a855f7] text-[#0a0a0f] font-mono font-bold uppercase tracking-wider transition-all duration-300 hover:shadow-[0_0_30px_rgba(0,255,136,0.4)]"
            style="clip-path: polygon(0 6px, 6px 0, calc(100% - 6px) 0, 100% 6px, 100% calc(100% - 6px), calc(100% - 6px) 100%, 6px 100%, 0 calc(100% - 6px));"
          >
            חזרה לדף הבית
          </a>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="relative py-20 bg-[#0d0d12]">
    <div class="container mx-auto px-4 max-w-2xl">
      <div class="relative p-8 md:p-12 border border-[#2a2a3a] bg-[#12121a] text-center" style="clip-path: polygon(0 20px, 20px 0, calc(100% - 20px) 0, 100% 20px, 100% calc(100% - 20px), calc(100% - 20px) 100%, 20px 100%, 0 calc(100% - 20px));">
        <!-- Decorative corners -->
        <div class="absolute top-0 left-0 w-4 h-4 border-t-2 border-l-2 border-[#a855f7]"></div>
        <div class="absolute top-0 right-0 w-4 h-4 border-t-2 border-r-2 border-[#a855f7]"></div>
        <div class="absolute bottom-0 left-0 w-4 h-4 border-b-2 border-l-2 border-[#a855f7]"></div>
        <div class="absolute bottom-0 right-0 w-4 h-4 border-b-2 border-r-2 border-[#a855f7]"></div>

        <p class="font-mono text-[#a855f7] text-sm mb-2">[NEWSLETTER]</p>
        <h2 class="text-2xl md:text-3xl font-black mb-4">
          הישארו <span class="text-[#a855f7]">מעודכנים</span>
        </h2>
        <p class="text-[#d0d0e0] mb-6">
          הירשמו לניוזלטר וקבלו עדכונים על מאמרים חדשים, טיפים וחדשות מעולם ה-AI
        </p>

        <form class="flex flex-col sm:flex-row gap-4">
          <input
            type="email"
            placeholder="האימייל שלך"
            required
            class="flex-1 px-4 py-3 bg-[#0a0a0f] border border-[#2a2a3a] text-white focus:border-[#a855f7] focus:outline-none transition-colors font-mono text-center sm:text-right"
          />
          <button
            type="submit"
            class="px-6 py-3 bg-[#a855f7] text-[#0a0a0f] font-mono font-bold uppercase tracking-wider transition-all duration-300 hover:shadow-[0_0_30px_rgba(0,255,136,0.4)]"
            style="clip-path: polygon(0 6px, 6px 0, calc(100% - 6px) 0, 100% 6px, 100% calc(100% - 6px), calc(100% - 6px) 100%, 6px 100%, 0 calc(100% - 6px));"
          >
            הרשמה
          </button>
        </form>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<script>
  // Category filter functionality
  const categoryBtns = document.querySelectorAll('.category-btn');
  const postCards = document.querySelectorAll('.post-card');

  // Set initial active state
  categoryBtns[0]?.setAttribute('data-active', 'true');

  categoryBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      // Update active state
      categoryBtns.forEach(b => b.setAttribute('data-active', 'false'));
      btn.setAttribute('data-active', 'true');

      const category = btn.getAttribute('data-category');

      // Filter posts
      postCards.forEach(card => {
        const tags = card.getAttribute('data-tags')?.toLowerCase() || '';

        if (category === 'all') {
          card.style.display = 'block';
        } else if (tags.includes(category.replace('-', ''))) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    });
  });
</script>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
