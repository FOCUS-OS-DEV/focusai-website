---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CTAContact from '../components/CTAContact.astro';
import { founders } from '../data';

const pageTitle = 'אודות | Focus AI - הסיפור שלנו';
const pageDescription = 'Focus AI הוקמה כדי לגשר על הפער בין עולמות הניהול והאסטרטגיה לעולמות הפיתוח והטכנולוגיה. הכירו את הסיפור שלנו.';

const foundersData = {
  shahar: {
    ...founders[0],
    expertise: ["אפיון והטמעת סוכני AI", "ייעוץ אסטרטגי", "מרצה אקדמי"],
    background: "עורך דין ויזם סדרתי, המשלב רקע משפטי-עסקי עם מומחיות טכנולוגית מעמיקה בתחום ה-AI. מרצה באוניברסיטת חיפה ובטכניון.",
  },
  unil: {
    ...founders[1],
    expertise: ["פיתוח עסקי", "תפעול וצמיחה", "מרצה אקדמי"],
    background: "סמנכ\"ל תפעול ושיווק לשעבר ברשתות מובילות, עם ניסיון עשיר בניהול מאות עובדים ועשרות סניפים. מרצה באוניברסיטת חיפה ובטכניון.",
  }
};

const academyPillar = {
  title: "מערך הכשרה ואקדמיה",
  subtitle: "ACADEMY_DIVISION",
  items: [
    "תכניות לימודי תעודה יוקרתיות בשיתוף היחידה ללימודי חוץ באוניברסיטת חיפה",
    "סדנאות AI פנים-ארגוניות מותאמות אישית",
    "הכשרה מקצועית משלב האבחון ועד לשילוב כלים חכמים בשגרת העבודה",
    "ליווי ארגונים, מוסדות חינוך וגופים ציבוריים",
  ]
};

const integrationPillar = {
  title: "חטיבת אינטגרציה ופיתוח",
  subtitle: "INTEGRATION_DIVISION",
  items: [
    "פיתוח סוכני AI וצ'אטבוטים מתקדמים",
    "אוטומציות חכמות ומערכות שלמות",
    "פתרונות AI מותאמים אישית לחברות וארגונים",
    "ליווי מקצה לקצה - מאפיון ועד הטמעה",
  ]
};

const differentiators = [
  {
    number: "01",
    title: "הידע מגיע מהשטח",
    desc: "מפרויקטים ואתגרים אמיתיים. לא תיאוריה מספרי לימוד - פתרונות שעובדים.",
  },
  {
    number: "02",
    title: "מקרי בוחן אמיתיים",
    desc: "חלק ממקרי הבוחן שמוצגים בהכשרות הם מלקוחות אמיתיים שלנו.",
  },
  {
    number: "03",
    title: "גיבוי אקדמי",
    desc: "תכניות בשיתוף היחידה ללימודי חוץ באוניברסיטת חיפה. תעודה מוכרת ומוערכת.",
  },
  {
    number: "04",
    title: "2-3 מרצים בכל מפגש",
    desc: "לא מרצה בודד. צוות מלא שמביא פרספקטיבות שונות ותשומת לב אישית.",
  },
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header slot="header" currentPath="/about" />

  <!-- ============================================ -->
  <!-- 1. HERO - The Opening                       -->
  <!-- ============================================ -->
  <section class="relative min-h-[60vh] flex items-center pt-32 pb-16 overflow-hidden">
    <div class="absolute inset-0 z-0 pointer-events-none">
      <div class="absolute top-1/4 right-1/4 w-[600px] h-[600px] bg-[#c084fc]/10 rounded-full blur-[150px]"></div>
      <div class="absolute bottom-1/4 left-1/4 w-[500px] h-[500px] bg-[#a855f7]/10 rounded-full blur-[120px]"></div>
      <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(rgba(168, 85, 247, 0.5) 1px, transparent 1px), linear-gradient(90deg, rgba(168, 85, 247, 0.5) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10 max-w-5xl text-center">
      <div class="inline-flex items-center gap-3 px-5 py-2.5 rounded-full bg-white/[0.03] backdrop-blur-sm border border-white/[0.08] mb-8">
        <span class="w-1.5 h-1.5 rounded-full bg-[#a855f7] animate-pulse"></span>
        <span class="text-xs text-[#a855f7] uppercase tracking-[0.2em]">הסיפור שלנו</span>
      </div>

      <h1 class="text-3xl sm:text-4xl md:text-6xl lg:text-7xl font-black mb-6">
        <span class="text-[#f5f5fa]">הסיפור של</span>
        <span class="block mt-2 gradient-text-glow">Focus AI</span>
      </h1>

      <p class="text-lg md:text-xl text-[#b0b0c0] max-w-3xl mx-auto leading-relaxed">
        הגשר בין עולמות הניהול והאסטרטגיה
        <span class="text-[#f5f5fa] font-medium"> לבין עולמות הפיתוח והטכנולוגיה</span>
      </p>
    </div>
  </section>

  <!-- ============================================ -->
  <!-- 2. THE BRIDGE - Origin Story                 -->
  <!-- ============================================ -->
  <section class="relative py-20 lg:py-28 overflow-hidden">
    <div class="container mx-auto px-4 max-w-5xl">

      <!-- Section Header -->
      <div class="text-center mb-16">
        <p class="font-mono text-[#c084fc] text-sm mb-4 tracking-wider">[ORIGIN_STORY]</p>
        <h2 class="text-3xl md:text-5xl font-black mb-6">
          <span class="text-[#f5f5fa]">איך</span>
          <span class="text-[#a855f7]"> הכל התחיל</span>
        </h2>
      </div>

      <!-- Narrative Cards -->
      <div class="space-y-8 max-w-4xl mx-auto">

        <!-- Card 1: The Founders -->
        <div class="relative bg-white/[0.03] backdrop-blur-xl border border-white/[0.08] rounded-2xl overflow-hidden shadow-[0_8px_32px_rgba(0,0,0,0.3)] p-8 md:p-10">
          <div class="absolute top-0 right-0 w-32 h-32 bg-[#a855f7]/5 rounded-full blur-[60px]"></div>
          <div class="relative">
            <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-[#a855f7]/10 border border-[#a855f7]/20 mb-6">
              <span class="w-1.5 h-1.5 rounded-full bg-[#a855f7]"></span>
              <span class="text-xs text-[#a855f7] font-medium">ההתחלה</span>
            </div>
            <p class="text-lg md:text-xl text-[#d0d0e0] leading-relaxed">
              החברה הוקמה על-ידי <span class="text-white font-semibold">שחר דדיה</span> ו<span class="text-white font-semibold">אוניל סחר</span>,
              מומחים לעולמות האוטומציה, החדשנות והעסקים, אשר חיברו בין
              <span class="text-[#c084fc] font-medium"> ניסיון ניהולי עשיר</span> בתחום הקמעונאות, השיווק והייעוץ הארגוני
              לבין <span class="text-[#a855f7] font-medium">מומחיות טכנולוגית</span> בפיתוח פתרונות AI מתקדמים.
            </p>
          </div>
        </div>

        <!-- Card 2: The Gap -->
        <div class="relative bg-white/[0.03] backdrop-blur-xl border border-white/[0.08] rounded-2xl overflow-hidden shadow-[0_8px_32px_rgba(0,0,0,0.3)] p-8 md:p-10">
          <div class="absolute bottom-0 left-0 w-32 h-32 bg-[#c084fc]/5 rounded-full blur-[60px]"></div>
          <div class="relative">
            <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-[#c084fc]/10 border border-[#c084fc]/20 mb-6">
              <span class="w-1.5 h-1.5 rounded-full bg-[#c084fc]"></span>
              <span class="text-xs text-[#c084fc] font-medium">התובנה</span>
            </div>
            <p class="text-lg md:text-xl text-[#d0d0e0] leading-relaxed">
              לאחר שנים של ניהול ועבודה עם ארגונים גדולים, הבנו שחייבים לבנות
              <span class="text-white font-semibold"> גשר אמיתי</span> בין עולמות הניהול והאסטרטגיה
              לבין עולמות הפיתוח והטכנולוגיה.
            </p>

            <!-- Visual Bridge -->
            <div class="flex items-center justify-center gap-4 mt-8 py-6">
              <div class="flex-1 text-center">
                <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-[#c084fc]/10 border border-[#c084fc]/20 mb-3">
                  <svg class="w-7 h-7 text-[#c084fc]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                </div>
                <p class="text-sm text-[#c084fc] font-medium">ניהול ואסטרטגיה</p>
              </div>

              <div class="flex flex-col items-center gap-1">
                <div class="w-16 h-px bg-gradient-to-r from-[#c084fc] to-[#a855f7]"></div>
                <svg class="w-5 h-5 text-[#a855f7]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/></svg>
                <div class="w-16 h-px bg-gradient-to-r from-[#c084fc] to-[#a855f7]"></div>
              </div>

              <div class="flex-1 text-center">
                <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-[#a855f7]/10 border border-[#a855f7]/20 mb-3">
                  <svg class="w-7 h-7 text-[#a855f7]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>
                </div>
                <p class="text-sm text-[#a855f7] font-medium">פיתוח וטכנולוגיה</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!-- 3. TWO PILLARS - Academy + Integration       -->
  <!-- ============================================ -->
  <section class="relative py-20 lg:py-28 bg-[#0d0d12]">
    <div class="container mx-auto px-4 max-w-6xl">

      <div class="text-center mb-16">
        <p class="font-mono text-[#a855f7] text-sm mb-4 tracking-wider">[WHAT_WE_DO]</p>
        <h2 class="text-3xl md:text-5xl font-black mb-6">
          <span class="text-[#f5f5fa]">שתי זרועות,</span>
          <span class="text-[#a855f7]"> חזון אחד</span>
        </h2>
        <p class="text-[#b0b0c0] text-lg max-w-2xl mx-auto">
          Focus AI משלבת מערך הכשרה אקדמי עם חטיבת אינטגרציה שמפתחת פתרונות AI מותאמים
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-8">

        <!-- Academy Pillar -->
        <div class="relative bg-white/[0.03] backdrop-blur-xl border border-white/[0.08] rounded-2xl overflow-hidden hover:border-[#c084fc]/30 transition-all duration-500 shadow-[0_8px_32px_rgba(0,0,0,0.3)] group">
          <div class="flex items-center justify-between px-6 py-3 border-b border-white/[0.06] bg-white/[0.03]">
            <div class="flex items-center gap-2">
              <span class="w-1.5 h-1.5 rounded-full bg-[#c084fc] animate-pulse"></span>
              <span class="text-xs text-[#c084fc] font-medium">אקדמיה</span>
            </div>
            <span class="font-mono text-[11px] text-[#b0b0c0]/40 tracking-wider">{academyPillar.subtitle}</span>
          </div>

          <div class="p-8">
            <div class="w-14 h-14 flex items-center justify-center bg-[#c084fc]/10 border border-[#c084fc]/20 rounded-xl mb-6 group-hover:bg-[#c084fc]/15 transition-colors">
              <svg class="w-7 h-7 text-[#c084fc]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 14l9-5-9-5-9 5 9 5z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/></svg>
            </div>

            <h3 class="text-2xl font-bold text-white mb-4">{academyPillar.title}</h3>
            <p class="text-[#b0b0c0] mb-6">
              הכשרה מקצועית אמיתית - מתכניות תעודה אקדמיות ועד סדנאות ארגוניות מותאמות אישית
            </p>

            <ul class="space-y-3">
              {academyPillar.items.map((item) => (
                <li class="flex items-start gap-3">
                  <span class="mt-2 w-1.5 h-1.5 rounded-full bg-[#c084fc] flex-shrink-0"></span>
                  <span class="text-[#d0d0e0]">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <!-- Integration Pillar -->
        <div class="relative bg-white/[0.03] backdrop-blur-xl border border-white/[0.08] rounded-2xl overflow-hidden hover:border-[#a855f7]/30 transition-all duration-500 shadow-[0_8px_32px_rgba(0,0,0,0.3)] group">
          <div class="flex items-center justify-between px-6 py-3 border-b border-white/[0.06] bg-white/[0.03]">
            <div class="flex items-center gap-2">
              <span class="w-1.5 h-1.5 rounded-full bg-[#a855f7] animate-pulse"></span>
              <span class="text-xs text-[#a855f7] font-medium">אינטגרציה</span>
            </div>
            <span class="font-mono text-[11px] text-[#b0b0c0]/40 tracking-wider">{integrationPillar.subtitle}</span>
          </div>

          <div class="p-8">
            <div class="w-14 h-14 flex items-center justify-center bg-[#a855f7]/10 border border-[#a855f7]/20 rounded-xl mb-6 group-hover:bg-[#a855f7]/15 transition-colors">
              <svg class="w-7 h-7 text-[#a855f7]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>
            </div>

            <h3 class="text-2xl font-bold text-white mb-4">{integrationPillar.title}</h3>
            <p class="text-[#b0b0c0] mb-6">
              פתרונות AI מותאמים אישית שמשנים את הדרך שבה עסקים עובדים - מאפיון ועד הטמעה מלאה
            </p>

            <ul class="space-y-3">
              {integrationPillar.items.map((item) => (
                <li class="flex items-start gap-3">
                  <span class="mt-2 w-1.5 h-1.5 rounded-full bg-[#a855f7] flex-shrink-0"></span>
                  <span class="text-[#d0d0e0]">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>

      <!-- Connection Line -->
      <div class="mt-10 text-center">
        <p class="text-[#b0b0c0] text-sm">
          <span class="text-[#c084fc]">אקדמיה</span>
          <span class="mx-3 text-[#a855f7]">+</span>
          <span class="text-[#a855f7]">אינטגרציה</span>
          <span class="mx-3 text-white">=</span>
          <span class="text-white font-semibold">ללמוד ממי שעושים את זה בעצמם</span>
        </p>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!-- 4. FROM THE FIELD - Differentiator           -->
  <!-- ============================================ -->
  <section class="relative py-20 lg:py-28 overflow-hidden">
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] bg-[#a855f7]/5 rounded-full blur-[150px]"></div>
    </div>

    <div class="container mx-auto px-4 max-w-5xl relative z-10">

      <div class="text-center mb-16">
        <p class="font-mono text-[#a855f7] text-sm mb-4 tracking-wider">[WHY_US]</p>
        <h2 class="text-3xl md:text-5xl font-black mb-6">
          <span class="text-[#f5f5fa]">ללמוד ממי שעושים</span>
          <span class="text-[#a855f7]"> את זה בעצמם</span>
        </h2>
        <p class="text-[#b0b0c0] text-lg max-w-2xl mx-auto">
          הידע שלנו מגיע מהשטח. מפרויקטים ואתגרים אמיתיים ופתרונות שעובדים.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {differentiators.map((d) => (
          <div class="diff-card relative bg-white/[0.03] backdrop-blur-xl border border-white/[0.08] rounded-2xl p-8 hover:border-[#a855f7]/30 transition-all duration-300 shadow-[0_8px_32px_rgba(0,0,0,0.3)]">
            <span class="font-mono text-4xl font-black text-[#a855f7]/15 absolute top-6 left-6">{d.number}</span>
            <div class="relative">
              <h3 class="text-xl font-bold text-white mb-3">{d.title}</h3>
              <p class="text-[#b0b0c0] leading-relaxed">{d.desc}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!-- 5. FOUNDERS                                  -->
  <!-- ============================================ -->
  <section class="relative py-20 lg:py-28 bg-[#0d0d12]">
    <div class="container mx-auto px-4 max-w-6xl">

      <div class="text-center mb-16">
        <p class="font-mono text-[#c084fc] text-sm mb-4 tracking-wider">[FOUNDERS]</p>
        <h2 class="text-3xl md:text-5xl font-black mb-6">
          <span class="text-[#f5f5fa]">הכירו את</span>
          <span class="text-[#c084fc]"> המייסדים</span>
        </h2>
      </div>

      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">

        <!-- Shahar -->
        <div class="founder-card relative bg-white/[0.03] backdrop-blur-xl border border-white/[0.08] overflow-hidden hover:border-[#c084fc]/30 transition-all duration-500 rounded-2xl shadow-[0_8px_32px_rgba(0,0,0,0.3)]">
          <div class="flex items-center justify-between px-6 py-3 border-b border-white/[0.06] bg-white/[0.03]">
            <div class="flex items-center gap-2">
              <span class="w-1.5 h-1.5 rounded-full bg-[#c084fc] animate-pulse"></span>
            </div>
            <span class="font-mono text-[11px] text-[#b0b0c0]/40 tracking-wider">FOUNDER_001</span>
          </div>

          <div class="p-8">
            <div class="flex items-start gap-6 mb-6">
              <div class="relative flex-shrink-0">
                <img
                  src={foundersData.shahar.image}
                  alt={foundersData.shahar.name}
                  class="w-24 h-24 lg:w-28 lg:h-28 object-cover rounded-xl border border-[#c084fc]/20"
                />
                <div class="absolute -bottom-1 -right-1 flex items-center gap-1 px-2 py-0.5 bg-[#0a0a0f] border border-[#c084fc]/40 rounded-full">
                  <span class="w-1.5 h-1.5 rounded-full bg-[#c084fc] animate-pulse"></span>
                  <span class="font-mono text-[10px] text-[#c084fc]">ONLINE</span>
                </div>
              </div>
              <div>
                <h3 class="text-2xl lg:text-3xl font-bold text-white mb-1">{foundersData.shahar.name}</h3>
                <p class="text-xs text-[#c084fc] uppercase tracking-wider mb-2">{foundersData.shahar.title}</p>
                <p class="text-sm text-[#b0b0c0]">{foundersData.shahar.role}</p>
              </div>
            </div>

            <p class="text-[#d0d0e0] leading-relaxed mb-6">{foundersData.shahar.background}</p>

            <div class="flex flex-wrap gap-2">
              {foundersData.shahar.expertise.map((exp) => (
                <span class="px-3 py-1.5 bg-[#c084fc]/10 border border-[#c084fc]/20 text-[#c084fc] text-xs rounded-full">
                  {exp}
                </span>
              ))}
            </div>
          </div>
        </div>

        <!-- Unil -->
        <div class="founder-card relative bg-white/[0.03] backdrop-blur-xl border border-white/[0.08] overflow-hidden hover:border-[#a855f7]/30 transition-all duration-500 rounded-2xl shadow-[0_8px_32px_rgba(0,0,0,0.3)]">
          <div class="flex items-center justify-between px-6 py-3 border-b border-white/[0.06] bg-white/[0.03]">
            <div class="flex items-center gap-2">
              <span class="w-1.5 h-1.5 rounded-full bg-[#a855f7] animate-pulse"></span>
            </div>
            <span class="font-mono text-[11px] text-[#b0b0c0]/40 tracking-wider">FOUNDER_002</span>
          </div>

          <div class="p-8">
            <div class="flex items-start gap-6 mb-6">
              <div class="relative flex-shrink-0">
                <img
                  src={foundersData.unil.image}
