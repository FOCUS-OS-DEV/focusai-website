---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import RelatedContent from '../../components/RelatedContent.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import TerminalTypewriter from '../../components/TerminalTypewriter.astro';

// Page metadata
const pageTitle = 'Focus AI | פיתוח ואינטגרציה של פתרונות AI';
const pageDescription = 'שירותי פיתוח ואינטגרציה של פתרונות AI - אוטומציות, חיבור מערכות, CRM, דשבורדים ופורטלי למידה.';

// Integration capabilities
const integrations = [
  {
    title: 'אוטומציות עסקיות',
    description: 'בניית תהליכים אוטומטיים שחוסכים שעות עבודה יומיות',
    tools: ['n8n', 'Zapier', 'Power Automate'],
    examples: [
      'טיפול אוטומטי בלידים נכנסים',
      'יצירת הצעות מחיר אוטומטיות',
      'סנכרון בין מערכות',
      'תזכורות ומעקב אוטומטי'
    ],
    code: 'AUTO',
    iconType: 'bolt'
  },
  {
    title: 'אינטגרציות CRM',
    description: 'חיבור חכם בין כל המערכות למרכז ניהול אחד',
    tools: ['Monday.com', 'HubSpot', 'Salesforce', 'Pipedrive'],
    examples: [
      'ניהול לקוחות מרכזי',
      'מעקב אחרי מסע הלקוח',
      'דיווח ואנליטיקס אוטומטי',
      'ניהול משימות וצוותים'
    ],
    code: 'CRM',
    iconType: 'link'
  },
  {
    title: 'דשבורדים וBI',
    description: 'מרכז שליטה אחד עם כל המידע העסקי שלכם',
    tools: ['Looker Studio', 'Power BI', 'Metabase', 'Custom Dashboards'],
    examples: [
      'KPIs בזמן אמת',
      'דוחות אוטומטיים',
      'התראות חכמות',
      'ניתוח מגמות'
    ],
    code: 'DASH',
    iconType: 'chart'
  },
  {
    title: 'פורטלי למידה',
    description: 'פלטפורמות הדרכה מותאמות אישית לארגון',
    tools: ['Custom LMS', 'Teachable', 'Thinkific', 'LearnDash'],
    examples: [
      'קורסים מובנים',
      'מעקב התקדמות',
      'בחינות והסמכות',
      'תוכן אינטראקטיבי'
    ],
    code: 'LMS',
    iconType: 'academic'
  }
];

// Tech stack
const techStack = [
  { category: 'Automation', tools: ['n8n', 'Zapier', 'Power Automate'] },
  { category: 'Databases', tools: ['Supabase', 'Firebase', 'PostgreSQL', 'MongoDB'] },
  { category: 'CRM', tools: ['Monday', 'HubSpot', 'Salesforce', 'Airtable'] },
  { category: 'AI/ML', tools: ['OpenAI', 'Claude', 'Gemini', 'Custom Models'] },
  { category: 'Frontend', tools: ['React', 'Next.js', 'Astro', 'Vue'] },
  { category: 'Cloud', tools: ['AWS', 'GCP', 'Vercel', 'Railway'] }
];

// Process
const processSteps = [
  {
    step: 1,
    title: 'הגדרת דרישות',
    description: 'מפרט טכני מפורט על בסיס האפיון',
    code: 'SPEC'
  },
  {
    step: 2,
    title: 'פיתוח איטרטיבי',
    description: 'בנייה בשלבים עם פידבק שוטף',
    code: 'DEV'
  },
  {
    step: 3,
    title: 'בדיקות ו-QA',
    description: 'וידוא איכות ותיקון באגים',
    code: 'QA'
  },
  {
    step: 4,
    title: 'השקה והטמעה',
    description: 'העלאה לאוויר והדרכת צוותים',
    code: 'DEPLOY'
  },
  {
    step: 5,
    title: 'תחזוקה ותמיכה',
    description: 'ליווי שוטף ושיפורים מתמידים',
    code: 'SUPPORT'
  }
];

// Use cases
const useCases = [
  {
    title: 'חברת שירותים פיננסיים',
    challenge: 'עיבוד ידני של בקשות הלוואה לקח 3 ימים',
    solution: 'אוטומציה מלאה עם בדיקות AI אוטומטיות',
    result: 'צמצום ל-4 שעות עם דיוק של 99%',
    iconType: 'bank'
  },
  {
    title: 'חברת הדרכות',
    challenge: 'ניהול 500+ משתתפים ב-Excel',
    solution: 'פורטל למידה + CRM משולב',
    result: 'חיסכון של 20 שעות שבועיות',
    iconType: 'book'
  },
  {
    title: 'סוכנות שיווק',
    challenge: 'יצירת דוחות לקוחות ידניים',
    solution: 'דשבורד אוטומטי עם נתונים בזמן אמת',
    result: '80% פחות זמן על דיווח',
    iconType: 'trending'
  }
];

// Pricing tiers
const pricingTiers = [
  {
    name: 'Starter',
    description: 'אוטומציות בסיסיות',
    features: ['עד 5 תהליכים אוטומטיים', 'אינטגרציה ל-2 מערכות', 'תמיכה בסיסית'],
    code: 'TIER_1'
  },
  {
    name: 'Business',
    description: 'פתרון עסקי מלא',
    features: ['אוטומציות ללא הגבלה', 'CRM מותאם', 'דשבורד מנהלים', 'תמיכה מועדפת'],
    code: 'TIER_2',
    featured: true
  },
  {
    name: 'Enterprise',
    description: 'פתרון ארגוני',
    features: ['כל הפיצ\'רים', 'פיתוח מותאם', 'SLA מורחב', 'ייעוץ אסטרטגי שוטף'],
    code: 'TIER_3'
  }
];

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "פיתוח ואינטגרציה של פתרונות AI",
  "description": pageDescription,
  "provider": { "@type": "Organization", "name": "Focus AI", "url": "https://focusai.co.il" },
  "areaServed": { "@type": "Country", "name": "Israel" },
  "availableChannel": { "@type": "ServiceChannel", "serviceUrl": "https://focusai.co.il/services/development" }
};
---

<BaseLayout title={pageTitle} description={pageDescription} structuredData={serviceSchema}>
  <Header slot="header" currentPath="/services/development" />

  <Breadcrumbs items={[
    { label: "דף הבית", href: "/" },
    { label: "שירותים", href: "/#services" },
    { label: "פיתוח ואינטגרציה" }
  ]} />

  <!-- Hero Section -->
  <section class="relative min-h-[80vh] flex items-center pt-24 pb-16 overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 z-0 pointer-events-none" aria-hidden="true">
      <div class="absolute top-1/4 left-1/4 w-[500px] h-[500px] bg-blue-500/15 rounded-full blur-[150px]"></div>
      <div class="absolute bottom-1/3 right-1/4 w-[400px] h-[400px] bg-[#a855f7]/10 rounded-full blur-[120px]"></div>
      <!-- Grid pattern -->
      <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(rgba(168, 85, 247, 0.5) 1px, transparent 1px), linear-gradient(90deg, rgba(168, 85, 247, 0.5) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10 max-w-7xl">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Content -->
        <div>
          <p class="font-mono text-[#a855f7] text-sm mb-4 uppercase tracking-wider">[SERVICE_02] DEVELOPMENT & INTEGRATION</p>

          <TerminalTypewriter
            id="tw-dev"
            texts={[
              "connecting systems... all of them",
              "בונים את הגשרים בין המערכות שלכם",
              "n8n workflow deployed successfully",
              "אוטומציות שחוסכות שעות ביום",
              "SELECT * FROM boring_tasks WHERE automate=true",
              "דשבורדים שנותנים תמונה מלאה",
              "integration.complete(); // that was easy",
            ]}
          />

          <h1 class="text-2xl sm:text-3xl md:text-5xl lg:text-6xl font-black mb-6 leading-tight">
            <span class="block text-white">פיתוח</span>
            <span class="text-[#a855f7]" style="text-shadow: 0 0 40px rgba(168, 85, 247, 0.5);">ואינטגרציה</span>
          </h1>

          <p class="text-lg md:text-xl text-[#d0d0e0] mb-8 leading-relaxed">
            אנחנו בונים את הגשרים בין המערכות שלכם. אוטומציות חכמות, חיבורי CRM, דשבורדים ופורטלים - הכל מחובר לחוויה אחת חלקה.
          </p>

          <div class="flex flex-wrap gap-3 mb-8">
            {['n8n', 'Monday', 'Supabase', 'OpenAI'].map(tool => (
              <span class="px-3 py-1 bg-[#12121a] border border-[#2a2a3a] text-[#d0d0e0] text-sm font-mono">{tool}</span>
            ))}
          </div>

          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="#contact"
              class="group relative px-8 py-4 bg-[#a855f7] text-[#0a0a0f] font-mono font-bold uppercase tracking-wider transition-all duration-300 hover:shadow-[0_0_40px_rgba(0,255,136,0.5)] text-center rounded-xl"
            >
              <span class="flex items-center justify-center gap-2">
                <span class="w-2 h-2 rounded-full bg-[#0a0a0f] animate-pulse"></span>
                בואו נבנה יחד
              </span>
            </a>
            <a
              href="#capabilities"
              class="px-8 py-4 border-2 border-[#a855f7]/50 text-[#a855f7] font-mono uppercase tracking-wider hover:bg-[#a855f7]/10 transition-all duration-300 text-center rounded-xl"
            >
              היכולות שלנו
            </a>
          </div>
        </div>

        <!-- Visual Element - Integration Diagram -->
        <div class="relative hidden lg:block">
          <div class="relative p-8 border border-white/[0.08] bg-white/[0.03] backdrop-blur-xl rounded-2xl">
            <!-- Integration Flow Visualization -->
            <div class="relative h-80">
              <!-- Center Hub -->
              <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-24 h-24 bg-[#a855f7] rounded-xl flex items-center justify-center" style="box-shadow: 0 0 40px rgba(168, 85, 247, 0.4);">
                <span class="text-[#0a0a0f] font-bold text-center text-sm">Focus AI<br/>Hub</span>
              </div>

              <!-- Connected Systems -->
              <div class="absolute top-4 left-1/2 transform -translate-x-1/2 px-4 py-2 bg-[#1a1a24] border border-[#2a2a3a] text-[#d0d0e0] text-sm font-mono">CRM</div>
              <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 px-4 py-2 bg-[#1a1a24] border border-[#2a2a3a] text-[#d0d0e0] text-sm font-mono">Database</div>
              <div class="absolute top-1/2 left-4 transform -translate-y-1/2 px-4 py-2 bg-[#1a1a24] border border-[#2a2a3a] text-[#d0d0e0] text-sm font-mono">Website</div>
              <div class="absolute top-1/2 right-4 transform -translate-y-1/2 px-4 py-2 bg-[#1a1a24] border border-[#2a2a3a] text-[#d0d0e0] text-sm font-mono">AI Models</div>
              <div class="absolute top-1/4 left-8 px-4 py-2 bg-[#1a1a24] border border-[#2a2a3a] text-[#d0d0e0] text-sm font-mono">Email</div>
              <div class="absolute top-1/4 right-8 px-4 py-2 bg-[#1a1a24] border border-[#2a2a3a] text-[#d0d0e0] text-sm font-mono">WhatsApp</div>
              <div class="absolute bottom-1/4 left-8 px-4 py-2 bg-[#1a1a24] border border-[#2a2a3a] text-[#d0d0e0] text-sm font-mono">Payments</div>
              <div class="absolute bottom-1/4 right-8 px-4 py-2 bg-[#1a1a24] border border-[#2a2a3a] text-[#d0d0e0] text-sm font-mono">Analytics</div>

              <!-- Connection Lines (SVG) -->
              <svg class="absolute inset-0 w-full h-full" style="z-index: -1;">
                <defs>
                  <linearGradient id="lineGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                    <stop offset="0%" style="stop-color:rgba(0,255,136,0.1)" />
                    <stop offset="50%" style="stop-color:rgba(0,255,136,0.5)" />
                    <stop offset="100%" style="stop-color:rgba(0,255,136,0.1)" />
                  </linearGradient>
                </defs>
                <line x1="50%" y1="20%" x2="50%" y2="38%" stroke="url(#lineGradient)" stroke-width="2" />
                <line x1="50%" y1="62%" x2="50%" y2="80%" stroke="url(#lineGradient)" stroke-width="2" />
                <line x1="20%" y1="50%" x2="38%" y2="50%" stroke="url(#lineGradient)" stroke-width="2" />
                <line x1="62%" y1="50%" x2="80%" y2="50%" stroke="url(#lineGradient)" stroke-width="2" />
              </svg>
            </div>

            <p class="text-center text-[#b0b0c0] text-sm font-mono mt-4">הכל מחובר. הכל אוטומטי. הכל חכם.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Capabilities Section -->
  <section id="capabilities" class="relative py-20 bg-[#0d0d12]">
    <div class="container mx-auto px-4 max-w-7xl">
      <header class="text-center mb-16" data-animate="fade-up">
        <p class="font-mono text-[#a855f7] text-sm mb-2">[CAPABILITIES]</p>
        <h2 class="text-3xl md:text-4xl font-black mb-4">
          מה אנחנו <span class="text-[#a855f7]">בונים?</span>
        </h2>
        <p class="text-[#d0d0e0] max-w-2xl mx-auto">
          פתרונות מותאמים שמחברים את כל המערכות לחוויה אחת יעילה
        </p>
      </header>

      <div class="grid md:grid-cols-2 gap-8" data-animate="stagger">
        {integrations.map((item) => (
          <div
            class="relative p-8 border border-white/[0.08] bg-white/[0.03] backdrop-blur-xl hover:border-[#a855f7]/30 transition-all duration-300 rounded-2xl"
          >
            <!-- Header -->
            <div class="flex items-start gap-4 mb-6">
              <div class="w-12 h-12 flex items-center justify-center border border-[#a855f7]/30 bg-[#a855f7]/5">
                {item.iconType === 'bolt' && (
                  <svg class="w-6 h-6 text-[#a855f7]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                  </svg>
                )}
                {item.iconType === 'link' && (
                  <svg class="w-6 h-6 text-[#a855f7]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
                  </svg>
                )}
                {item.iconType === 'chart' && (
                  <svg class="w-6 h-6 text-[#a855f7]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />
                  </svg>
                )}
                {item.iconType === 'academic' && (
                  <svg class="w-6 h-6 text-[#a855f7]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
                  </svg>
                )}
              </div>
              <div class="flex-1">
                <div class="flex items-center justify-between mb-1">
                  <span class="font-mono text-[#a855f7] text-xs">[{item.code}]</span>
                </div>
                <h3 class="text-xl font-bold text-white">{item.title}</h3>
                <p class="text-[#d0d0e0] text-sm mt-1">{item.description}</p>
              </div>
            </div>

            <!-- Tools -->
            <div class="mb-6">
              <p class="text-xs font-mono text-[#b0b0c0] mb-2">TOOLS:</p>
              <div class="flex flex-wrap gap-2">
                {item.tools.map(tool => (
                  <span class="px-2 py-1 bg-[#0a0a0f] border border-[#2a2a3a] text-[#d0d0e0] text-xs font-mono">{tool}</span>
                ))}
              </div>
            </div>

            <!-- Examples -->
            <div>
              <p class="text-xs font-mono text-[#b0b0c0] mb-2">EXAMPLES:</p>
              <ul class="space-y-1">
                {item.examples.map((example) => (
                  <li class="flex items-start gap-2 text-sm text-[#d0d0e0]">
                    <span class="text-[#a855f7] mt-0.5">›</span>
                    <span>{example}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Tech Stack Section -->
  <section class="relative py-20">
    <div class="container mx-auto px-4 max-w-7xl">
      <header class="text-center mb-16" data-animate="fade-up">
        <p class="font-mono text-[#a855f7] text-sm mb-2">[TECH_STACK]</p>
        <h2 class="text-3xl md:text-4xl font-black mb-4">
          הטכנולוגיות <span class="text-[#a855f7]">שלנו</span>
        </h2>
        <p class="text-[#d0d0e0] max-w-2xl mx-auto">
          עובדים עם הכלים המובילים בתעשייה
        </p>
      </header>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4" data-animate="stagger">
        {techStack.map((category) => (
          <div class="p-4 border border-white/[0.08] bg-white/[0.03] backdrop-blur-xl rounded-xl">
            <p class="text-xs font-mono text-[#a855f7] mb-3">{category.category}</p>
            <div class="space-y-1">
              {category.tools.map(tool => (
                <p class="text-sm text-[#d0d0e0]">{tool}</p>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="relative py-20 bg-[#0d0d12]">
    <div class="container mx-auto px-4 max-w-7xl">
      <header class="text-center mb-16" data-animate="fade-up">
        <p class="font-mono text-[#a855f7] text-sm mb-2">[PROCESS]</p>
        <h2 class="text-3xl md:text-4xl font-black mb-4">
          איך זה <span class="text-[#a855f7]">עובד?</span>
        </h2>
      </header>

      <div class="relative" data-animate="stagger">
        <!-- Timeline line -->
        <div class="absolute top-8 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-[#a855f7]/30 to-transparent hidden md:block"></div>

        <div class="grid md:grid-cols-5 gap-6">
          {processSteps.map((step) => (
            <div class="relative text-center">
              <div class="inline-flex items-center justify-center w-16 h-16 bg-white/[0.03] backdrop-blur-xl border-2 border-[#a855f7] mb-4 relative z-10 rounded-xl">
                <span class="text-[#a855f7] font-bold text-lg">{step.step}</span>
              </div>
              <p class="font-mono text-[#a855f7] text-xs mb-1">[{step.code}]</p>
              <h3 class="text-lg font-bold text-white mb-2">{step.title}</h3>
              <p class="text-sm text-[#d0d0e0]">{step.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Use Cases Section -->
  <section class="relative py-20">
    <div class="container mx-auto px-4 max-w-7xl">
      <header class="text-center mb-16" data-animate="fade-up">
        <p class="font-mono text-[#a855f7] text-sm mb-2">[CASE_STUDIES]</p>
        <h2 class="text-3xl md:text-4xl font-black mb-4">
          סיפורי <span class="text-[#a855f7]">הצלחה</span>
