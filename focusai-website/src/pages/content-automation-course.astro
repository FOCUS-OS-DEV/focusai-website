    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            zoom: 1 !important;
        }

        :root {
            --primary: #10b981;
            --primary-dark: #059669;
            --primary-light: #34d399;
            --secondary: #06b6d4;
            --accent: #f59e0b;
            --electric: #22c55e;
            --dark: #0f0f1a;
            --darker: #080810;
            --card-bg: rgba(255, 255, 255, 0.03);
            --card-border: rgba(255, 255, 255, 0.08);
            --text: #ffffff;
            --text-muted: rgba(255, 255, 255, 0.6);
            --glow-primary: rgba(16, 185, 129, 0.4);
            --glow-secondary: rgba(6, 182, 212, 0.4);
        }

        body {
            font-family: 'Heebo', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--darker);
            min-height: 100vh;
            color: var(--text);
            overflow-x: hidden;
        }

        /* Animated Background */
        .bg-animation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            overflow: hidden;
        }

        .bg-animation::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background:
                radial-gradient(circle at 20% 80%, var(--glow-primary) 0%, transparent 40%),
                radial-gradient(circle at 80% 20%, var(--glow-secondary) 0%, transparent 40%),
                radial-gradient(circle at 50% 50%, rgba(34, 197, 94, 0.08) 0%, transparent 30%);
            animation: bgMove 20s ease-in-out infinite;
        }

        @keyframes bgMove {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            33% { transform: translate(2%, 2%) rotate(1deg); }
            66% { transform: translate(-1%, 1%) rotate(-1deg); }
        }

        /* Floating particles */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            overflow: hidden;
        }

        .particle {
            position: absolute;
            width: 3px;
            height: 3px;
            background: var(--electric);
            border-radius: 50%;
            opacity: 0.25;
            animation: float 15s infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(100vh) rotate(0deg); opacity: 0; }
            10% { opacity: 0.25; }
            90% { opacity: 0.25; }
            100% { transform: translateY(-100vh) rotate(720deg); opacity: 0; }
        }

        .container {
            max-width: 680px;
            margin: 0 auto;
            padding: 15px;
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* ============================================
           ELECTRIC CONNECTOR BETWEEN SECTIONS
           ============================================ */
        .electric-connector {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 8px 0;
            position: relative;
        }

        .node-dot {
            width: 10px;
            height: 10px;
            background: var(--electric);
            border-radius: 50%;
            box-shadow: 0 0 12px var(--electric), 0 0 24px rgba(34, 197, 94, 0.3);
            animation: nodePulse 2s ease-in-out infinite;
            position: relative;
            z-index: 1;
        }

        .node-dot::after {
            content: '';
            position: absolute;
            top: -4px;
            left: -4px;
            right: -4px;
            bottom: -4px;
            border-radius: 50%;
            border: 1px solid rgba(34, 197, 94, 0.3);
            animation: nodePulse 2s ease-in-out infinite reverse;
        }

        @keyframes nodePulse {
            0%, 100% { box-shadow: 0 0 12px var(--electric), 0 0 24px rgba(34, 197, 94, 0.3); transform: scale(1); }
            50% { box-shadow: 0 0 20px var(--electric), 0 0 40px rgba(34, 197, 94, 0.4); transform: scale(1.15); }
        }

        .current-line {
            width: 2px;
            height: 50px;
            background: linear-gradient(180deg, rgba(34, 197, 94, 0.4), rgba(6, 182, 212, 0.2), rgba(34, 197, 94, 0.4));
            position: relative;
            overflow: hidden;
        }

        .current-pulse {
            position: absolute;
            top: -8px;
            left: -3px;
            width: 8px;
            height: 8px;
            background: var(--electric);
            border-radius: 50%;
            box-shadow: 0 0 10px var(--electric), 0 0 20px rgba(34, 197, 94, 0.5);
            animation: currentFlow 2s linear infinite;
        }

        @keyframes currentFlow {
            0% { top: -8px; opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { top: calc(100% + 8px); opacity: 0; }
        }

        /* ============================================
           HEADER / HERO
           ============================================ */
        header {
            text-align: center;
            padding: 28px 12px 0;
            position: relative;
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .logo {
            height: 48px;
            width: auto;
            filter: drop-shadow(0 0 20px rgba(16, 185, 129, 0.3));
            margin-bottom: 20px;
            transition: all 0.3s ease;
            display: block;
        }

        .logo:hover {
            transform: scale(1.05);
            filter: drop-shadow(0 0 30px rgba(16, 185, 129, 0.5));
        }

        .free-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            padding: 10px 24px;
            border-radius: 30px;
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 24px;
            box-shadow: 0 4px 20px rgba(16, 185, 129, 0.4);
            animation: badgePulse 3s ease-in-out infinite;
        }

        .free-badge i {
            font-size: 1rem;
        }

        @keyframes badgePulse {
            0%, 100% { box-shadow: 0 4px 20px rgba(16, 185, 129, 0.4); }
            50% { box-shadow: 0 4px 35px rgba(16, 185, 129, 0.6), 0 0 60px rgba(16, 185, 129, 0.15); }
        }

        /* Hero Image */
        .hero-image-container {
            position: relative;
            width: 100%;
            max-width: 500px;
            margin: 0 auto 8px;
            overflow: hidden;
        }

        .hero-image-container img {
            width: 100%;
            height: 420px;
            object-fit: cover;
            object-position: center 25%;
            display: block;
            -webkit-mask-image: linear-gradient(to bottom, transparent 0%, black 10%, black 60%, transparent 100%);
            mask-image: linear-gradient(to bottom, transparent 0%, black 10%, black 60%, transparent 100%);
        }

        .hero-image-overlay {
            position: absolute;
            bottom: 15%;
            left: 0;
            right: 0;
            text-align: center;
            z-index: 2;
        }

        .hero-name {
            font-size: 2.4rem;
            font-weight: 900;
            color: white;
            letter-spacing: -1px;
            text-shadow: 0 2px 20px rgba(0,0,0,0.8), 0 0 40px rgba(0,0,0,0.5);
            line-height: 1.1;
            margin-bottom: 6px;
        }

        .hero-title {
            font-size: 0.85rem;
            font-weight: 500;
            color: rgba(255,255,255,0.8);
            text-shadow: 0 1px 10px rgba(0,0,0,0.8);
            letter-spacing: 1px;
        }

        .hero-title span {
            color: var(--primary-light);
            font-weight: 600;
        }

        header h1 {
            font-size: 1.65rem;
            font-weight: 800;
            color: var(--text);
            margin-bottom: 14px;
            line-height: 1.4;
            max-width: 550px;
        }

        header h1 em {
            font-style: normal;
            background: linear-gradient(135deg, var(--primary-light), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        header .subtitle {
            font-size: 1rem;
            color: var(--text-muted);
            font-weight: 400;
            line-height: 1.6;
            margin-bottom: 16px;
        }

        header .subtitle strong {
            color: var(--text);
        }

        /* Scroll hint */
        .scroll-hint {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 6px;
            margin-top: 8px;
            color: var(--text-muted);
            font-size: 0.75rem;
            animation: scrollBounce 2s ease-in-out infinite;
        }

        .scroll-hint i {
            font-size: 1rem;
            color: var(--primary);
        }

        @keyframes scrollBounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(6px); }
        }

        /* ============================================
           STORY SECTIONS
           ============================================ */
        .story-section {
            width: 100%;
            padding: 0 4px;
        }

        .story-chapter {
            font-size: 0.7rem;
            font-weight: 700;
            letter-spacing: 3px;
            text-transform: uppercase;
            color: var(--primary);
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .story-chapter::before {
            content: '';
            width: 8px;
            height: 8px;
            background: var(--primary);
            border-radius: 50%;
            box-shadow: 0 0 8px var(--primary);
        }

        .story-big {
            font-size: 1.6rem;
            font-weight: 800;
            color: var(--text);
            line-height: 1.4;
            margin-bottom: 18px;
        }

        .story-text {
            font-size: 1rem;
            color: rgba(255, 255, 255, 0.75);
            line-height: 1.9;
            margin-bottom: 16px;
        }

        .story-text strong {
            color: var(--text);
            font-weight: 600;
        }

        .story-text em {
            color: var(--primary-light);
            font-style: normal;
            font-weight: 500;
        }

        .story-pullquote {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text);
            padding: 18px 22px;
            border-right: 3px solid var(--primary);
            background: rgba(16, 185, 129, 0.06);
            border-radius: 0 14px 14px 0;
            margin: 24px 0;
            line-height: 1.7;
        }

        .story-highlight {
            display: block;
            font-size: 1.25rem;
            font-weight: 800;
            background: linear-gradient(135deg, var(--primary-light), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin: 24px 0 14px;
            line-height: 1.5;
        }

        /* ============================================
           PIPELINE SECTION (The Solution)
           ============================================ */
        .pipeline-container {
            display: flex;
            flex-direction: column;
            gap: 0;
            margin: 24px 0;
            position: relative;
        }

        .pipeline-step {
            display: flex;
            align-items: flex-start;
            gap: 16px;
            padding: 18px 16px;
            position: relative;
        }

        .pipeline-node {
            flex-shrink: 0;
            width: 44px;
            height: 44px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            position: relative;
            z-index: 1;
        }

        .pipeline-node.node-ai {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(16, 185, 129, 0.1));
            border: 1px solid rgba(16, 185, 129, 0.3);
            color: var(--primary-light);
        }

        .pipeline-node.node-write {
            background: linear-gradient(135deg, rgba(6, 182, 212, 0.2), rgba(6, 182, 212, 0.1));
            border: 1px solid rgba(6, 182, 212, 0.3);
            color: var(--secondary);
        }

        .pipeline-node.node-db {
            background: linear-gradient(135deg, rgba(245, 158, 11, 0.2), rgba(245, 158, 11, 0.1));
            border: 1px solid rgba(245, 158, 11, 0.3);
            color: var(--accent);
        }

        .pipeline-node.node-publish {
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(139, 92, 246, 0.1));
            border: 1px solid rgba(139, 92, 246, 0.3);
            color: #a78bfa;
        }

        .pipeline-content h4 {
            font-size: 1rem;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 4px;
        }

        .pipeline-content p {
            font-size: 0.88rem;
            color: var(--text-muted);
            line-height: 1.5;
        }

        /* Connector line between pipeline steps */
        .pipeline-step:not(:last-child)::after {
            content: '';
            position: absolute;
            bottom: -2px;
            right: 36px;
            width: 2px;
            height: 20px;
            background: linear-gradient(180deg, var(--primary), rgba(6, 182, 212, 0.3));
        }

        /* ============================================
           GLASS CARD
           ============================================ */
        .glass-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 28px 20px;
            margin-bottom: 0;
            border: 1px solid var(--card-border);
            box-shadow:
                0 25px 50px -12px rgba(0, 0, 0, 0.5),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
            position: relative;
            overflow: hidden;
            width: 100%;
        }

        .glass-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
        }

        .glass-card .section-title {
            font-size: 1.15rem;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 22px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            text-align: center;
        }

        .glass-card .section-title i {
            color: var(--primary);
            font-size: 1.2rem;
        }

        .glass-card .section-title::before,
        .glass-card .section-title::after {
            content: '';
            flex: 1;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--card-border), transparent);
            max-width: 80px;
        }

        /* Learn items */
        .learn-list {
            display: flex;
            flex-direction: column;
            gap: 14px;
        }

        .learn-item {
            display: flex;
            align-items: flex-start;
            gap: 14px;
            padding: 14px 16px;
            background: rgba(16, 185, 129, 0.04);
            border-radius: 14px;
            border-right: 3px solid var(--primary);
            transition: all 0.3s ease;
        }

        .learn-item:hover {
            background: rgba(16, 185, 129, 0.08);
            transform: translateX(-3px);
        }

        .learn-item i {
            font-size: 1.1rem;
            color: var(--primary-light);
            flex-shrink: 0;
            margin-top: 3px;
        }

        .learn-item-text {
            font-size: 0.95rem;
            color: var(--text);
            line-height: 1.5;
            font-weight: 500;
        }

        .learn-item-text span {
            display: block;
            font-size: 0.82rem;
            color: var(--text-muted);
            font-weight: 400;
            margin-top: 2px;
        }

        .learn-note {
            text-align: center;
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-top: 18px;
            padding: 12px;
            background: rgba(6, 182, 212, 0.06);
            border-radius: 10px;
            border: 1px solid rgba(6, 182, 212, 0.15);
        }

        .learn-note i {
            color: var(--secondary);
            margin-left: 6px;
        }

        /* ============================================
           WHO IT'S FOR - Persona cards
           ============================================ */
        .persona-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
            margin: 20px 0;
        }

        .persona-card {
            padding: 16px 14px;
            background: rgba(16, 185, 129, 0.04);
            border: 1px solid rgba(16, 185, 129, 0.12);
            border-radius: 14px;
            text-align: center;
            transition: all 0.3s ease;
        }

        .persona-card:hover {
            background: rgba(16, 185, 129, 0.08);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.12);
        }

        .persona-card i {
            font-size: 1.5rem;
            color: var(--primary-light);
            margin-bottom: 10px;
            display: block;
        }

        .persona-card h4 {
            font-size: 0.9rem;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 6px;
        }

        .persona-card p {
            font-size: 0.78rem;
            color: var(--text-muted);
            line-height: 1.4;
        }

        /* Value stats */
        .value-stats {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
            margin: 24px 0;
        }

        .value-stat {
            text-align: center;
            padding: 18px 12px;
            background: var(--card-bg);
            border: 1px solid var(--card-border);
            border-radius: 14px;
        }

        .value-stat .stat-number {
            font-size: 1.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, var(--primary-light), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: block;
            margin-bottom: 4px;
        }

        .value-stat .stat-label {
            font-size: 0.78rem;
            color: var(--text-muted);
            line-height: 1.4;
        }

        /* ============================================
           ABOUT SHAHAR - Spotlight
           ============================================ */
        .about-section {
            width: 100%;
        }

        .credential-badges {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 8px;
            margin: 18px 0;
        }

        .credential-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 14px;
            background: rgba(16, 185, 129, 0.08);
            border: 1px solid rgba(16, 185, 129, 0.2);
            border-radius: 20px;
            font-size: 0.78rem;
            font-weight: 600;
            color: var(--primary-light);
        }

        .credential-badge i {
            font-size: 0.7rem;
        }

        /* ============================================
           BOT-CAMP CTA
           ============================================ */
        .botcamp-cta {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.08), rgba(6, 182, 212, 0.05));
            border: 1px solid rgba(16, 185, 129, 0.2);
            border-radius: 20px;
            padding: 28px 22px;
            width: 100%;
            text-align: center;
        }

        .botcamp-cta .cta-label {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            padding: 5px 14px;
            border-radius: 20px;
            font-size: 0.72rem;
            font-weight: 700;
            margin-bottom: 16px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .botcamp-cta h3 {
            font-size: 1.3rem;
            font-weight: 800;
            color: var(--text);
            margin-bottom: 14px;
        }

        .botcamp-cta .cta-text {
            font-size: 0.92rem;
            color: var(--text-muted);
            line-height: 1.7;
            margin-bottom: 20px;
        }

