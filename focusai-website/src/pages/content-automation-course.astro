    <style>
        *{margin:0;padding:0;box-sizing:border-box}
        html{zoom:1!important}

        :root {
            --primary: #7c3aed;
            --primary-dark: #6d28d9;
            --primary-light: #a78bfa;
            --accent: #f59e0b;
            --accent-dark: #d97706;
            --dark: #0c0c18;
            --darker: #08080f;
            --card-bg: rgba(255,255,255,0.03);
            --card-border: rgba(255,255,255,0.07);
            --text: #f0f0f5;
            --text-secondary: rgba(255,255,255,0.72);
            --text-dim: rgba(255,255,255,0.45);
            --glow: rgba(124,58,237,0.25);
        }

        body {
            font-family: 'Heebo', sans-serif;
            background: var(--darker);
            color: var(--text);
            overflow-x: hidden;
            min-height: 100vh;
        }

        /* Ambient background */
        body::before {
            content: '';
            position: fixed;
            inset: 0;
            z-index: -1;
            background:
                radial-gradient(ellipse 70% 50% at 20% 80%, var(--glow) 0%, transparent 70%),
                radial-gradient(ellipse 60% 40% at 85% 15%, rgba(245,158,11,0.08) 0%, transparent 70%);
            animation: ambientShift 25s ease-in-out infinite alternate;
        }

        @keyframes ambientShift {
            0% { opacity: 1; }
            50% { opacity: 0.7; }
            100% { opacity: 1; }
        }

        /* Grain overlay */
        body::after {
            content: '';
            position: fixed;
            inset: 0;
            z-index: -1;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
            pointer-events: none;
        }

        .page {
            max-width: 720px;
            margin: 0 auto;
            padding: 0 18px;
        }

        /* ===== HERO ===== */
        .hero {
            text-align: center;
            padding-top: 32px;
        }

        .hero-logo {
            height: 42px;
            margin-bottom: 28px;
            filter: drop-shadow(0 0 12px var(--glow));
            transition: transform 0.3s;
        }
        .hero-logo:hover { transform: scale(1.06); }

        .hero-format {
            display: inline-flex;
            align-items: center;
            gap: 12px;
            padding: 8px 20px;
            background: var(--card-bg);
            border: 1px solid var(--card-border);
            border-radius: 100px;
            font-size: 0.88rem;
            color: var(--text-secondary);
            margin-bottom: 24px;
        }

        .hero-format .dot {
            width: 6px; height: 6px;
            background: var(--accent);
            border-radius: 50%;
            box-shadow: 0 0 8px var(--accent);
        }

        .hero-img {
            position: relative;
            width: 100%;
            max-width: 520px;
            margin: 0 auto 16px;
        }

        .hero-img img {
            width: 100%;
            height: 400px;
            object-fit: cover;
            object-position: center 25%;
            display: block;
            -webkit-mask-image: linear-gradient(to bottom, transparent 0%, black 12%, black 58%, transparent 100%);
            mask-image: linear-gradient(to bottom, transparent 0%, black 12%, black 58%, transparent 100%);
        }

        .hero-img .overlay {
            position: absolute;
            bottom: 18%;
            left: 0; right: 0;
            text-align: center;
        }

        .hero-img .overlay h3 {
            font-size: 2.6rem;
            font-weight: 900;
            text-shadow: 0 2px 24px rgba(0,0,0,0.85);
            margin-bottom: 6px;
        }

        .hero-img .overlay p {
            font-size: 0.95rem;
            color: rgba(255,255,255,0.8);
            text-shadow: 0 1px 12px rgba(0,0,0,0.85);
        }

        .hero h1 {
            font-size: 1.85rem;
            font-weight: 800;
            line-height: 1.45;
            margin-bottom: 14px;
        }

        .hero h1 em {
            font-style: normal;
            background: linear-gradient(135deg, var(--primary-light), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero .sub {
            font-size: 1.1rem;
            color: var(--text-secondary);
            margin-bottom: 22px;
            line-height: 1.65;
        }

        .hero .sub strong { color: var(--text); }

        .btn-primary {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 18px 38px;
            background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
            color: #fff;
            border: none;
            border-radius: 14px;
            font-size: 1.2rem;
            font-weight: 700;
            font-family: inherit;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(245,158,11,0.35);
            position: relative;
            overflow: hidden;
        }

        .btn-primary::after {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.15), transparent);
            transform: translateX(-100%);
            transition: transform 0.5s;
        }
        .btn-primary:hover::after { transform: translateX(100%); }
        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 28px rgba(245,158,11,0.45);
        }

        /* ===== SOCIAL PROOF ===== */
        .proof {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 20px;
            margin: 32px 0;
            padding: 14px 0;
            border-top: 1px solid var(--card-border);
            border-bottom: 1px solid var(--card-border);
        }

        .proof-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.92rem;
            color: var(--text-secondary);
        }

        .proof-item i { color: var(--accent); font-size: 0.85rem; }
        .proof-item strong { color: var(--text); font-weight: 700; }

        /* ===== SECTIONS ===== */
        .section {
            padding: 36px 0;
        }

        .section-label {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-size: 0.78rem;
            font-weight: 600;
            letter-spacing: 2px;
            text-transform: uppercase;
            color: var(--primary-light);
            margin-bottom: 18px;
        }

        .section-label::before {
            content: '';
            width: 6px; height: 6px;
            background: var(--primary);
            border-radius: 50%;
            box-shadow: 0 0 8px var(--primary);
        }

        h2 {
            font-size: 1.85rem;
            font-weight: 800;
            line-height: 1.4;
            margin-bottom: 20px;
        }

        .text {
            font-size: 1.12rem;
            color: var(--text-secondary);
            line-height: 1.9;
            margin-bottom: 16px;
        }

        .text strong { color: var(--text); font-weight: 600; }
        .text em { color: var(--primary-light); font-style: normal; font-weight: 500; }

        .quote {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--text);
            padding: 22px 24px;
            border-right: 3px solid var(--primary);
            background: rgba(124,58,237,0.06);
            border-radius: 0 16px 16px 0;
            margin: 28px 0;
            line-height: 1.7;
        }

        .highlight {
            font-size: 1.35rem;
            font-weight: 800;
            background: linear-gradient(135deg, var(--primary-light), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: block;
            margin: 24px 0 16px;
            line-height: 1.5;
        }

        /* ===== PIPELINE ===== */
        .pipeline {
            display: flex;
            flex-direction: column;
            gap: 2px;
            margin: 28px 0;
        }

        .pipe-step {
            display: flex;
            align-items: flex-start;
            gap: 18px;
            padding: 20px 18px;
            background: var(--card-bg);
            border: 1px solid var(--card-border);
            transition: background 0.3s;
        }

        .pipe-step:first-child { border-radius: 18px 18px 4px 4px; }
        .pipe-step:last-child { border-radius: 4px 4px 18px 18px; }
        .pipe-step:not(:first-child):not(:last-child) { border-radius: 4px; }

        .pipe-step:hover { background: rgba(255,255,255,0.05); }

        .pipe-icon {
            flex-shrink: 0;
            width: 48px; height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
        }

        .pipe-icon.i1 { background: rgba(124,58,237,0.15); color: var(--primary-light); border: 1px solid rgba(124,58,237,0.25); }
        .pipe-icon.i2 { background: rgba(245,158,11,0.12); color: var(--accent); border: 1px solid rgba(245,158,11,0.22); }
        .pipe-icon.i3 { background: rgba(56,189,248,0.12); color: #38bdf8; border: 1px solid rgba(56,189,248,0.22); }
        .pipe-icon.i4 { background: rgba(52,211,153,0.12); color: #34d399; border: 1px solid rgba(52,211,153,0.22); }

        .pipe-text h4 {
            font-size: 1.1rem;
            font-weight: 700;
            margin-bottom: 4px;
        }

        .pipe-text p {
            font-size: 0.98rem;
            color: var(--text-secondary);
            line-height: 1.55;
        }

        /* ===== OUTCOMES ===== */
        .outcomes {
            display: flex;
            flex-direction: column;
            gap: 14px;
            margin: 24px 0;
        }

        .outcome {
            display: flex;
            align-items: flex-start;
            gap: 14px;
            padding: 16px 18px;
            background: rgba(124,58,237,0.04);
            border-radius: 14px;
            border-right: 3px solid var(--primary);
        }

        .outcome i {
            color: var(--primary-light);
            font-size: 1.15rem;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .outcome span {
            font-size: 1.05rem;
            color: var(--text);
            line-height: 1.55;
            font-weight: 500;
        }

        .outcome small {
            display: block;
            color: var(--text-secondary);
            font-weight: 400;
            font-size: 0.92rem;
            margin-top: 3px;
        }

        /* ===== MID-PHOTO ===== */
        .mid-photo {
            width: calc(100% + 36px);
            margin: 0 -18px;
            position: relative;
            overflow: hidden;
        }

        .mid-photo img {
            width: 100%;
            height: 320px;
            object-fit: cover;
            object-position: center 25%;
            display: block;
            -webkit-mask-image: linear-gradient(to bottom, transparent 0%, black 15%, black 80%, transparent 100%);
            mask-image: linear-gradient(to bottom, transparent 0%, black 15%, black 80%, transparent 100%);
        }

        .mid-photo .caption {
            position: absolute;
            bottom: 20%;
            left: 0; right: 0;
            text-align: center;
            font-size: 0.9rem;
            color: rgba(255,255,255,0.65);
            text-shadow: 0 1px 8px rgba(0,0,0,0.8);
        }

        /* ===== FOR-WHO ===== */
        .for-list {
            display: flex;
            flex-direction: column;
            gap: 12px;
            margin: 20px 0;
        }

        .for-item {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 1.1rem;
            color: var(--text);
            font-weight: 500;
        }

        .for-item i { color: var(--accent); flex-shrink: 0; }

        /* ===== FORM ===== */
        .form-section {
            background: var(--card-bg);
            backdrop-filter: blur(16px);
            border: 1px solid var(--card-border);
            border-radius: 22px;
            padding: 34px 24px;
            margin: 10px 0 0;
            position: relative;
            overflow: hidden;
        }

        .form-section::before {
            content: '';
            position: absolute;
            top: 0; left: 0; right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--accent));
        }

        .form-header {
            text-align: center;
            margin-bottom: 26px;
        }

        .form-header h2 {
            font-size: 1.5rem;
            margin-bottom: 8px;
        }

        .form-header p {
            font-size: 1rem;
            color: var(--text-secondary);
        }

        .form-group {
            margin-bottom: 16px;
        }

        .form-group label {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 1rem;
        }

        .form-group label i { color: var(--primary-light); font-size: 0.9rem; }

        .req::after { content: " *"; color: var(--accent); }

        input[type="text"],
        input[type="email"],
        input[type="tel"] {
            width: 100%;
            padding: 15px 18px;
            background: rgba(255,255,255,0.03);
            border: 2px solid var(--card-border);
            border-radius: 12px;
            font-size: 1.05rem;
            font-family: inherit;
            color: var(--text);
            transition: all 0.3s;
        }

        input::placeholder { color: var(--text-dim); }

        input:focus {
            outline: none;
            border-color: var(--primary);
            background: rgba(124,58,237,0.05);
            box-shadow: 0 0 0 4px rgba(124,58,237,0.15);
        }

        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus {
            -webkit-box-shadow: 0 0 0 1000px rgba(12,12,24,0.97) inset !important;
            -webkit-text-fill-color: var(--text) !important;
            transition: background-color 5000s ease-in-out 0s;
        }

        .consent {
            margin-top: 20px;
            padding-top: 18px;
            border-top: 1px solid var(--card-border);
        }

        .consent-check {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            cursor: pointer;
        }

        .consent-check input[type="checkbox"] {
            width: 22px; height: 22px;
            flex-shrink: 0;
            margin-top: 2px;
            accent-color: var(--primary);
            cursor: pointer;
        }

        .consent-check span {
            font-size: 0.88rem;
            color: var(--text-secondary);
            line-height: 1.55;
        }

        .consent-check a { color: var(--primary-light); text-decoration: underline; }

        .btn-submit {
            width: 100%;
            padding: 20px;
            margin-top: 20px;
            background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
            color: #fff;
            border: none;
            border-radius: 14px;
            font-size: 1.2rem;
            font-weight: 700;
            font-family: inherit;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 4px 20px rgba(245,158,11,0.35);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            position: relative;
            overflow: hidden;
        }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 28px rgba(245,158,11,0.45);
        }

        .btn-submit:disabled { opacity: 0.5; cursor: not-allowed; transform: none !important; }
        .btn-submit .spinner { display: none; }
        .btn-submit.loading .btn-text { display: none; }
        .btn-submit.loading .spinner {
            display: inline-block;
            width: 22px; height: 22px;
            border: 3px solid rgba(255,255,255,0.3);
            border-radius: 50%;
            border-top-color: #fff;
            animation: spin 1s linear infinite;
        }
        @keyframes spin { to { transform: rotate(360deg); } }

        /* ===== BOTCAMP NUDGE (after form) ===== */
        .nudge {
            text-align: center;
            padding: 28px 20px;
            margin-top: 24px;
        }

        .nudge p {
            font-size: 1rem;
            color: var(--text-secondary);
            margin-bottom: 14px;
            line-height: 1.7;
        }

        .nudge a {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 12px 24px;
            border: 1px solid rgba(124,58,237,0.3);
            border-radius: 12px;
            color: var(--primary-light);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.3s;
        }

        .nudge a:hover {
            background: rgba(124,58,237,0.1);
            border-color: rgba(124,58,237,0.5);
        }

        /* ===== FOOTER ===== */
        .site-footer {
            margin-top: 32px;
            padding: 20px;
            background: rgba(0,0,0,0.25);
            border-radius: 18px;
            border: 1px solid var(--card-border);
        }

        .footer-legal {
            font-size: 0.78rem;
            color: var(--text-dim);
            line-height: 1.7;
            margin-bottom: 16px;
        }

        .footer-legal a { color: var(--primary-light); text-decoration: underline; }

        .footer-social {
            display: flex;
            justify-content: center;
            gap: 14px;
            margin-bottom: 14px;
        }

        .footer-social a {
            width: 38px; height: 38px;
            background: rgba(255,255,255,0.05);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-dim);
            text-decoration: none;
            transition: all 0.3s;
        }

        .footer-social a:hover { background: rgba(124,58,237,0.2); color: #fff; }

        .footer-links {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 16px;
            padding-top: 14px;
            border-top: 1px solid var(--card-border);
        }

        .footer-links a {
            font-size: 0.78rem;
            color: var(--text-dim);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 4px;
            transition: color 0.3s;
        }

        .footer-links a:hover { color: var(--primary-light); }

        /* ===== SUCCESS OVERLAY ===== */
        .success-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(8,8,15,0.95);
            z-index: 1000;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }
        .success-overlay.show { display: flex; }

        .success-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            padding: 40px 30px;
            max-width: 440px;
            width: 100%;
            text-align: center;
            border: 1px solid var(--card-border);
            animation: popIn 0.4s ease;
        }

        @keyframes popIn {
            from { opacity: 0; transform: scale(0.92) translateY(16px); }
            to { opacity: 1; transform: scale(1) translateY(0); }
        }

        .success-card .icon {
            width: 76px; height: 76px;
            background: linear-gradient(135deg, var(--accent), var(--accent-dark));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 24px;
            box-shadow: 0 8px 24px rgba(245,158,11,0.3);
        }

        .success-card .icon i { font-size: 2rem; color: #fff; }
