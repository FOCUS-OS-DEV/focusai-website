    <style>
        *{margin:0;padding:0;box-sizing:border-box}
        html{zoom:1!important}

        :root {
            --primary: #a855f7;
            --primary-dark: #9333ea;
            --primary-light: #c084fc;
            --cta: #ef4444;
            --cta-dark: #dc2626;
            --cta-darker: #b91c1c;
            --dark: #0a0a0f;
            --darker: #07070c;
            --card-bg: rgba(255,255,255,0.03);
            --card-border: rgba(255,255,255,0.08);
            --text: #f0f0f5;
            --text-secondary: rgba(255,255,255,0.75);
            --text-dim: rgba(255,255,255,0.45);
            --glow: rgba(168,85,247,0.2);
        }

        body {
            font-family: 'Heebo', sans-serif;
            background: var(--dark);
            color: var(--text);
            overflow-x: hidden;
            min-height: 100vh;
        }

        /* Ambient background */
        body::before {
            content: '';
            position: fixed;
            inset: 0;
            z-index: -1;
            background:
                radial-gradient(ellipse 70% 50% at 20% 80%, var(--glow) 0%, transparent 70%),
                radial-gradient(ellipse 60% 40% at 85% 15%, rgba(168,85,247,0.08) 0%, transparent 70%);
            animation: ambientShift 25s ease-in-out infinite alternate;
        }

        @keyframes ambientShift {
            0% { opacity: 1; }
            50% { opacity: 0.7; }
            100% { opacity: 1; }
        }

        /* Grain overlay */
        body::after {
            content: '';
            position: fixed;
            inset: 0;
            z-index: -1;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
            pointer-events: none;
        }

        .page {
            max-width: 820px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* ===== BACK LINK ===== */
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 14px 0 0;
            font-size: 0.85rem;
            color: var(--text-dim);
            text-decoration: none;
            transition: color 0.3s;
        }
        .back-link:hover { color: var(--primary-light); }

        /* ===== HERO ===== */
        .hero {
            padding-top: 24px;
            text-align: center;
        }

        .hero-logo {
            height: 120px;
            margin-bottom: 32px;
            filter: drop-shadow(0 0 16px var(--glow));
            transition: transform 0.3s;
        }
        .hero-logo:hover { transform: scale(1.05); }

        .hero-split {
            display: flex;
            align-items: center;
            gap: 32px;
            text-align: right;
            margin-bottom: 28px;
        }

        .hero-content {
            flex: 1;
        }

        .hero-mockup {
            flex-shrink: 0;
            width: 340px;
        }

        .hero-mockup img {
            width: 100%;
            height: auto;
            display: block;
            filter: drop-shadow(0 8px 32px rgba(168,85,247,0.2));
        }

        .hero-mockup-mobile {
            display: none;
        }

        @media (max-width: 700px) {
            .hero-split {
                flex-direction: column;
                text-align: center;
            }
            .hero-content { text-align: center; }
            .hero-mockup { display: none; }
            .hero-mockup-mobile {
                display: block;
                width: 420px;
                max-width: 100%;
                margin: 0 auto 20px;
            }
            .hero-mockup-mobile img {
                width: 100%;
                height: auto;
                display: block;
                filter: drop-shadow(0 8px 32px rgba(168,85,247,0.2));
            }
        }

        /* Presenter section */
        .presenter {
            display: flex;
            align-items: center;
            gap: 28px;
            margin: 8px 0 20px;
        }

        .presenter-photo {
            flex-shrink: 0;
            width: 200px;
            position: relative;
        }

        .presenter-photo img {
            width: 100%;
            height: 260px;
            object-fit: cover;
            object-position: center 15%;
            border-radius: 18px;
            display: block;
            -webkit-mask-image: linear-gradient(to bottom, black 0%, black 80%, transparent 100%);
            mask-image: linear-gradient(to bottom, black 0%, black 80%, transparent 100%);
        }

        .presenter-photo .name {
            position: absolute;
            bottom: 8%;
            left: 0; right: 0;
            text-align: center;
        }

        .presenter-photo .name h3 {
            font-size: 1.3rem;
            font-weight: 800;
            text-shadow: 0 2px 16px rgba(0,0,0,0.9);
        }

        .presenter-photo .name p {
            font-size: 0.8rem;
            color: rgba(255,255,255,0.8);
            text-shadow: 0 1px 8px rgba(0,0,0,0.9);
        }

        .presenter-text {
            flex: 1;
        }

        @media (min-width: 768px) {
            .presenter-photo { width: 260px; }
            .presenter-photo img { height: 340px; }
        }

        @media (max-width: 700px) {
            .presenter {
                flex-direction: column;
                text-align: center;
            }
            .presenter-photo { width: 270px; max-width: 70%; }
            .presenter-photo img { height: 345px; }
        }

        .hero-label {
            font-size: 0.85rem;
            font-weight: 600;
            color: var(--primary-light);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 12px;
        }

        .hero-label .sep { opacity: 0.4; margin: 0 4px; }

        .hero h1 {
            font-size: 2.2rem;
            font-weight: 900;
            line-height: 1.35;
            margin-bottom: 16px;
        }

        .hero h1 em {
            font-style: normal;
            color: var(--primary-light);
        }

        .hero .sub {
            font-size: 1.15rem;
            color: var(--text-secondary);
            margin-bottom: 24px;
            line-height: 1.7;
        }

        .hero .sub strong { color: var(--text); }

        .hero-urgency {
            margin-top: 12px;
            font-size: 0.9rem;
            color: var(--text-dim);
        }

        /* Red underline "limited time" */
        .limited {
            color: var(--cta);
            font-weight: 700;
            text-decoration: underline;
            text-decoration-color: var(--cta);
            text-underline-offset: 3px;
            text-decoration-thickness: 2px;
        }

        /* ===== RED CTA BUTTON ===== */
        .btn-cta {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 18px 40px;
            background: linear-gradient(135deg, var(--cta) 0%, var(--cta-dark) 50%, var(--cta-darker) 100%);
            color: #fff;
            border: none;
            border-radius: 14px;
            font-size: 1.2rem;
            font-weight: 700;
            font-family: inherit;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4,0,0.2,1);
            box-shadow: 0 4px 20px rgba(239,68,68,0.4), inset 0 1px 0 rgba(255,255,255,0.2);
            position: relative;
            overflow: hidden;
        }

        .btn-cta::before {
            content: '';
            position: absolute;
            top: 0; left: -100%;
            width: 100%; height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }
        .btn-cta:hover::before { left: 100%; }
        .btn-cta:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(239,68,68,0.5), 0 0 0 4px rgba(239,68,68,0.15), inset 0 1px 0 rgba(255,255,255,0.2);
        }

        /* ===== SECTIONS ===== */
        .section {
            padding: 36px 0;
        }

        h2 {
            font-size: 1.85rem;
            font-weight: 800;
            line-height: 1.4;
            margin-bottom: 20px;
        }

        /* Section-specific h2 variety */
        .section:nth-child(odd) h2 { font-size: 1.95rem; }
        .who-section h2 { font-size: 2rem; letter-spacing: -0.02em; }
        .botcamp-section h2 { font-size: 2.1rem; }

        .text {
            font-size: 1.08rem;
            color: var(--text-secondary);
            line-height: 1.85;
            margin-bottom: 16px;
        }

        .text strong { color: var(--text); font-weight: 600; }

        /* Large intro paragraph */
        .text-lg {
            font-size: 1.25rem;
            color: var(--text-secondary);
            line-height: 1.8;
            margin-bottom: 16px;
        }

        .text-lg strong { color: var(--text); font-weight: 600; }

        /* Small supporting text */
        .text-sm {
            font-size: 0.95rem;
            color: var(--text-dim);
            line-height: 1.7;
        }

        .quote {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--text);
            padding: 22px 24px;
            border-right: 3px solid var(--primary);
            background: rgba(168,85,247,0.06);
            border-radius: 0 16px 16px 0;
            margin: 28px 0;
            line-height: 1.7;
        }

        /* ===== PIPELINE ===== */
        .pipeline {
            display: flex;
            flex-direction: column;
            gap: 2px;
            margin: 28px 0;
        }

        .pipe-step {
            display: flex;
            align-items: center;
            gap: 20px;
            padding: 22px 20px;
            background: var(--card-bg);
            border: 1px solid var(--card-border);
            transition: background 0.3s;
        }

        .pipe-step:first-child { border-radius: 18px 18px 4px 4px; }
        .pipe-step:last-child { border-radius: 4px 4px 18px 18px; }
        .pipe-step:not(:first-child):not(:last-child) { border-radius: 4px; }
        .pipe-step:hover { background: rgba(255,255,255,0.05); }

        .pipe-icon {
            flex-shrink: 0;
            width: 80px; height: 80px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .pipe-icon img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            padding: 6px;
        }

        .pipe-icon.i1 { background: rgba(168,85,247,0.1); border: 1px solid rgba(168,85,247,0.2); }
        .pipe-icon.i2 { background: rgba(245,158,11,0.08); border: 1px solid rgba(245,158,11,0.18); }
        .pipe-icon.i3 { background: rgba(56,189,248,0.08); border: 1px solid rgba(56,189,248,0.18); }

        .pipe-text h4 {
            font-size: 1.1rem;
            font-weight: 700;
            margin-bottom: 4px;
        }

        .pipe-text p {
            font-size: 0.98rem;
            color: var(--text-secondary);
            line-height: 1.55;
        }

        /* ===== OUTCOMES ===== */
        .outcomes {
            display: flex;
            flex-direction: column;
            gap: 14px;
            margin: 24px 0;
        }

        .outcome {
            display: flex;
            align-items: flex-start;
            gap: 14px;
            padding: 16px 18px;
            background: rgba(168,85,247,0.04);
            border-radius: 14px;
            border-right: 3px solid var(--primary);
        }

        .outcome i {
            color: var(--primary-light);
            font-size: 1.15rem;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .outcome span {
            font-size: 1.05rem;
            color: var(--text);
            line-height: 1.55;
            font-weight: 500;
        }

        .outcome small {
            display: block;
            color: var(--text-secondary);
            font-weight: 400;
            font-size: 0.92rem;
            margin-top: 3px;
        }

        /* ===== WHO SPLIT ===== */
        .who-split {
            display: flex;
            align-items: center;
            gap: 32px;
            margin-top: 20px;
        }

        .who-photo {
            flex-shrink: 0;
            width: 260px;
            border-radius: 16px;
            overflow: hidden;
        }

        .who-photo img {
            width: 100%;
            height: 260px;
            object-fit: cover;
            display: block;
        }

        .who-content {
            flex: 1;
        }

        /* ===== FOR-WHO ===== */
        .for-list {
            display: flex;
            flex-direction: column;
            gap: 12px;
            margin: 20px 0;
        }

        .for-item {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 1.1rem;
            color: var(--text);
            font-weight: 500;
        }

        .for-item i { color: var(--primary-light); flex-shrink: 0; }

        /* ===== FORM ===== */
        .form-section {
            background: var(--card-bg);
            backdrop-filter: blur(16px);
            border: 1px solid var(--card-border);
            border-radius: 22px;
            padding: 34px 24px;
            margin: 10px 0 0;
            position: relative;
            overflow: hidden;
        }

        .form-section::before {
            content: '';
            position: absolute;
            top: 0; left: 0; right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--cta));
        }

        .form-header {
            text-align: center;
            margin-bottom: 26px;
        }

        .form-header h2 {
            font-size: 1.5rem;
            margin-bottom: 8px;
        }

        .form-header p {
            font-size: 1rem;
            color: var(--text-secondary);
        }

        .form-group {
            margin-bottom: 16px;
        }

        .form-group label {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 1rem;
        }

        .form-group label i { color: var(--primary-light); font-size: 0.9rem; }

        .req::after { content: " *"; color: var(--cta); }

        input[type="text"],
        input[type="email"],
        input[type="tel"] {
            width: 100%;
            padding: 15px 18px;
            background: rgba(255,255,255,0.03);
            border: 2px solid var(--card-border);
            border-radius: 12px;
            font-size: 1.05rem;
            font-family: inherit;
            color: var(--text);
            transition: all 0.3s;
        }

        input::placeholder { color: var(--text-dim); }

        input:focus {
            outline: none;
            border-color: var(--primary);
            background: rgba(168,85,247,0.05);
            box-shadow: 0 0 0 4px rgba(168,85,247,0.15);
        }

        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus {
            -webkit-box-shadow: 0 0 0 1000px rgba(10,10,15,0.97) inset !important;
            -webkit-text-fill-color: var(--text) !important;
            transition: background-color 5000s ease-in-out 0s;
        }

        .consent {
            margin-top: 20px;
            padding-top: 18px;
            border-top: 1px solid var(--card-border);
        }

        .consent-check {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            cursor: pointer;
        }

        .consent-check input[type="checkbox"] {
            width: 22px; height: 22px;
            flex-shrink: 0;
            margin-top: 2px;
            accent-color: var(--primary);
            cursor: pointer;
        }

        .consent-check span {
            font-size: 0.88rem;
            color: var(--text-secondary);
            line-height: 1.55;
        }

        .consent-check a { color: var(--primary-light); text-decoration: underline; }

        .btn-submit {
            width: 100%;
            padding: 20px 30px;
            margin-top: 20px;
            background: linear-gradient(135deg, var(--cta) 0%, var(--cta-dark) 50%, var(--cta-darker) 100%);
            color: #fff;
            border: none;
            border-radius: 14px;
            font-size: 1.2rem;
            font-weight: 700;
            font-family: inherit;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4,0,0.2,1);
            box-shadow: 0 4px 20px rgba(239,68,68,0.4), inset 0 1px 0 rgba(255,255,255,0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            position: relative;
            overflow: hidden;
        }

        .btn-submit::before {
            content: '';
            position: absolute;
            top: 0; left: -100%;
            width: 100%; height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }
        .btn-submit:hover::before { left: 100%; }
        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(239,68,68,0.5), 0 0 0 4px rgba(239,68,68,0.15), inset 0 1px 0 rgba(255,255,255,0.2);
        }

        .btn-submit:disabled { opacity: 0.5; cursor: not-allowed; transform: none !important; }
        .btn-submit .spinner { display: none; }
        .btn-submit.loading .btn-text { display: none; }
        .btn-submit.loading .spinner {
            display: inline-block;
            width: 22px; height: 22px;
            border: 3px solid rgba(255,255,255,0.3);
            border-radius: 50%;
            border-top-color: #fff;
            animation: spin 1s linear infinite;
        }
        @keyframes spin { to { transform: rotate(360deg); } }

        /* ===== BOTCAMP SECTION ===== */
        .botcamp-section {
            margin-top: 40px;
            padding: 36px 24px;
            background: var(--card-bg);
            backdrop-filter: blur(16px);
            border: 1px solid var(--card-border);
            border-radius: 22px;
            position: relative;
            overflow: hidden;
        }

        .botcamp-section::before {
            content: '';
            position: absolute;
            top: 0; left: 0; right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--primary-dark));
        }

        .botcamp-header {
            text-align: center;
            margin-bottom: 28px;
        }

        .botcamp-header h2 {
            font-size: 1.7rem;
            margin-bottom: 8px;
        }

        .botcamp-header p {
            font-size: 1rem;
            color: var(--text-secondary);
            line-height: 1.6;
        }

        .botcamp-partners {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 48px;
            margin: 24px auto 8px;
            max-width: 500px;
        }

        .botcamp-partners img {
            height: 70px;
            width: auto;
            max-width: 180px;
            object-fit: contain;
            opacity: 0.85;
            transition: opacity 0.3s;
        }

        .botcamp-partners img:hover { opacity: 1; }

        /* ===== FEATURE GRID ===== */
        .feature-grid {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 8px;
            margin: 24px 0;
        }
        @media (max-width: 640px) {
            .feature-grid { grid-template-columns: 1fr 1fr; }
        }

        .fg-item {
            display: flex;
            align-items: flex-start;
            gap: 9px;
            padding: 11px 13px;
            background: rgba(168,85,247,0.03);
            border: 1px solid rgba(168,85,247,0.08);
            border-radius: 10px;
            opacity: 0;
