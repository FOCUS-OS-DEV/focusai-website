            <div class="flex justify-between items-start mb-4">
              <h3 class="text-xl font-bold text-white">{tool.name}</h3>
              <span class={`px-3 py-1 text-xs font-medium rounded-full ${tool.hebrew_support === 'תומך' ? 'bg-[#a855f7]/10 text-[#a855f7] border border-[#a855f7]/30' : 'bg-red-500/10 text-red-400 border border-red-500/30'}`}>
