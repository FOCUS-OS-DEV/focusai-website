---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="404 - הדף לא נמצא | Focus AI">
  <Header slot="header" currentPath="/404" />

  <section class="min-h-[70vh] flex items-center justify-center relative overflow-hidden">
    <!-- Background glow -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-[#a855f7]/5 rounded-full blur-[150px]"></div>
    </div>

    <div class="relative z-10 text-center px-4">
      <!-- Glass window -->
      <div class="inline-block bg-white/[0.03] backdrop-blur-xl border border-white/[0.08] rounded-2xl overflow-hidden max-w-lg w-full shadow-[0_8px_32px_rgba(0,0,0,0.3)]">
        <!-- Glass header -->
        <div class="flex items-center gap-2 px-4 py-3 border-b border-white/[0.06] bg-white/[0.03] backdrop-blur-sm">
          <span class="w-1.5 h-1.5 rounded-full bg-[#a855f7] animate-pulse"></span>
          <span class="font-mono text-xs text-[#a855f7]/40 mr-auto">system.error</span>
        </div>

        <!-- Terminal body -->
        <div class="p-8 md:p-12">
          <!-- Glitch 404 -->
          <div class="glitch-wrapper mb-6">
            <h1 class="glitch-text font-mono text-6xl md:text-8xl font-bold text-[#a855f7]" data-text="404">404</h1>
          </div>

          <p class="font-mono text-sm text-[#ff3366] mb-2">
            &gt; ERROR: PAGE_NOT_FOUND
          </p>
          <p class="text-[#9090a8] text-lg mb-8">
            העמוד שחיפשת לא נמצא
          </p>

          <!-- Terminal prompt -->
          <div class="font-mono text-xs text-[#8080a0] mb-6 text-right" dir="ltr">
            <span class="text-[#a855f7]">focusai</span>
            <span class="text-[#c084fc]">@</span>
            <span class="text-[#a855f7]">web</span>
            <span> ~ $ </span>
            <span class="text-white">cd /home</span>
            <span class="animate-pulse">_</span>
          </div>

          <a
            href="/"
            class="inline-flex items-center gap-2 px-8 py-3 bg-[#a855f7] hover:bg-[#9333ea] text-white font-bold rounded-lg transition-all duration-300 hover:shadow-[0_0_30px_rgba(168,85,247,0.4)]"
          >
            חזרה לדף הבית
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .glitch-text {
    position: relative;
    animation: glitch-skew 4s infinite linear alternate-reverse;
  }

  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
  }

  .glitch-text::before {
    left: 2px;
    text-shadow: -2px 0 #ff3366;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim 5s infinite linear alternate-reverse;
  }

  .glitch-text::after {
    left: -2px;
    text-shadow: -2px 0 #00ffff;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim2 3s infinite linear alternate-reverse;
  }

  @keyframes glitch-anim {
    0% { clip: rect(10px, 9999px, 31px, 0); transform: skew(0.5deg); }
    5% { clip: rect(70px, 9999px, 91px, 0); transform: skew(0.3deg); }
    10% { clip: rect(30px, 9999px, 46px, 0); transform: skew(-0.5deg); }
    15% { clip: rect(55px, 9999px, 76px, 0); transform: skew(0.8deg); }
    20% { clip: rect(5px, 9999px, 21px, 0); transform: skew(-0.3deg); }
    25% { clip: rect(80px, 9999px, 96px, 0); transform: skew(0.4deg); }
    30% { clip: rect(25px, 9999px, 41px, 0); transform: skew(-0.7deg); }
    35% { clip: rect(60px, 9999px, 81px, 0); transform: skew(0.2deg); }
    40% { clip: rect(15px, 9999px, 36px, 0); transform: skew(-0.4deg); }
    45% { clip: rect(45px, 9999px, 66px, 0); transform: skew(0.6deg); }
    50% { clip: rect(35px, 9999px, 51px, 0); transform: skew(-0.2deg); }
    55% { clip: rect(75px, 9999px, 91px, 0); transform: skew(0.5deg); }
    60% { clip: rect(20px, 9999px, 41px, 0); transform: skew(-0.6deg); }
    65% { clip: rect(50px, 9999px, 71px, 0); transform: skew(0.3deg); }
    70% { clip: rect(10px, 9999px, 26px, 0); transform: skew(-0.8deg); }
    75% { clip: rect(65px, 9999px, 86px, 0); transform: skew(0.4deg); }
    80% { clip: rect(40px, 9999px, 56px, 0); transform: skew(-0.3deg); }
    85% { clip: rect(85px, 9999px, 101px, 0); transform: skew(0.7deg); }
    90% { clip: rect(30px, 9999px, 51px, 0); transform: skew(-0.5deg); }
    95% { clip: rect(55px, 9999px, 76px, 0); transform: skew(0.2deg); }
    100% { clip: rect(5px, 9999px, 26px, 0); transform: skew(0.6deg); }
  }

  @keyframes glitch-anim2 {
    0% { clip: rect(65px, 9999px, 86px, 0); transform: skew(0.3deg); }
    5% { clip: rect(15px, 9999px, 36px, 0); transform: skew(-0.5deg); }
    10% { clip: rect(80px, 9999px, 96px, 0); transform: skew(0.4deg); }
    15% { clip: rect(25px, 9999px, 46px, 0); transform: skew(-0.2deg); }
    20% { clip: rect(55px, 9999px, 71px, 0); transform: skew(0.7deg); }
    25% { clip: rect(5px, 9999px, 26px, 0); transform: skew(-0.4deg); }
    30% { clip: rect(45px, 9999px, 61px, 0); transform: skew(0.5deg); }
    35% { clip: rect(75px, 9999px, 96px, 0); transform: skew(-0.3deg); }
    40% { clip: rect(35px, 9999px, 51px, 0); transform: skew(0.6deg); }
    45% { clip: rect(10px, 9999px, 31px, 0); transform: skew(-0.7deg); }
    50% { clip: rect(60px, 9999px, 81px, 0); transform: skew(0.2deg); }
    55% { clip: rect(20px, 9999px, 41px, 0); transform: skew(-0.5deg); }
    60% { clip: rect(70px, 9999px, 91px, 0); transform: skew(0.8deg); }
    65% { clip: rect(40px, 9999px, 56px, 0); transform: skew(-0.2deg); }
    70% { clip: rect(85px, 9999px, 101px, 0); transform: skew(0.3deg); }
    75% { clip: rect(30px, 9999px, 51px, 0); transform: skew(-0.6deg); }
    80% { clip: rect(50px, 9999px, 71px, 0); transform: skew(0.4deg); }
    85% { clip: rect(10px, 9999px, 26px, 0); transform: skew(-0.8deg); }
    90% { clip: rect(65px, 9999px, 86px, 0); transform: skew(0.5deg); }
    95% { clip: rect(25px, 9999px, 41px, 0); transform: skew(-0.3deg); }
    100% { clip: rect(50px, 9999px, 76px, 0); transform: skew(0.6deg); }
  }

  @keyframes glitch-skew {
    0% { transform: skew(0deg); }
    20% { transform: skew(0deg); }
    21% { transform: skew(2deg); }
    22% { transform: skew(-1deg); }
    23% { transform: skew(0deg); }
    100% { transform: skew(0deg); }
  }
</style>
