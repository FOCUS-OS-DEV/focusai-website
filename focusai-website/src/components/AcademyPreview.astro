---
/**
 * Academy Preview Section - iOS/Apple Glass Design
 * Modern glassmorphism cards with heavy blur and clean aesthetics
 */

const courses = [
  {
    id: "01",
    name: "AI First",
    tagline: "הצעד הראשון",
    outcome: "מבינים ומתחילים להשתמש",
    duration: "5 מפגשים",
    hours: "15 שעות",
    description: "הכניסה שלכם לעולם ה-AI. לומדים להשתמש ב-ChatGPT, Claude ועוד כלים בצורה מקצועית.",
    features: [
      "הכרת כלי AI מרכזיים",
      "כתיבת פרומפטים אפקטיביים",
      "שימוש ביום-יום בעבודה",
      "תעודת השתתפות"
    ],
    color: "#06b6d4",
    colorSecondary: "#0ea5e9",
    featured: false,
    level: "למתחילים",
    href: "#contact",
    icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>`
  },
  {
    id: "02",
    name: "Bot-Camp",
    tagline: "ההכשרה המקצועית",
    outcome: "יוצאים עם תיק עבודות ויכולת להרוויח",
    duration: "12 מפגשים",
    hours: "72 שעות",
    description: "הכשרה מקיפה לבניית סוכני AI, בוטים ואוטומציות. יוצאים עם תעודה אקדמית וידע מעשי.",
    features: [
      "פרונטלי / Zoom Live",
      "2-3 מרצים בכל מפגש",
      "פורטל לימוד + סוכני AI",
      "קהילת בוגרים ונטוורקינג",
      "תיק עבודות מוכן",
      "תעודה אקדמית"
    ],
    color: "#a855f7",
    colorSecondary: "#c084fc",
    featured: true,
    level: "לכל הרמות",
    href: "/academy",
    icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>`
  },
  {
    id: "03",
    name: "AI Ready",
    tagline: "יוצרים בעצמכם",
    outcome: "בונים הכל בעצמכם",
    duration: "8 מפגשים",
    hours: "30 שעות",
    description: "יצירת תוכן, דפי נחיתה, מצגות, דשבורדים וסרטונים - הכל בעצמכם עם AI.",
    features: [
      "יצירת תוכן שיווקי",
      "עיצוב עם Midjourney",
      "בניית דפי נחיתה",
      "אוטומציות בסיסיות",
      "תעודת השתתפות"
    ],
    color: "#f59e0b",
    colorSecondary: "#fbbf24",
    featured: false,
    level: "בינוני",
    href: "/academy/ai-ready",
    icon: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>`
  }
];
---

<section id="academy" class="py-8 md:py-10 relative overflow-hidden bg-[#0a0a0f]" data-section>
  <!-- Gradient mesh background -->
  <div class="absolute inset-0">
    <!-- Animated gradient orbs -->
    <div class="absolute top-0 left-1/4 w-[500px] h-[500px] rounded-full bg-gradient-to-br from-purple-600/30 to-pink-500/20 blur-[120px] animate-pulse-slow"></div>
    <div class="absolute bottom-0 right-1/4 w-[600px] h-[600px] rounded-full bg-gradient-to-br from-cyan-500/20 to-blue-600/30 blur-[150px] animate-pulse-slow" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] rounded-full bg-gradient-to-r from-violet-600/10 to-fuchsia-500/10 blur-[100px]"></div>

    <!-- Fingerprint background - right side -->
    <img
      src="https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_700/v1765571815/FOCUS_LOGO-06_2_grkja9.png"
      alt=""
      aria-hidden="true"
      loading="lazy"
      decoding="async"
      class="absolute top-1/2 right-0 w-[600px] lg:w-[800px] h-auto -translate-y-1/2 opacity-[0.08] pointer-events-none select-none"
    />
  </div>

  <div class="container relative z-10 px-4 md:px-6">
    <!-- Header -->
    <div class="text-center mb-6 md:mb-8">
      <h2 class="text-4xl sm:text-5xl md:text-6xl font-bold text-white mb-4 tracking-tight">
        המסלולים שלנו
      </h2>
      <p class="text-lg text-white/50 max-w-xl mx-auto">
        בחרו את הרמה שמתאימה לכם ותתחילו את המסע
      </p>
    </div>

    <!-- Glass Cards Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-6 mb-8 lg:items-center">
      {courses.map((course, index) => (
        <div
          class={`glass-card group ${course.featured ? 'featured' : ''}`}
          style={`--accent: ${course.color}; --accent-secondary: ${course.colorSecondary}; --delay: ${index * 0.1}s`}
        >
          {/* Featured badge - pulses and scales on card hover */}
          {course.featured && (
            <div class="featured-badge-wrapper">
              <div class="featured-badge">
                <span class="featured-badge-dot"></span>
                מומלץ
              </div>
            </div>
          )}

          {/* Main glass surface */}
          <div class="glass-surface">
            {/* Gradient border */}
            <div class="glass-border"></div>

            {/* Inner content */}
            <div class="glass-content">
              {/* Header */}
              <div class="flex items-start justify-between mb-8">
                {/* Icon */}
                <div class="icon-wrapper" style={`--icon-color: ${course.color}`}>
                  <div class="icon-glow"></div>
                  <div class="icon-box" set:html={course.icon}></div>
                </div>

                {/* Level */}
                <span class="level-tag" style={`--tag-color: ${course.color}`}>
                  {course.level}
                </span>
              </div>

              {/* Course info */}
              <div class="mb-6">
                <p class="text-sm font-medium text-white/40 mb-2 tracking-wide">[{course.tagline}]</p>
                <h3 class="course-title" style={`--title-color: ${course.color}`}>
                  {course.name}
                </h3>
              </div>

              {/* Description */}
              <p class="text-base text-white/60 leading-relaxed mb-6">
                {course.description}
              </p>

              {/* Stats */}
              <div class="stats-row">
                <div class="stat">
                  <svg class="w-4 h-4" style={`color: ${course.color}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  <span>{course.duration}</span>
                </div>
                <div class="stat-divider"></div>
                <div class="stat">
                  <svg class="w-4 h-4" style={`color: ${course.color}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span>{course.hours}</span>
                </div>
              </div>

              {/* Features */}
              <ul class="features-list">
                {course.features.map((feature) => (
                  <li>
                    <span class="feature-dot" style={`background: ${course.color}`}></span>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>

              {/* CTA */}
              <a href={course.href} class={`cta-btn ${course.featured ? 'featured' : ''}`}>
                <span class="btn-bg"></span>
                <span class="btn-text">
                  {course.featured ? 'התחילו עכשיו' : 'לפרטים נוספים'}
                  <svg class="w-4 h-4 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                  </svg>
                </span>
              </a>
            </div>
          </div>

          {/* Hover glow */}
          <div class="hover-glow"></div>
        </div>
      ))}
    </div>

    <!-- Bottom CTA Section -->
    <div class="glass-cta-section">
      <div class="glass-cta-content">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10 lg:gap-16 items-center">
          {/* Text + Form */}
          <div class="text-center md:text-right">
            <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-white/5 border border-white/10 mb-4">
              <span class="w-1.5 h-1.5 rounded-full bg-purple-400 animate-pulse"></span>
              <span class="text-sm font-medium text-white/60">ייעוץ חינם</span>
            </div>

            <h3 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4">
              לא בטוחים איזה מסלול מתאים?
            </h3>
            <p class="text-white/50 mb-8">
              השאירו פרטים ונחזור אליכם תוך 24 שעות לשיחת ייעוץ בחינם
            </p>

            <form id="academy-consult-form" class="space-y-4">

              <div class="flex flex-col sm:flex-row gap-3">
                <input
                  type="text"
                  name="name"
                  placeholder="שם מלא"
                  required
                  class="glass-input"
                />
                <input
                  type="tel"
                  name="phone"
                  placeholder="מספר טלפון"
                  required
                  class="glass-input"
                />
              </div>

              <div class="flex flex-col sm:flex-row gap-3">
                <button type="submit" class="submit-btn">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  חזרו אליי
                </button>
                <a href="https://wa.me/972539466408?text=היי, אשמח לשמוע על הקורסים שלכם" target="_blank" class="whatsapp-btn">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                  </svg>
                  WhatsApp
                </a>
              </div>
            </form>
          </div>

          {/* Stats Grid */}
          <div class="grid grid-cols-2 gap-4">
            <div class="stat-card">
              <div class="stat-card-value">500+</div>
              <div class="stat-card-label">בוגרים</div>
            </div>
            <div class="stat-card">
              <div class="stat-card-value">98%</div>
              <div class="stat-card-label">שביעות רצון</div>
            </div>
            <div class="stat-card">
              <div class="stat-card-value">30</div>
              <div class="stat-card-label">ימים ל-ROI</div>
            </div>
            <div class="stat-card">
              <div class="stat-card-value">4.9</div>
              <div class="stat-card-label">דירוג</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Slow pulse animation */
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.5; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.05); }
  }

  .animate-pulse-slow {
    animation: pulse-slow 8s ease-in-out infinite;
  }

  /* Glass Card */
  .glass-card {
    position: relative;
    animation: cardAppear 0.6s ease-out var(--delay) both;
  }

  @keyframes cardAppear {
    from {
      opacity: 0;
      transform: translateY(40px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .glass-card.featured {
    transform: scale(1.02);
  }

  /* Non-featured cards - smaller from top and bottom */
  @media (min-width: 1024px) {
    .glass-card:not(.featured) {
      margin-top: 2rem;
      margin-bottom: 2rem;
    }

    .glass-card.featured {
      transform: scale(1.02);
    }
  }

  .glass-surface {
    position: relative;
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--accent) 10%, rgba(18, 18, 26, 0.55)) 0%,
      rgba(18, 18, 26, 0.45) 100%
    );
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 24px;
    border: 1px solid color-mix(in srgb, var(--accent) 18%, transparent);
    overflow: hidden;
    transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1), box-shadow 0.4s, border-color 0.4s;
  }

  .glass-card:hover .glass-surface {
    transform: translateY(-8px);
    box-shadow: 0 32px 64px -16px rgba(0, 0, 0, 0.5);
    border-color: color-mix(in srgb, var(--accent) 35%, transparent);
  }

  .glass-card.featured .glass-surface {
    background: linear-gradient(
      135deg,
      color-mix(in srgb, #a855f7 15%, rgba(18, 18, 26, 0.6)) 0%,
      rgba(18, 18, 26, 0.5) 100%
    );
    border-color: rgba(168, 85, 247, 0.3);
    box-shadow: 0 24px 48px -12px rgba(168, 85, 247, 0.25);
  }

  /* Featured badge */
  .featured-badge-wrapper {
    position: absolute;
    top: -14px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 20;
    transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .glass-card:hover .featured-badge-wrapper {
    transform: translateX(-50%) scale(1.12);
  }

  .featured-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 18px;
    background: rgba(168, 85, 247, 0.15);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(168, 85, 247, 0.4);
    border-radius: 100px;
    color: #c084fc;
    font-size: 13px;
    font-weight: 600;
    white-space: nowrap;
    box-shadow: 0 0 20px rgba(168, 85, 247, 0.2);
    transition: box-shadow 0.4s, border-color 0.4s;
  }

  .glass-card:hover .featured-badge {
    border-color: rgba(168, 85, 247, 0.6);
    box-shadow: 0 0 30px rgba(168, 85, 247, 0.35);
  }

  .featured-badge-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #a855f7;
    animation: badgePulse 2s ease-in-out infinite;
  }

  @keyframes badgePulse {
    0%, 100% { opacity: 1; box-shadow: 0 0 4px #a855f7; }
    50% { opacity: 0.5; box-shadow: 0 0 8px #a855f7; }
  }

  /* Glass border */
  .glass-border {
    display: none;
  }

  /* Glass content */
  .glass-content {
    position: relative;
    padding: 2rem;
    z-index: 10;
  }

  /* Icon */
  .icon-wrapper {
    position: relative;
  }

  .icon-glow {
    position: absolute;
    inset: -8px;
    background: var(--icon-color);
    border-radius: 20px;
    filter: blur(20px);
    opacity: 0.3;
    transition: opacity 0.3s;
  }

  .glass-card:hover .icon-glow {
    opacity: 0.5;
  }

  .icon-box {
    position: relative;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    color: white;
    transition: background 0.3s, border-color 0.3s;
  }

  .glass-card:hover .icon-box {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
  }

  /* Level tag */
  .level-tag {
    padding: 6px 12px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 100px;
    font-size: 14px;
    font-weight: 500;
    color: var(--tag-color);
  }

  /* Course title */
  .course-title {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, var(--title-color), white 80%);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    line-height: 1.1;
  }

  /* Stats row */
  .stats-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 12px 16px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 12px;
    margin-bottom: 1.5rem;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 8px;
    color: white;
    font-size: 15px;
    font-weight: 500;
  }

  .stat-divider {
    width: 1px;
    height: 16px;
    background: rgba(255, 255, 255, 0.1);
  }

  /* Features list */
  .features-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-bottom: 2rem;
    flex-grow: 1;
  }

  .features-list li {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 15px;
    color: rgba(255, 255, 255, 0.7);
  }

  .feature-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  /* CTA Button */
  .cta-btn {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 16px 24px;
    border-radius: 14px;
    font-weight: 600;
    overflow: hidden;
    transition: transform 0.3s;
  }

  .cta-btn:hover {
    transform: scale(1.02);
  }

  .cta-btn .btn-bg {
    position: absolute;
    inset: 0;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 14px;
    transition: background 0.3s;
  }

  .cta-btn:hover .btn-bg {
    background: rgba(255, 255, 255, 0.1);
  }

  .cta-btn .btn-text {
    position: relative;
    z-index: 10;
    display: flex;
    align-items: center;
    gap: 8px;
    color: white;
  }

  /* Featured button */
  .cta-btn.featured .btn-bg {
    background: linear-gradient(135deg, #a855f7, #ec4899);
    border: none;
  }

  .cta-btn.featured:hover .btn-bg {
    background: linear-gradient(135deg, #9333ea, #db2777);
  }

  .cta-btn.featured {
    box-shadow: 0 8px 32px -8px rgba(168, 85, 247, 0.5);
  }

  /* Hover glow */
  .hover-glow {
    position: absolute;
    inset: -100px;
    background: radial-gradient(
      circle at center,
      var(--accent) 0%,
      transparent 70%
    );
    opacity: 0;
    filter: blur(80px);
    transition: opacity 0.5s;
    pointer-events: none;
    z-index: -1;
  }

  .glass-card:hover .hover-glow {
    opacity: 0.15;
  }

  /* Bottom CTA Section */
  .glass-cta-section {
    position: relative;
    border-radius: 32px;
    overflow: hidden;
  }

  .glass-cta-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(168, 85, 247, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 100%
    );
