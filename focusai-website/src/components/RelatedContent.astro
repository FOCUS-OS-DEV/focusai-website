---
interface RelatedItem {
  title: string;
  description: string;
  href: string;
}
interface Props {
  items: RelatedItem[];
  title?: string;
}
const { items, title = "המשך לגלות" } = Astro.props;
---

<section class="py-12 md:py-16 bg-[#0a0a0f]">
  <div class="container px-4 md:px-6">
    <!-- Section header -->
    <div class="flex items-center gap-3 mb-8">
      <div class="flex items-center gap-2">
        <span class="w-1.5 h-1.5 rounded-full bg-[#a855f7] animate-pulse"></span>
      </div>
      <h2 class="text-lg font-semibold text-white">{title}</h2>
      <div class="h-px flex-1 bg-gradient-to-r from-[#a855f7]/20 to-transparent"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
      {items.map((item) => (
        <a href={item.href} class="group block bg-white/[0.03] backdrop-blur-xl border border-white/[0.08] rounded-2xl p-6 transition-all duration-300 hover:border-[#a855f7]/30 hover:bg-white/[0.06] hover:shadow-[0_8px_32px_rgba(168,85,247,0.1)]">
          <h3 class="text-lg font-bold text-white mb-2 group-hover:text-[#a855f7] transition-colors">{item.title}</h3>
          <p class="text-sm text-[#9090a8] mb-4 line-clamp-2">{item.description}</p>
          <span class="text-sm text-[#a855f7] group-hover:translate-x-[-4px] transition-transform inline-block">&larr; גלה עוד</span>
        </a>
      ))}
    </div>
  </div>
</section>
