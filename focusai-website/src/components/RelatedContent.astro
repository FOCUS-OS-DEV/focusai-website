---
interface RelatedItem {
  title: string;
  description: string;
  href: string;
}
interface Props {
  items: RelatedItem[];
  title?: string;
}
const { items, title = "המשך לגלות" } = Astro.props;
---

<section class="py-12 md:py-16 bg-[#0a0a0f]">
  <div class="container px-4 md:px-6">
    <!-- Terminal header -->
    <div class="flex items-center gap-3 mb-8">
      <div class="flex gap-1.5">
        <span class="w-2.5 h-2.5 rounded-full bg-[#ff3366]"></span>
        <span class="w-2.5 h-2.5 rounded-full bg-[#ffff00]"></span>
        <span class="w-2.5 h-2.5 rounded-full bg-[#a855f7]"></span>
      </div>
      <h2 class="font-mono text-lg text-[#a855f7]">{`> ${title}`}</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
      {items.map((item) => (
        <a href={item.href} class="group block bg-[#12121a] border border-[#2a2a3a] rounded-xl p-6 transition-all duration-300 hover:border-[#a855f7]/50 hover:shadow-[0_0_30px_rgba(168,85,247,0.1)]">
          <h3 class="text-lg font-bold text-white mb-2 group-hover:text-[#a855f7] transition-colors">{item.title}</h3>
          <p class="text-sm text-[#9090a8] mb-4 line-clamp-2">{item.description}</p>
          <span class="font-mono text-xs text-[#a855f7] group-hover:translate-x-[-4px] transition-transform inline-block">&larr; גלה עוד</span>
        </a>
      ))}
    </div>
  </div>
</section>
