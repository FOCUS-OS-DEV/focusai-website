---
/**
 * WhatsApp Community Invite Section
 * Full-width premium CTA to join the Focus AI WhatsApp community
 */

const communityLink = "https://did.li/Focus-community";
const imageUrl = "https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_500/v1770388356/0e214975-5aab-422d-a865-afb04e3179b7_pjtmso.png";
---

<section class="py-12 md:py-16 bg-[#0a0a0f] relative overflow-hidden" data-section>
  <!-- Background glow -->
  <div class="absolute top-1/2 left-1/3 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] bg-[#25D366]/8 rounded-full blur-[120px]"></div>
  <!-- Fingerprint background - right side -->
  <img
    src="https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_700/v1765571815/FOCUS_LOGO-06_2_grkja9.png"
    alt=""
    aria-hidden="true"
    loading="lazy"
    decoding="async"
    class="absolute top-1/2 right-0 w-[500px] lg:w-[700px] h-auto -translate-y-1/2 opacity-[0.15] pointer-events-none select-none"
  />

  <div class="container relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-0">

      <!-- Content - takes more space -->
      <div class="w-full lg:w-1/2 text-center lg:text-right order-2 lg:order-1 lg:pr-8">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-5 py-2.5 bg-[#25D366]/10 border border-[#25D366]/30 rounded-full mb-8" data-animate="fade-up">
          <svg class="w-5 h-5 text-[#25D366]" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          <span class="font-mono text-sm font-semibold text-[#25D366] uppercase tracking-wider">COMMUNITY</span>
        </div>

        <h2 class="text-2xl sm:text-3xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight" data-animate="fade-up" data-delay="0.1">
          הצטרפו ל<span class="text-[#25D366]">קהילת AI</span> שלנו
        </h2>

        <p class="text-[#d0d0e0] text-lg md:text-xl mb-8 max-w-lg mx-auto lg:mx-0 lg:mr-0" data-animate="fade-up" data-delay="0.2">
          טיפים יומיים, עדכונים על כלים חדשים, שאלות ותשובות ונטוורקינג עם אנשי מקצוע בתחום
        </p>

        <!-- Stats -->
        <div class="flex justify-center lg:justify-start gap-10 mb-10" data-animate="stagger">
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-[#25D366]">850+</div>
            <div class="text-sm font-medium text-[#d0d0e0] font-mono uppercase tracking-wider">MEMBERS</div>
          </div>
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-[#25D366]">FREE</div>
            <div class="text-sm font-medium text-[#d0d0e0] font-mono uppercase tracking-wider">ACCESS</div>
          </div>
        </div>

        <!-- CTA Button -->
        <a
          href={communityLink}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 px-10 py-5 bg-[#25D366] text-white font-bold text-lg md:text-xl hover:bg-[#20bd5a] transition-all duration-300 hover:scale-105 hover:shadow-[0_0_40px_rgba(37,211,102,0.5)] rounded-full"
          data-animate="neon-pulse" data-delay="0.3"
        >
          <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          הצטרפו עכשיו - חינם!
        </a>
      </div>

      <!-- Image - larger and more prominent -->
      <div class="w-full lg:w-1/2 order-1 lg:order-2" data-animate="scale-up">
        <img
          src={imageUrl}
          alt="הצטרפו לקהילת הוואטסאפ של Focus AI"
          class="w-full max-w-xl lg:max-w-none mx-auto drop-shadow-2xl"
          width="500"
          height="500"
          loading="lazy"
          decoding="async"
        />
      </div>
    </div>
  </div>
</section>
