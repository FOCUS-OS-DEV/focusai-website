---
/**
 * Team Founders Section - Cyberpunk HUD Profile Cards
 * Uses centralized team data from src/data/team.ts
 */
import { founders, companyValues } from '../data';

// Map founders for display with HUD-style IDs
const displayFounders = founders.map((f, i) => ({
  ...f,
  displayId: `USR_00${i + 1}`,
  displayTitle: f.title.toUpperCase().replace(/ /g, '_'),
}));

const values = companyValues;
---

<section id="team" class="py-12 md:py-16 relative overflow-hidden bg-[#0a0a0f]" data-section>
  <!-- Background effects -->
  <div class="absolute inset-0 section-bg">
    <div class="absolute top-0 right-0 w-96 h-96 bg-[#c084fc]/5 rounded-full blur-[200px]"></div>
    <div class="absolute bottom-0 left-0 w-80 h-80 bg-[#a855f7]/5 rounded-full blur-[200px]"></div>
    <!-- Fingerprint background - left side -->
    <img
      src="https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_700/v1765571815/FOCUS_LOGO-06_2_grkja9.png"
      alt=""
      aria-hidden="true"
      loading="lazy"
      decoding="async"
      class="absolute top-1/2 left-0 w-[500px] lg:w-[700px] h-auto -translate-y-1/2 opacity-[0.15] pointer-events-none select-none"
    />
  </div>


  <div class="container relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-10 md:mb-12">
      <h2 class="text-4xl md:text-5xl lg:text-7xl font-black mb-6" data-animate="glitch">
        <span class="text-[#f5f5fa]">לומדים ממי ש</span>
        <span class="gradient-text-magenta">עושים</span>
      </h2>

      <p class="text-xl text-[#b0b0c0] max-w-3xl mx-auto font-mono" data-animate="fade-up" data-delay="0.2">
        <span class="text-[#c084fc]">></span> לא תיאורטיקנים.
        <span class="text-[#f5f5fa]"> הידע מגיע מפרויקטים אמיתיים.</span>
      </p>
    </div>

    <!-- Founders Cards -->
    <div class="grid md:grid-cols-2 gap-6 lg:gap-8 max-w-5xl mx-auto mb-10 md:mb-12">
      {displayFounders.map((founder, index) => (
        <div
          class="founder-card group relative"
          data-animate="terminal"
          data-delay={`${index * 0.2}`}
        >
          {/* Card */}
          <div
            class="relative bg-white/[0.03] backdrop-blur-xl border border-white/[0.08] hover:border-[#c084fc]/30 transition-all duration-500 overflow-hidden rounded-2xl shadow-[0_8px_32px_rgba(0,0,0,0.3)]"
          >
            {/* Glow effect on hover */}
            <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none rounded-2xl" style="box-shadow: inset 0 0 60px rgba(192, 132, 252, 0.1);"></div>

            {/* Glass header */}
            <div class="flex items-center justify-between px-6 py-3 border-b border-white/[0.06] bg-white/[0.03] backdrop-blur-sm rounded-t-2xl">
              <div class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 rounded-full bg-[#c084fc] animate-pulse"></span>
              </div>
              <span class="font-mono text-xs font-medium text-[#b0b0c0]/60 tracking-wider">{founder.displayId}</span>
            </div>

            {/* Content */}
            <div class="p-8">
              {/* Header with photo */}
              <div class="flex items-start gap-6 mb-6">
                {/* Photo with HUD frame */}
                <div class="relative flex-shrink-0">
                  {/* Animated ring */}
                  <div class="absolute -inset-2 rounded-xl border border-[#c084fc]/30 group-hover:border-[#c084fc]/60 transition-colors"></div>

                  <div class="relative w-24 h-24 lg:w-28 lg:h-28 overflow-hidden rounded-xl">
                    <img
                      src={founder.image}
                      alt={founder.name}
                      loading="lazy"
                      decoding="async"
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    />

                    {/* Overlay */}
                    <div class="absolute inset-0 bg-gradient-to-t from-[#c084fc]/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                  </div>

                  {/* Status indicator */}
                  <div class="absolute -bottom-1 -right-1 flex items-center gap-1.5 px-2.5 py-1 bg-[#0a0a0f] border border-[#a855f7]/50 rounded-md">
                    <span class="w-2 h-2 rounded-full bg-[#a855f7] animate-pulse"></span>
                    <span class="font-mono text-[10px] md:text-[11px] text-[#a855f7] font-medium">{founder.status || "ONLINE"}</span>
                  </div>
                </div>

                {/* Info */}
                <div class="flex-1 min-w-0">
                  <h3 class="text-2xl lg:text-3xl font-bold text-[#f5f5fa] mb-2 group-hover:text-[#c084fc] transition-colors">
                    {founder.name}
                  </h3>
                  <p class="font-mono text-sm text-[#c084fc] uppercase tracking-wider mb-2">
                    {founder.title}
                  </p>
                  <p class="text-[#a0a0b8] text-base font-mono">{founder.role}</p>
                </div>
              </div>

              {/* Bio */}
              <p class="text-[#d0d0e0] leading-relaxed mb-6 text-base">
                {founder.bio}
              </p>

              {/* Credentials */}
              <div class="flex flex-wrap gap-2 mb-6">
                {founder.credentials.map((cred) => (
                  <span class="px-3 py-1 bg-[#0a0a0f] border border-[#c084fc]/30 text-[#c084fc] text-sm font-medium font-mono uppercase tracking-wider group-hover:border-[#c084fc]/60 transition-colors">
                    {cred}
                  </span>
                ))}
              </div>

              {/* Social links */}
              {founder.social && founder.social.linkedin && (
                <a
                  href={founder.social.linkedin}
                  class="inline-flex items-center gap-2 px-4 py-2 border border-[#2a2a3a] hover:border-[#0077B5] hover:text-[#0077B5] text-[#b0b0c0] transition-all font-mono text-xs uppercase tracking-wider"
                  aria-label="LinkedIn"
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                  CONNECT
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Values Grid -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6 mb-10 md:mb-12" data-animate="stagger">
      {values.map((value, i) => (
        <div
          class="value-card group text-center p-6 bg-[#12121a] border border-[#2a2a3a] hover:border-[#a855f7]/50 transition-all duration-300 rounded-xl"
        >
          {/* Code badge */}
          <div class="inline-flex items-center gap-1.5 px-2.5 py-1.5 bg-[#a855f7]/10 border border-[#a855f7]/30 mb-4 rounded-full">
            <span class="w-1.5 h-1.5 rounded-full bg-[#a855f7]"></span>
            <span class="font-mono text-[10px] md:text-[11px] text-[#a855f7] uppercase font-medium">{value.code}</span>
          </div>

          <h4 class="font-bold text-lg text-[#f5f5fa] mb-2 group-hover:text-[#a855f7] transition-colors">{value.title}</h4>
          <p class="text-sm text-[#a0a0b8] font-mono leading-relaxed">{value.desc}</p>
        </div>
      ))}
    </div>

    <!-- Vision Statement -->
    <div class="max-w-4xl mx-auto" data-animate="scale-up">
      <div
        class="relative bg-white/[0.03] backdrop-blur-xl border border-white/[0.08] overflow-hidden rounded-2xl shadow-[0_8px_32px_rgba(0,0,0,0.3)]"
      >
        {/* Background glow */}
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-[#a855f7]/10 rounded-full blur-[100px]"></div>

        {/* Glass header */}
        <div class="flex items-center justify-between px-6 py-3 border-b border-white/[0.06] bg-white/[0.03] backdrop-blur-sm relative z-10 rounded-t-2xl">
          <div class="flex items-center gap-2">
            <span class="w-1.5 h-1.5 rounded-full bg-[#a855f7] animate-pulse"></span>
          </div>
          <span class="font-mono text-xs font-medium text-[#b0b0c0]/60 tracking-wider uppercase">החזון שלנו</span>
        </div>

        {/* Quote marks */}
        <div class="absolute top-16 left-8 text-[#a855f7]/10 text-8xl font-serif">"</div>
        <div class="absolute bottom-8 right-8 text-[#a855f7]/10 text-8xl font-serif rotate-180">"</div>

        <div class="relative z-10 text-center p-10 lg:p-16">
          <p class="text-2xl lg:text-4xl font-bold text-[#f5f5fa] leading-relaxed">
            מגשרים על הפער בין
            <span class="gradient-text-glow"> אנשים לטכנולוגיה</span>
          </p>
          <div class="mt-6 flex items-center justify-center gap-4">
            <div class="w-12 h-px bg-gradient-to-r from-transparent via-[#a855f7] to-transparent"></div>
            <span class="text-[#b0b0c0] text-sm font-mono uppercase tracking-wider">Focus AI Mission</span>
            <div class="w-12 h-px bg-gradient-to-r from-transparent via-[#a855f7] to-transparent"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .founder-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease forwards;
  }

  .value-card {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.5s ease forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .founder-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 0 40px rgba(192, 132, 252, 0.2);
  }

  .value-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 0 30px rgba(168, 85, 247, 0.1);
  }

  .gradient-text-magenta {
    background: linear-gradient(90deg, #c084fc, #c084fc);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 0 20px rgba(192, 132, 252, 0.5));
  }

  .gradient-text-glow {
    background: linear-gradient(90deg, #a855f7, #c084fc);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 0 20px rgba(168, 85, 247, 0.5));
  }
</style>
