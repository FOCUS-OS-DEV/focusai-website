---
/**
 * CTA Contact Section - Cyberpunk Terminal Interface
 */
import { siteConfig, getMailtoLink, getPhoneLink } from '../data';

const webhookUrl = import.meta.env.PUBLIC_CONTACT_WEBHOOK || "#";
const chavobot = "https://res.cloudinary.com/dfudxxzlj/image/upload/v1770324982/freepik__base-prompt-sitting-at-a-modern-laptop-computer-ty__91188_u0haiq.png";

const contactMethods = [
  {
    code: "EMAIL",
    label: "אימייל",
    value: siteConfig.contact.email,
    href: getMailtoLink(),
    neonColor: "#e879f9"
  },
  {
    code: "WHATSAPP",
    label: "WhatsApp",
    value: siteConfig.contact.phone,
    href: siteConfig.contact.whatsapp,
    neonColor: "#a855f7"
  },
  {
    code: "PHONE",
    label: "טלפון",
    value: siteConfig.contact.phone,
    href: getPhoneLink(),
    neonColor: "#c084fc"
  }
];

const quickStats = [
  { code: "SPEED", text: "תגובה תוך 24 שעות" },
  { code: "FREE", text: "שיחה ללא התחייבות" },
  { code: "SECURE", text: "פרטיות מובטחת" },
];

const interestOptions = [
  { value: "ai-agent", label: "נציג AI לעסק", code: "AI_AGENT" },
  { value: "bot-camp", label: "Bot-Camp - הכשרה מקצועית", code: "BOT_CAMP" },
  { value: "ai-ready", label: "AI Ready", code: "AI_READY" },
  { value: "ai-first", label: "AI First", code: "AI_FIRST" },
  { value: "workshop", label: "סדנה לארגון", code: "WORKSHOP" },
  { value: "other", label: "משהו אחר", code: "OTHER" },
];
---

<section id="contact" class="py-24 lg:py-32 relative overflow-hidden bg-[#0a0a0f]" data-section>
  <!-- Background effects -->
  <div class="absolute inset-0">
    <div class="absolute top-0 right-1/4 w-96 h-96 bg-[#a855f7]/5 rounded-full blur-[200px]"></div>
    <div class="absolute bottom-0 left-1/4 w-80 h-80 bg-[#c084fc]/5 rounded-full blur-[200px]"></div>
  </div>

  <!-- Circuit grid -->
  <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(rgba(168, 85, 247, 0.5) 1px, transparent 1px), linear-gradient(90deg, rgba(168, 85, 247, 0.5) 1px, transparent 1px); background-size: 50px 50px;"></div>

  <div class="container relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <!-- Terminal badge -->
      <div class="inline-flex items-center gap-3 px-4 py-2 bg-[#12121a] border border-[#a855f7]/30 mb-8" data-animate="fade-up">
        <span class="w-2 h-2 rounded-full bg-[#a855f7] animate-pulse"></span>
        <span class="font-mono text-sm font-semibold text-[#a855f7] uppercase tracking-[0.15em]">CONTACT_TERMINAL</span>
      </div>

      <h2 class="text-4xl md:text-5xl lg:text-7xl font-black mb-6" data-animate="glitch" data-delay="0.1">
        <span class="text-[#f5f5fa]">בואו</span>
        <span class="gradient-text-glow"> נדבר</span>
      </h2>

      <p class="text-xl text-[#b0b0c0] max-w-2xl mx-auto font-mono" data-animate="fade-up" data-delay="0.2">
        <span class="text-[#a855f7]">></span> השאירו פרטים ונחזור אליכם
        <span class="text-[#f5f5fa]"> תוך 24 שעות.</span>
      </p>
    </div>

    <!-- Quick Stats -->
    <div class="flex flex-wrap justify-center gap-4 lg:gap-6 mb-12" data-animate="stagger">
      {quickStats.map((stat) => (
        <div
          class="flex items-center gap-3 px-5 py-3 bg-[#12121a] border border-[#2a2a3a] hover:border-[#a855f7]/50 transition-all duration-300 rounded-xl"
        >
          <span class="w-1.5 h-1.5 rounded-full bg-[#a855f7]"></span>
          <span class="font-mono text-sm font-medium text-[#a855f7] uppercase tracking-wider">[{stat.code}]</span>
          <span class="text-sm text-[#d0d0e0]">{stat.text}</span>
        </div>
      ))}
    </div>

    <div class="grid lg:grid-cols-5 gap-8 lg:gap-12 max-w-6xl mx-auto">
      <!-- Form - Takes 3 columns -->
      <div class="lg:col-span-3">
        <div
          class="relative bg-[#12121a] border border-[#2a2a3a] overflow-hidden rounded-2xl"
          data-animate="terminal"
        >
          {/* Terminal header */}
          <div class="flex items-center justify-between px-6 py-3 border-b border-[#2a2a3a] bg-[#0a0a0f]/50 rounded-t-2xl">
            <div class="flex items-center gap-2">
              <span class="w-2.5 h-2.5 rounded-full bg-[#ff3366]"></span>
              <span class="w-2.5 h-2.5 rounded-full bg-[#ffff00]"></span>
              <span class="w-2.5 h-2.5 rounded-full bg-[#a855f7]"></span>
            </div>
            <span class="font-mono text-sm font-medium text-[#b0b0c0] tracking-wider">SUBMIT_REQUEST</span>
          </div>

          {/* Corner accents */}
          <div class="absolute top-0 left-0 w-4 h-4 border-t-2 border-l-2 border-[#a855f7]/30"></div>
          <div class="absolute top-0 right-0 w-4 h-4 border-t-2 border-r-2 border-[#a855f7]/30"></div>
          <div class="absolute bottom-0 left-0 w-4 h-4 border-b-2 border-l-2 border-[#a855f7]/30"></div>
          <div class="absolute bottom-0 right-0 w-4 h-4 border-b-2 border-r-2 border-[#a855f7]/30"></div>

          <form id="contact-form" class="p-8 lg:p-10 space-y-6" action={webhookUrl} method="POST">
            <div class="grid md:grid-cols-2 gap-6">
              <div class="form-group">
                <label for="name" class="block font-mono text-sm font-medium text-[#a855f7] uppercase tracking-wider mb-2">
                  <span class="text-[#b0b0c0]">[REQ]</span> שם מלא
                </label>
                <div class="relative">
                  <span class="absolute left-4 top-1/2 -translate-y-1/2 text-[#a855f7] font-mono">></span>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full pl-10 pr-4 py-3.5 bg-[#0a0a0f] border border-[#2a2a3a] text-[#f5f5fa] font-mono text-sm focus:outline-none focus:border-[#a855f7] focus:shadow-[0_0_20px_rgba(168,85,247,0.2)] transition-all duration-300 rounded-xl"
                    placeholder="הכנס שם_"
                  />
                </div>
              </div>

              <div class="form-group">
                <label for="phone" class="block font-mono text-sm font-medium text-[#a855f7] uppercase tracking-wider mb-2">
                  <span class="text-[#b0b0c0]">[REQ]</span> טלפון
                </label>
                <div class="relative">
                  <span class="absolute left-4 top-1/2 -translate-y-1/2 text-[#a855f7] font-mono">></span>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    required
                    class="w-full pl-10 pr-4 py-3.5 bg-[#0a0a0f] border border-[#2a2a3a] text-[#f5f5fa] font-mono text-sm focus:outline-none focus:border-[#a855f7] focus:shadow-[0_0_20px_rgba(168,85,247,0.2)] transition-all duration-300 rounded-xl"
                    placeholder="050-000-0000_"
                  />
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="email" class="block font-mono text-sm font-medium text-[#a855f7] uppercase tracking-wider mb-2">
                <span class="text-[#b0b0c0]">[OPT]</span> אימייל
              </label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-[#a855f7] font-mono">></span>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full pl-10 pr-4 py-3.5 bg-[#0a0a0f] border border-[#2a2a3a] text-[#f5f5fa] font-mono text-sm focus:outline-none focus:border-[#a855f7] focus:shadow-[0_0_20px_rgba(168,85,247,0.2)] transition-all duration-300 rounded-xl"
                  placeholder="email@example.com_"
                />
              </div>
            </div>

            <div class="form-group">
              <label for="interest" class="block font-mono text-sm font-medium text-[#a855f7] uppercase tracking-wider mb-2">
                <span class="text-[#b0b0c0]">[SEL]</span> מה מעניין אתכם?
              </label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-[#a855f7] font-mono">></span>
                <select
                  id="interest"
                  name="interest"
                  class="w-full pl-10 pr-10 py-3.5 bg-[#0a0a0f] border border-[#2a2a3a] text-[#f5f5fa] font-mono text-sm focus:outline-none focus:border-[#a855f7] focus:shadow-[0_0_20px_rgba(168,85,247,0.2)] transition-all duration-300 appearance-none cursor-pointer rounded-xl"
                >
                  {interestOptions.map((opt) => (
                    <option value={opt.value}>[{opt.code}] {opt.label}</option>
                  ))}
                </select>
                <div class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none">
                  <svg class="w-4 h-4 text-[#b0b0c0]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="message" class="block font-mono text-sm font-medium text-[#a855f7] uppercase tracking-wider mb-2">
                <span class="text-[#b0b0c0]">[OPT]</span> הודעה
              </label>
              <div class="relative">
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  class="w-full px-4 py-3.5 bg-[#0a0a0f] border border-[#2a2a3a] text-[#f5f5fa] font-mono text-sm focus:outline-none focus:border-[#a855f7] focus:shadow-[0_0_20px_rgba(168,85,247,0.2)] transition-all duration-300 resize-none rounded-xl"
                  placeholder="// ספרו לנו על מה שאתם מחפשים..."
                ></textarea>
              </div>
            </div>

            <button
              type="submit"
              class="submit-btn group w-full py-4 bg-[#a855f7] text-[#0a0a0f] font-mono font-bold uppercase tracking-wider shadow-[0_0_30px_rgba(168,85,247,0.5)] hover:shadow-[0_0_50px_rgba(168,85,247,0.7)] hover:brightness-110 transition-all duration-300 flex items-center justify-center gap-3 rounded-full"
            >
              <span class="w-2 h-2 rounded-full bg-[#0a0a0f] animate-pulse"></span>
              <span>SUBMIT_REQUEST</span>
            </button>

            <p class="text-sm font-medium text-[#b0b0c0] text-center font-mono">
              <span class="text-[#a855f7]">//</span> בשליחת הטופס אתם מסכימים ל<a href="/terms" class="text-[#a855f7] hover:underline">תנאי השימוש</a> ו<a href="/privacy" class="text-[#a855f7] hover:underline">מדיניות הפרטיות</a>.
            </p>
          </form>
        </div>
      </div>

      <!-- Contact Info + Chavobot - Takes 2 columns -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Contact Methods -->
        <div
          class="bg-[#12121a] border border-[#2a2a3a] overflow-hidden rounded-2xl"
          data-animate="slide-left" data-delay="0.2"
        >
          {/* Terminal header */}
          <div class="flex items-center justify-between px-6 py-3 border-b border-[#2a2a3a] bg-[#0a0a0f]/50 rounded-t-2xl">
            <div class="flex items-center gap-2">
              <span class="w-2.5 h-2.5 rounded-full bg-[#ff3366]"></span>
              <span class="w-2.5 h-2.5 rounded-full bg-[#ffff00]"></span>
              <span class="w-2.5 h-2.5 rounded-full bg-[#a855f7]"></span>
            </div>
            <span class="font-mono text-sm font-medium text-[#b0b0c0] tracking-wider">CONTACT_METHODS</span>
          </div>

          <div class="p-6 space-y-4">
            {contactMethods.map((method) => (
              <a
                href={method.href}
                class="group flex items-center gap-4 p-4 bg-[#0a0a0f] border border-[#2a2a3a] hover:border-[#a855f7]/50 transition-all duration-300 rounded-xl"
              >
                <div
                  class="w-12 h-12 flex items-center justify-center border transition-all duration-300"
                  style={`border-color: ${method.neonColor}50; color: ${method.neonColor};`}
                >
                  {method.code === "EMAIL" && (
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                    </svg>
                  )}
                  {method.code === "WHATSAPP" && (
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                    </svg>
                  )}
                  {method.code === "PHONE" && (
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                    </svg>
                  )}
                </div>
                <div class="flex-1">
                  <div class="text-sm font-medium text-[#b0b0c0] font-mono uppercase tracking-wider mb-0.5">[{method.code}]</div>
                  <div class="font-mono text-[#f5f5fa] group-hover:text-[#a855f7] transition-colors">{method.value}</div>
                </div>
                <span class="w-2 h-2 rounded-full bg-[#b0b0c0] group-hover:bg-[#a855f7] transition-colors"></span>
              </a>
            ))}
          </div>
        </div>

        <!-- Chavobot Card -->
        <div
          class="relative bg-[#12121a] border border-[#2a2a3a] overflow-hidden rounded-2xl"
          data-animate="neon-pulse" data-delay="0.3"
        >
          {/* Glow effect */}
          <div class="absolute inset-0 bg-gradient-to-br from-[#a855f7]/5 via-transparent to-[#c084fc]/5"></div>

          {/* Terminal header */}
          <div class="flex items-center justify-between px-6 py-3 border-b border-[#2a2a3a] bg-[#0a0a0f]/50 relative z-10 rounded-t-2xl">
            <div class="flex items-center gap-2">
              <span class="w-2.5 h-2.5 rounded-full bg-[#ff3366]"></span>
              <span class="w-2.5 h-2.5 rounded-full bg-[#ffff00]"></span>
              <span class="w-2.5 h-2.5 rounded-full bg-[#a855f7]"></span>
            </div>
            <span class="font-mono text-sm font-medium text-[#b0b0c0] tracking-wider">AI_ASSISTANT</span>
          </div>

          <div class="relative z-10 p-8 text-center">
            <img
              src={chavobot}
              alt="חבובוט - הבוט החכם של Focus AI"
              class="w-40 lg:w-48 h-auto mx-auto mb-4 hover:scale-105 transition-transform duration-500"
              style="filter: drop-shadow(0 0 30px rgba(168, 85, 247, 0.3));"
              loading="lazy"
            />
            <p class="text-sm text-[#b0b0c0] font-mono">
              <span class="text-[#a855f7]">//</span> יש לכם שאלה? חבובוט כאן לעזור!
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());
    const submitBtn = form.querySelector('.submit-btn') as HTMLButtonElement;
    const originalHTML = submitBtn.innerHTML;

    // Loading state
    submitBtn.innerHTML = `
      <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <span>PROCESSING...</span>
    `;
    submitBtn.disabled = true;
    submitBtn.classList.add('opacity-80');

    try {
      const webhookUrl = form.action;
      if (webhookUrl && webhookUrl !== '#') {
        await fetch(webhookUrl, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
      }

      // Success state
      submitBtn.innerHTML = `
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span>SUCCESS_TRANSMITTED</span>
      `;
      submitBtn.style.boxShadow = '0 0 30px rgba(168, 85, 247, 0.7)';

      setTimeout(() => {
        form.reset();
        submitBtn.innerHTML = originalHTML;
        submitBtn.disabled = false;
        submitBtn.classList.remove('opacity-80');
        submitBtn.style.boxShadow = '0 0 30px rgba(168, 85, 247, 0.5)';
      }, 3000);

    } catch (error) {
      // Error state
      submitBtn.innerHTML = `
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
        <span>ERROR_RETRY</span>
      `;
      submitBtn.style.background = '#ff3366';
      submitBtn.style.boxShadow = '0 0 30px rgba(255, 51, 102, 0.5)';

      setTimeout(() => {
        submitBtn.innerHTML = originalHTML;
        submitBtn.disabled = false;
        submitBtn.classList.remove('opacity-80');
        submitBtn.style.background = '#a855f7';
        submitBtn.style.boxShadow = '0 0 30px rgba(168, 85, 247, 0.5)';
      }, 3000);
    }
  });
</script>

<style>
  .gradient-text-glow {
    background: linear-gradient(90deg, #a855f7, #c084fc);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 0 20px rgba(168, 85, 247, 0.5));
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    border-color: #a855f7;
    box-shadow: 0 0 20px rgba(168, 85, 247, 0.2);
  }
</style>
