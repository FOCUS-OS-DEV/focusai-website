---
/**
 * Hero Section - Focus AI
 * Bright, calming, minimalist design with Chavobot mascot
 */

// Assets
const logo = "https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_200/v1765265408/5_aeotfd.png";
const fingerprint = "https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_700/v1765571815/FOCUS_LOGO-06_2_grkja9.png";
const chavobot = "https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_500/v1770324982/freepik__base-prompt-sitting-at-a-modern-laptop-computer-ty__91188_u0haiq.png";
---

<section class="hero relative min-h-screen flex items-center overflow-hidden bg-gradient-to-b from-bg-white via-bg-cream to-bg-light">
  <!-- Decorative Background Elements -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <!-- Fingerprint watermark -->
    <img
      src={fingerprint}
      alt=""
      class="fingerprint-bg absolute -left-20 top-1/2 -translate-y-1/2 w-[600px] h-auto opacity-[0.03] hero-fingerprint"
      aria-hidden="true"
    />

    <!-- Soft gradient orbs -->
    <div class="orb orb-purple w-[500px] h-[500px] -top-32 -right-32 hero-orb"></div>
    <div class="orb orb-pink w-[400px] h-[400px] bottom-20 -left-20 hero-orb"></div>

    <!-- Subtle radial gradient -->
    <div class="absolute inset-0 bg-gradient-radial"></div>
  </div>

  <!-- Main Content -->
  <div class="relative z-10 container mx-auto px-6 lg:px-12 py-20 lg:py-32">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">

      <!-- Text Content -->
      <div class="text-center lg:text-right order-2 lg:order-1">
        <!-- Trust Badge -->
        <div class="hero-badge inline-flex items-center gap-3 px-4 py-2 bg-purple-soft rounded-full mb-8 opacity-0">
          <span class="w-2 h-2 rounded-full bg-gradient-to-r from-purple-primary to-pink-accent"></span>
          <span class="text-sm font-medium text-purple-dark">ליווי אקדמי | אוניברסיטת חיפה</span>
        </div>

        <!-- Main Headline -->
        <h1 class="hero-title heading-hero mb-6 opacity-0">
          <span class="block text-text-primary">פוקוס.</span>
          <span class="block gradient-text">מחברים אנשים וטכנולוגיה.</span>
        </h1>

        <!-- Tagline -->
        <p class="hero-description text-body-large max-w-xl mx-auto lg:mx-0 mb-10 opacity-0">
          אנחנו עוזרים לעסקים ולאנשי מקצוע להתמקד בעיקר -
          <span class="text-text-primary font-medium">בזמן שה-AI עושה את השאר.</span>
        </p>

        <!-- CTA Buttons -->
        <div class="hero-cta flex flex-col sm:flex-row gap-4 justify-center lg:justify-start opacity-0">
          <a href="/academy" class="btn-primary">
            <span>אקדמיה</span>
          </a>
          <a href="/services" class="btn-secondary">
            <span>פיתוח מערכות</span>
          </a>
        </div>

        <!-- Quick Stats -->
        <div class="hero-stats grid grid-cols-3 gap-6 mt-14 pt-10 border-t border-border-subtle opacity-0">
          <div class="text-center lg:text-right">
            <div class="text-4xl lg:text-5xl font-bold gradient-text">500+</div>
            <div class="text-base md:text-lg text-[#b0b0c0] mt-2 font-semibold">בוגרים</div>
          </div>
          <div class="text-center lg:text-right">
            <div class="text-4xl lg:text-5xl font-bold gradient-text">50+</div>
            <div class="text-base md:text-lg text-[#b0b0c0] mt-2 font-semibold">ארגונים</div>
          </div>
          <div class="text-center lg:text-right">
            <div class="text-4xl lg:text-5xl font-bold gradient-text">30</div>
            <div class="text-base md:text-lg text-[#b0b0c0] mt-2 font-semibold">ימים ל-ROI</div>
          </div>
        </div>
      </div>

      <!-- Chavobot Illustration -->
      <div class="relative order-1 lg:order-2 flex justify-center lg:justify-start">
        <div class="hero-chavobot relative opacity-0">
          <!-- Glow behind Chavobot -->
          <div class="absolute inset-0 -z-10 scale-90">
            <div class="w-full h-full rounded-full bg-gradient-to-br from-purple-soft via-pink-soft to-purple-muted blur-3xl opacity-60"></div>
          </div>

          <!-- Chavobot Image -->
          <img
            src={chavobot}
            alt="חבובוט - הבוט החמוד של Focus AI"
            class="chavobot chavobot-float w-[280px] sm:w-[340px] lg:w-[400px] h-auto relative z-10"
            loading="eager"
          />

          <!-- Floating elements around Chavobot -->
          <div class="absolute top-10 -right-8 w-16 h-16 bg-white rounded-2xl shadow-lg flex items-center justify-center hero-float-element opacity-0" style="animation-delay: 0.5s;">
            <svg class="w-8 h-8 text-purple-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          </div>
          <div class="absolute bottom-20 -left-8 w-14 h-14 bg-white rounded-xl shadow-lg flex items-center justify-center hero-float-element opacity-0" style="animation-delay: 0.7s;">
            <svg class="w-7 h-7 text-pink-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/></svg>
          </div>
          <div class="absolute top-1/2 -right-12 w-12 h-12 bg-gradient-to-br from-purple-primary to-pink-accent rounded-full shadow-lg hero-float-element opacity-0" style="animation-delay: 0.9s;"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="hero-scroll absolute bottom-8 left-1/2 -translate-x-1/2 opacity-0">
    <a href="#services" class="flex flex-col items-center gap-2 text-text-muted hover:text-purple-primary transition-colors" aria-label="גלול למטה">
      <span class="text-xs tracking-widest uppercase">גלול</span>
      <div class="w-6 h-10 rounded-full border-2 border-current flex items-start justify-center p-2">
        <div class="w-1.5 h-3 rounded-full bg-current animate-bounce"></div>
      </div>
    </a>
  </div>
</section>

<script>
  import { gsap } from 'gsap';

  document.addEventListener('DOMContentLoaded', () => {
    const tl = gsap.timeline({
      defaults: {
        ease: 'power3.out',
        duration: 0.8
      }
    });

    // Initial setup
    gsap.set(['.hero-badge', '.hero-title', '.hero-description', '.hero-cta', '.hero-stats', '.hero-scroll'], {
      y: 30,
    });

    gsap.set('.hero-chavobot', {
      y: 40,
      scale: 0.95,
    });

    gsap.set('.hero-float-element', {
      y: 20,
      scale: 0.8,
    });

    gsap.set('.hero-orb', {
      scale: 0.8,
    });

    gsap.set('.hero-fingerprint', {
      x: -50,
    });

    // Animation sequence
    tl.to('.hero-orb', {
      opacity: 1,
      scale: 1,
      duration: 1.2,
      stagger: 0.2,
    }, 0)

    .to('.hero-fingerprint', {
      opacity: 0.03,
      x: 0,
      duration: 1.5,
    }, 0)

    .to('.hero-badge', {
      opacity: 1,
      y: 0,
      duration: 0.6,
    }, 0.2)

    .to('.hero-title', {
      opacity: 1,
      y: 0,
      duration: 0.8,
    }, 0.4)

    .to('.hero-description', {
      opacity: 1,
      y: 0,
      duration: 0.6,
    }, 0.6)

    .to('.hero-cta', {
      opacity: 1,
      y: 0,
      duration: 0.6,
    }, 0.8)

    .to('.hero-chavobot', {
      opacity: 1,
      y: 0,
      scale: 1,
      duration: 1,
      ease: 'back.out(1.2)',
    }, 0.5)

    .to('.hero-float-element', {
      opacity: 1,
      y: 0,
      scale: 1,
      duration: 0.6,
      stagger: 0.15,
      ease: 'back.out(1.5)',
    }, 1)

    .to('.hero-stats', {
      opacity: 1,
      y: 0,
      duration: 0.6,
    }, 1.1)

    .to('.hero-scroll', {
      opacity: 1,
      y: 0,
      duration: 0.5,
    }, 1.3);

    // Floating animation for decorative elements
    gsap.to('.hero-float-element', {
      y: -10,
      duration: 2,
      ease: 'sine.inOut',
      yoyo: true,
      repeat: -1,
      stagger: 0.3,
    });
  });
</script>

<style>
  .hero-orb {
    opacity: 0;
  }

  .hero-fingerprint {
    opacity: 0;
  }
</style>
