---
/**
 * StudentTestimonials - iPhone mockup with scrollable WhatsApp screenshots
 * Light theme wrapper for bot-camp landing page
 */
import PhoneTestimonials from './PhoneTestimonials.astro';
---

<section class="py-10 md:py-14 bg-gradient-to-b from-white to-[#f8f4ff] overflow-hidden">
  <div class="container px-4">
    <div class="text-center mb-8 md:mb-10">
      <h3 class="text-2xl md:text-3xl lg:text-4xl font-bold text-[#1a1a2e] mb-3">
        ככה זה נראה בקבוצה של <span class="text-[#a855f7]">המחזור הנוכחי</span>
      </h3>
    </div>

    <PhoneTestimonials theme="light" />
  </div>
</section>
