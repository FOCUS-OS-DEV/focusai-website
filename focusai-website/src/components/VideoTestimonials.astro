<section class="py-12 md:py-16 relative overflow-hidden bg-[#0a0a0f]" aria-label="עדויות וידאו מבוגרים" data-section>
  <!-- Background glow -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-[#a855f7]/5 rounded-full blur-[150px]"></div>

  <div class="container relative z-10 px-4 md:px-6">
    <!-- Badge -->
    <div class="flex justify-center mb-6" data-animate="fade-up">
      <div class="inline-flex items-center gap-3 px-4 py-2 bg-white/[0.03] backdrop-blur-sm border border-white/[0.08] rounded-full">
        <span class="w-1.5 h-1.5 rounded-full bg-[#a855f7] animate-pulse"></span>
        <span class="font-mono text-xs text-[#a855f7] uppercase tracking-[0.15em]">{badge}</span>
      </div>
    </div>

    <!-- Title -->
    <div class="text-center mb-10" data-animate="fade-up" data-delay="0.1">
      <h2 class="text-2xl sm:text-3xl md:text-5xl font-bold text-white mb-4 tracking-tight">
        {title}
      </h2>
      <p class="text-lg text-white/50 max-w-xl mx-auto">{subtitle}</p>
    </div>

    <!-- Carousel -->
    <div class="vt-carousel" role="region" aria-label="קרוסלת עדויות וידאו" tabindex="0">
      {testimonials.map((t, i) => (
        <div class="vt-card" data-vt-index={i}>
          <div class="vt-card-inner">
            <!-- Video container -->
            <div class="vt-video-wrap">
              <video
                preload="none"
                poster={t.poster}
                muted
                playsinline
                class="vt-video"
                data-src-desktop={t.video}
                data-src-mobile={t.video.replace('/upload/q_auto/', '/upload/w_720,q_auto/')}
                aria-label={`${t.name} - ${t.role} - עדות וידאו`}
              />

              <!-- Play button -->
              <button class="vt-play-btn" aria-label={`נגן סרטון של ${t.name}`}>
                <svg class="w-7 h-7 ms-0.5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </button>

              <!-- Bottom gradient -->
              <div class="vt-gradient"></div>

              <!-- Name/role -->
              <div class="vt-info">
                <p class="vt-name">{t.name}</p>
                <p class="vt-role">{t.role}</p>
              </div>

              <!-- Playing indicator -->
              <div class="vt-playing-dot"></div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Navigation arrows -->
    <div class="vt-nav">
      <button class="vt-nav-btn" data-vt-dir="prev" aria-label="העדות הקודמת">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </button>
      <button class="vt-nav-btn" data-vt-dir="next" aria-label="העדות הבאה">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      </button>
    </div>

    <!-- Dots -->
    <div class="vt-dots" role="tablist" aria-label="ניווט עדויות">
      {testimonials.map((_, i) => (
        <button
          class="vt-dot"
          role="tab"
          aria-selected={i === 0 ? "true" : "false"}
          aria-label={`עדות ${i + 1}`}
          data-dot-index={i}
        />
      ))}
    </div>
  </div>
</section>

<script is:inline>
(function() {
  var carousel = document.querySelector('.vt-carousel');
  if (!carousel || carousel.dataset.vtInit) return;
  carousel.dataset.vtInit = '1';

  var cards = carousel.querySelectorAll('.vt-card');
  var dots = document.querySelectorAll('.vt-dot');
  var reduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
  var scrollBehavior = reduced ? 'auto' : 'smooth';

  function getSrc(el) {
    return window.innerWidth < 768
      ? el.getAttribute('data-src-mobile')
      : el.getAttribute('data-src-desktop');
  }

  function pauseAll() {
    cards.forEach(function(c) {
      var v = c.querySelector('.vt-video');
      var btn = c.querySelector('.vt-play-btn');
      var inner = c.querySelector('.vt-card-inner');
      if (v && !v.paused) {
        v.pause();
        if (inner) inner.classList.remove('vt-active');
        if (btn) { btn.style.opacity = '1'; btn.style.pointerEvents = 'auto'; }
      }
    });
  }

  cards.forEach(function(card) {
    var video = card.querySelector('.vt-video');
    var playBtn = card.querySelector('.vt-play-btn');
    var inner = card.querySelector('.vt-card-inner');
    if (!video || !playBtn) return;

    function toggle() {
      if (!video.src || video.src === window.location.href) {
        video.src = getSrc(video);
        video.load();
      }

      if (video.paused) {
        pauseAll();
        video.play().then(function() {
          video.muted = false;
          if (inner) inner.classList.add('vt-active');
          playBtn.style.opacity = '0';
          playBtn.style.pointerEvents = 'none';
        }).catch(function() {
          video.muted = true;
          video.play().catch(function() {});
        });
      } else {
        video.pause();
        if (inner) inner.classList.remove('vt-active');
        playBtn.style.opacity = '1';
        playBtn.style.pointerEvents = 'auto';
      }
    }

    playBtn.addEventListener('click', function(e) { e.stopPropagation(); toggle(); });
    video.addEventListener('click', toggle);
    video.addEventListener('ended', function() {
      if (inner) inner.classList.remove('vt-active');
      playBtn.style.opacity = '1';
      playBtn.style.pointerEvents = 'auto';
    });
  });

  // Keyboard navigation
  carousel.addEventListener('keydown', function(e) {
    var cardW = cards[0] ? cards[0].offsetWidth + 16 : 236;
    if (e.key === 'ArrowLeft') {
      carousel.scrollBy({ left: -cardW, behavior: scrollBehavior });
    } else if (e.key === 'ArrowRight') {
      carousel.scrollBy({ left: cardW, behavior: scrollBehavior });
    }
  });

  // Arrow buttons
  document.querySelectorAll('[data-vt-dir]').forEach(function(btn) {
    btn.addEventListener('click', function() {
      var cardW = cards[0] ? cards[0].offsetWidth + 16 : 236;
      var dir = btn.getAttribute('data-vt-dir');
      var delta = dir === 'prev' ? cardW : -cardW;
      carousel.scrollBy({ left: delta, behavior: scrollBehavior });
    });
  });

  // Dot pagination with IntersectionObserver
  if (dots.length && 'IntersectionObserver' in window) {
    var observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          var idx = entry.target.getAttribute('data-vt-index');
          dots.forEach(function(d) {
            d.setAttribute('aria-selected',
              d.getAttribute('data-dot-index') === idx ? 'true' : 'false');
          });
        }
      });
    }, { root: carousel, threshold: 0.5 });

    cards.forEach(function(card) { observer.observe(card); });
  }

  // Dot click
  dots.forEach(function(dot) {
    dot.addEventListener('click', function() {
      var idx = parseInt(dot.getAttribute('data-dot-index'));
      if (cards[idx]) {
        cards[idx].scrollIntoView({ behavior: scrollBehavior, block: 'nearest', inline: 'start' });
      }
    });
  });
})();
</script>

<style>
  .vt-carousel {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 0.5rem 1rem 1rem;
  }

  .vt-carousel::-webkit-scrollbar {
    display: none;
  }

  .vt-card {
    scroll-snap-align: start;
    flex: 0 0 auto;
    width: 220px;
  }

  .vt-card-inner {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    transition: border-color 0.3s, box-shadow 0.3s;
  }

  .vt-card-inner.vt-active {
    border-color: rgba(168, 85, 247, 0.4);
    box-shadow: 0 0 20px rgba(168, 85, 247, 0.2), 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .vt-video-wrap {
    position: relative;
    aspect-ratio: 9 / 16;
    overflow: hidden;
    background: #0d0d15;
  }

  .vt-video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .vt-play-btn {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: rgba(168, 85, 247, 0.8);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.2);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s;
    z-index: 10;
    min-height: 56px;
    min-width: 56px;
    padding: 0;
  }

  .vt-play-btn:hover {
    background: rgba(168, 85, 247, 1);
    transform: translate(-50%, -50%) scale(1.1);
    box-shadow: 0 0 30px rgba(168, 85, 247, 0.5);
  }

  .vt-gradient {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 40%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
    pointer-events: none;
    z-index: 4;
  }

  .vt-info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    z-index: 5;
    pointer-events: none;
  }

  .vt-name {
    font-size: 0.9375rem;
    font-weight: 700;
    color: #f5f5fa;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.5);
    margin-bottom: 0.125rem;
  }

  .vt-role {
    font-size: 0.6875rem;
    color: rgba(245, 245, 250, 0.7);
    font-family: 'JetBrains Mono', monospace;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.5);
    line-height: 1.3;
  }

  .vt-playing-dot {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #a855f7;
    z-index: 10;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .vt-active .vt-playing-dot {
    opacity: 1;
    animation: vtPulse 2s infinite;
  }

  @keyframes vtPulse {
    0%, 100% { opacity: 1; box-shadow: 0 0 4px rgba(168, 85, 247, 0.5); }
    50% { opacity: 0.5; box-shadow: 0 0 8px rgba(168, 85, 247, 0.8); }
  }

  /* Navigation */
  .vt-nav {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .vt-nav-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: rgba(168, 85, 247, 0.15);
    border: 1px solid rgba(168, 85, 247, 0.3);
    color: #a855f7;
    cursor: pointer;
    transition: all 0.3s;
    backdrop-filter: blur(10px);
    padding: 0;
  }

  .vt-nav-btn:hover {
    background: rgba(168, 85, 247, 0.3);
    transform: scale(1.1);
    box-shadow: 0 0 20px rgba(168, 85, 247, 0.3);
  }

  /* Dots */
  .vt-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1.5rem;
  }

  .vt-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.1);
    cursor: pointer;
    transition: all 0.3s;
    padding: 0;
    min-height: 8px;
    min-width: 8px;
  }

  .vt-dot[aria-selected="true"] {
    background: #a855f7;
    box-shadow: 0 0 8px rgba(168, 85, 247, 0.5);
    transform: scale(1.25);
  }

  /* Mobile */
  @media (max-width: 768px) {
    .vt-card {
      width: 55vw;
    }

    .vt-play-btn {
      width: 48px;
      height: 48px;
      min-height: 48px;
      min-width: 48px;
    }

    .vt-nav {
      display: none;
    }
  }

  /* Tablet */
  @media (min-width: 769px) and (max-width: 1023px) {
    .vt-card {
      width: 200px;
    }
  }

  /* Large desktop: center cards, hide nav/dots */
  @media (min-width: 1280px) {
    .vt-carousel {
      justify-content: center;
      overflow-x: visible;
      scroll-snap-type: none;
    }

    .vt-nav,
    .vt-dots {
      display: none;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .vt-carousel {
      scroll-behavior: auto;
    }

    .vt-play-btn,
    .vt-nav-btn,
    .vt-dot,
    .vt-card-inner {
      transition: none;
    }

    .vt-playing-dot {
      animation: none;
      opacity: 1;
    }
  }
</style>
