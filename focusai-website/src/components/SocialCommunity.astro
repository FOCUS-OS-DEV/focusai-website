---
/**
 * Social Community Section
 * CTA to join Focus AI's social media communities (TikTok, Instagram, WhatsApp)
 * Features the chavobot mascot with social media icons
 */
import { siteConfig } from '../data/config';

const robotImage = "https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_500/v1770840878/f0701d6a-0e1e-4a52-9c61-56bda2e67012_rhtdvf.png";

const socials = [
  {
    name: "TikTok",
    href: siteConfig.social.tiktok,
    icon: "tiktok",
    color: "#ff0050",
  },
  {
    name: "Instagram",
    href: siteConfig.social.instagram,
    icon: "instagram",
    color: "#E4405F",
  },
  {
    name: "WhatsApp",
    href: siteConfig.social.whatsappCommunity,
    icon: "whatsapp",
    color: "#25D366",
  },
];
---

<section class="py-16 md:py-24 bg-[#0a0a0f] relative overflow-hidden" data-section>
  <!-- Background glow -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-[#a855f7]/5 rounded-full blur-[150px]"></div>

  <div class="container relative z-10 max-w-3xl mx-auto px-4">
    <!-- Robot mascot image -->
    <div class="flex justify-center mb-8" data-animate="scale-up">
      <img
        src={robotImage}
        alt="חבובוט Focus AI עם לוגואים של הרשתות החברתיות"
        class="w-56 h-56 sm:w-64 sm:h-64 md:w-72 md:h-72 object-contain drop-shadow-[0_0_30px_rgba(168,85,247,0.3)]"
        width="500"
        height="500"
        loading="lazy"
        decoding="async"
      />
    </div>

    <!-- Glass card -->
    <div class="bg-white/[0.03] backdrop-blur-xl border border-white/[0.08] rounded-2xl shadow-[0_8px_32px_rgba(0,0,0,0.4)] overflow-hidden" data-animate="fade-up">
      <!-- Glass header -->
      <div class="px-6 py-3 border-b border-white/[0.06] bg-white/[0.03] backdrop-blur-sm rounded-t-2xl flex items-center gap-2">
        <span class="w-1.5 h-1.5 rounded-full bg-[#a855f7] animate-pulse"></span>
        <span class="font-mono text-xs text-[#b0b0c0]/60 uppercase tracking-wider">Social</span>
      </div>

      <div class="p-8 sm:p-10 text-center">
        <!-- Title -->
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-4 leading-tight">
          מצטרפים ל<span class="text-[#a855f7]">קהילה</span> שלנו ברשתות
        </h2>

        <!-- Subtitle -->
        <p class="text-[#b0b0c0] text-base sm:text-lg mb-10 max-w-lg mx-auto leading-relaxed">
          תוכן בלעדי, עדכוני AI ואוטומציות וטיפים פרקטיים — בחרו את הערוץ שנוח לכם.
        </p>

        <!-- Social buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          {socials.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="social-btn group w-full sm:w-auto"
              data-color={social.color}
            >
              {social.icon === "tiktok" && (
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-2.88 2.5 2.89 2.89 0 01-2.89-2.89 2.89 2.89 0 012.89-2.89c.28 0 .54.04.79.11v-3.5a6.37 6.37 0 00-.79-.05A6.34 6.34 0 003.15 15.2a6.34 6.34 0 0010.86 4.46V13a8.16 8.16 0 005.58 2.19v-3.45a4.85 4.85 0 01-1.78-.35 4.86 4.86 0 01-1.22-.7V6.69h3z"/>
                </svg>
              )}
              {social.icon === "instagram" && (
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
                </svg>
              )}
              {social.icon === "whatsapp" && (
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              )}
              <span class="font-semibold">{social.name}</span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .social-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    padding: 0.875rem 2rem;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 9999px;
    color: #e0e0f0;
    font-size: 0.9375rem;
    transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
  }

  .social-btn:hover {
    transform: translateY(-2px);
    border-color: var(--btn-color);
    background: color-mix(in srgb, var(--btn-color) 12%, transparent);
    color: var(--btn-color);
    box-shadow: 0 8px 24px color-mix(in srgb, var(--btn-color) 25%, transparent);
  }

  .social-btn[data-color="#ff0050"] { --btn-color: #ff0050; }
  .social-btn[data-color="#E4405F"] { --btn-color: #E4405F; }
  .social-btn[data-color="#25D366"] { --btn-color: #25D366; }
</style>
