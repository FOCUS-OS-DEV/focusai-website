---
/**
 * Client Logos - Staggered 2-row layout
 * Offset rows with side fade effect
 */
import { clients } from "../data/clients";

const row1 = clients.slice(0, 8);
const row2 = clients.slice(8, 16);
---

<section class="relative py-10 md:py-14 bg-[#0a0a0f] overflow-hidden" data-section>
  <!-- Background glow -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[700px] h-[500px] bg-[#a855f7]/6 rounded-full blur-[200px]"></div>

  <!-- Fingerprint background -->
  <img
    src="https://res.cloudinary.com/dfudxxzlj/image/upload/v1765571815/FOCUS_LOGO-06_2_grkja9.png"
    alt=""
    aria-hidden="true"
    class="absolute top-1/2 left-0 w-[500px] lg:w-[700px] h-auto -translate-y-1/2 opacity-[0.15] pointer-events-none select-none"
  />

  <!-- Header -->
  <div class="text-center mb-6 md:mb-8 relative z-10 px-4">
    <div class="inline-flex items-center gap-3 px-4 py-2 bg-[#12121a] border border-[#a855f7]/30 mb-5" data-animate="fade-up">
      <span class="w-2 h-2 rounded-full bg-[#a855f7] animate-pulse"></span>
      <span class="font-mono text-sm font-semibold text-[#a855f7] uppercase tracking-[0.15em]">TRUSTED_BY</span>
    </div>
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-3">
      חלק מהלקוחות <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#a855f7] to-[#c084fc]">שסומכים עלינו</span>
    </h2>
    <p class="text-[#b0b0c0] text-base md:text-lg max-w-md mx-auto">
      מוסדות אקדמיים, ארגונים ועסקים מובילים
    </p>
  </div>

  <!-- Logos: 2 staggered rows with side fades -->
  <div class="logos-wrapper relative z-10">
    <!-- Row 1 - shifted right -->
    <div class="logos-row row-1">
      <div class="logos-row-inner">
        {row1.map((client, i) => (
          <div
            class="logo-card group"
            style={`--i: ${i}`}
            title={client.name}
          >
            <img src={client.logo} alt={client.name} loading="lazy" />
          </div>
        ))}
      </div>
    </div>

    <!-- Row 2 - shifted left -->
    <div class="logos-row row-2">
      <div class="logos-row-inner">
        {row2.map((client, i) => (
          <div
            class="logo-card group"
            style={`--i: ${i + 8}`}
            title={client.name}
          >
            <img src={client.logo} alt={client.name} loading="lazy" />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .logos-wrapper {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .logos-row {
    position: relative;
    overflow: hidden;
  }

  /* Side fade overlays */
  .logos-row::before,
  .logos-row::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 120px;
    z-index: 2;
    pointer-events: none;
  }

  .logos-row::before {
    left: 0;
    background: linear-gradient(to right, #0a0a0f 0%, transparent 100%);
  }

  .logos-row::after {
    right: 0;
    background: linear-gradient(to left, #0a0a0f 0%, transparent 100%);
  }

  .logos-row-inner {
    display: flex;
    gap: 10px;
    justify-content: center;
    padding: 0 20px;
  }

  /* Offset rows */
  .row-1 .logos-row-inner {
    transform: translateX(40px);
  }

  .row-2 .logos-row-inner {
    transform: translateX(-40px);
  }

  .logo-card {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 12px;
    width: 140px;
    min-width: 140px;
    aspect-ratio: 3 / 2;
    opacity: 0;
    animation: logoAppear 0.4s ease-out calc(var(--i) * 0.03s) forwards;
    transition: transform 0.3s;
  }

  .logo-card:hover {
    transform: translateY(-3px);
  }

  @keyframes logoAppear {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .logo-card img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    transition: transform 0.3s, opacity 0.3s;
    opacity: 0.85;
  }

  .logo-card:hover img {
    transform: scale(1.05);
    opacity: 1;
  }

  /* Responsive sizes */
  @media (max-width: 639px) {
    .logos-row::before,
    .logos-row::after {
      width: 60px;
    }

    .logo-card {
      width: 100px;
      min-width: 100px;
      padding: 8px;
    }

    .logos-row-inner {
      gap: 8px;
    }

    .row-1 .logos-row-inner {
      transform: translateX(25px);
    }

    .row-2 .logos-row-inner {
      transform: translateX(-25px);
    }
  }

  @media (min-width: 640px) and (max-width: 1023px) {
    .logo-card {
      width: 120px;
      min-width: 120px;
    }

    .row-1 .logos-row-inner {
      transform: translateX(30px);
    }

    .row-2 .logos-row-inner {
      transform: translateX(-30px);
    }
  }

  @media (min-width: 1024px) {
    .logo-card {
      width: 150px;
      min-width: 150px;
    }

    .logos-row-inner {
      gap: 12px;
    }
  }
</style>
