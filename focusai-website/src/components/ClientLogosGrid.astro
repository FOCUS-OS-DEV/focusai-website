---
/**
 * Client Logos - Infinite scrolling carousel
 * CSS-only: 2 identical copies + translateX(-50%) for seamless loop
 */
import { clients } from "../data/clients";
---

<section class="relative py-10 md:py-14 bg-[#0a0a0f] overflow-hidden" data-section>
  <!-- Background glow -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[700px] h-[500px] bg-[#a855f7]/6 rounded-full blur-[200px]"></div>

  <!-- Fingerprint background -->
  <img
    src="https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_700/v1765571815/FOCUS_LOGO-06_2_grkja9.png"
    alt=""
    aria-hidden="true"
    loading="lazy"
    decoding="async"
    class="absolute top-1/2 left-0 w-[500px] lg:w-[700px] h-auto -translate-y-1/2 opacity-[0.15] pointer-events-none select-none"
  />

  <!-- Header -->
  <div class="text-center mb-6 md:mb-8 relative z-10 px-4">
    <div class="inline-flex items-center gap-3 px-4 py-2 bg-[#12121a] border border-[#a855f7]/30 mb-5" data-animate="fade-up">
      <span class="w-2 h-2 rounded-full bg-[#a855f7] animate-pulse"></span>
      <span class="font-mono text-sm font-semibold text-[#a855f7] uppercase tracking-[0.15em]">TRUSTED_BY</span>
    </div>
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-3">
      חלק מהלקוחות <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#a855f7] to-[#c084fc]">שסומכים עלינו</span>
    </h2>
    <p class="text-[#b0b0c0] text-base md:text-lg max-w-md mx-auto">
      מוסדות אקדמיים, ארגונים ועסקים מובילים
    </p>
  </div>

  <!-- Logos - Infinite Carousel -->
  <div class="logos-carousel relative z-10">
    <div class="logos-carousel__track">
      {/* Set 1 - original */}
      {clients.map((client) => (
        <div class="logos-carousel__item" title={client.name}>
          <img src={client.logo} alt={client.name} decoding="async" />
        </div>
      ))}
      {/* Set 2 - identical duplicate for seamless loop */}
      {clients.map((client) => (
        <div class="logos-carousel__item" aria-hidden="true" title={client.name}>
          <img src={client.logo} alt="" decoding="async" />
        </div>
      ))}
    </div>
  </div>
</section>

<style is:global>
  .logos-carousel {
    width: 100%;
    overflow: hidden;
    padding: 10px 0;
    mask-image: linear-gradient(to right, transparent 0%, black 5%, black 95%, transparent 100%);
    -webkit-mask-image: linear-gradient(to right, transparent 0%, black 5%, black 95%, transparent 100%);
  }

  .logos-carousel__track {
    display: flex;
    animation: logos-scroll 35s linear infinite;
    will-change: transform;
  }

  .logos-carousel__track:hover {
    animation-play-state: paused;
  }

  .logos-carousel__item {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 110px;
    height: 70px;
    padding: 10px;
    margin-right: 16px;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    transition: transform 0.3s, background 0.3s, border-color 0.3s;
  }

  .logos-carousel__item img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    filter: brightness(0) invert(1);
    opacity: 0.6;
    transition: opacity 0.3s, filter 0.3s;
  }

  .logos-carousel__item:hover {
    transform: translateY(-3px) scale(1.05);
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(168, 85, 247, 0.3);
  }

  .logos-carousel__item:hover img {
    opacity: 0.9;
    filter: brightness(0) invert(1) drop-shadow(0 0 8px rgba(168, 85, 247, 0.5));
  }

  @keyframes logos-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media (min-width: 640px) {
    .logos-carousel__item {
      width: 130px;
      height: 80px;
      padding: 12px;
      margin-right: 20px;
    }
  }

  @media (min-width: 1024px) {
    .logos-carousel__item {
      width: 150px;
      height: 90px;
      padding: 14px;
      margin-right: 24px;
      border-radius: 14px;
    }
  }
</style>
