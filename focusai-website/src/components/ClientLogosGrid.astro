---
/**
 * Client Logos Grid - Cyberpunk Terminal Style
 * Shows all client logos in a terminal-themed 2-row grid
 * Dark glass cards with white inner container for logos
 */
import { clients } from "../data/clients";

// Split into 2 rows
const midPoint = Math.ceil(clients.length / 2);
const row1 = clients.slice(0, midPoint);
const row2 = clients.slice(midPoint);
---

<section class="relative py-12 md:py-16 bg-[#0a0a0f] overflow-hidden">
  <!-- Background glow -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] bg-[#a855f7]/5 rounded-full blur-[150px]"></div>
  </div>

  <div class="container relative z-10 px-4 md:px-6">
    <!-- Terminal-style Header -->
    <div class="text-center mb-8 md:mb-12">
      <!-- Terminal badge with traffic lights -->
      <div class="inline-flex items-center gap-3 px-5 py-2.5 rounded-full bg-[#12121a] border border-[#a855f7]/30 mb-6">
        <div class="flex gap-1.5">
          <span class="w-2 h-2 rounded-full bg-[#ff3366] shadow-[0_0_6px_#ff3366]"></span>
          <span class="w-2 h-2 rounded-full bg-[#ffff00] shadow-[0_0_6px_#ffff00]"></span>
          <span class="w-2 h-2 rounded-full bg-[#a855f7] shadow-[0_0_6px_#a855f7]"></span>
        </div>
        <span class="font-mono text-xs text-[#a855f7] tracking-[0.2em] uppercase">TRUSTED_BY</span>
        <span class="w-1.5 h-1.5 rounded-full bg-[#a855f7] animate-pulse"></span>
      </div>

      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-3">
        חלק מהלקוחות <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#a855f7] to-[#d946ef]">שסומכים עלינו</span>
      </h2>
      <p class="text-[#9090a8] font-mono text-sm">
        // מוסדות אקדמיים, ארגונים ועסקים מובילים
      </p>
    </div>

    <!-- Logos Grid - Terminal Frame -->
    <div class="terminal-frame">
      <!-- Terminal header bar -->
      <div class="terminal-header">
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-[#ff3366]"></span>
          <span class="w-3 h-3 rounded-full bg-[#ffff00]"></span>
          <span class="w-3 h-3 rounded-full bg-[#a855f7]"></span>
        </div>
        <span class="font-mono text-xs text-[#a855f7]/60">portfolio.clients</span>
      </div>

      <!-- Grid content -->
      <div class="p-4 md:p-6 lg:p-8">
        <!-- Row 1 -->
        <div class="flex flex-wrap justify-center gap-3 md:gap-4 lg:gap-5 mb-4 md:mb-6">
          {row1.map((client, index) => (
            <div class="logo-card group" style={`--delay: ${index * 0.05}s`}>
              <!-- Outer glow on hover -->
              <div class="absolute inset-0 rounded-xl bg-[#a855f7]/20 blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

              <!-- Dark card with border -->
              <div class="logo-card-outer">
                <!-- Corner accents -->
                <div class="absolute top-1 left-1 w-2 h-2 border-t border-l border-[#a855f7]/0 group-hover:border-[#a855f7] transition-all duration-300"></div>
                <div class="absolute top-1 right-1 w-2 h-2 border-t border-r border-[#a855f7]/0 group-hover:border-[#a855f7] transition-all duration-300"></div>
                <div class="absolute bottom-1 left-1 w-2 h-2 border-b border-l border-[#a855f7]/0 group-hover:border-[#a855f7] transition-all duration-300"></div>
                <div class="absolute bottom-1 right-1 w-2 h-2 border-b border-r border-[#a855f7]/0 group-hover:border-[#a855f7] transition-all duration-300"></div>

                <!-- White inner for logo -->
                <div class="logo-card-inner">
                  <img
                    src={client.logo}
                    alt={client.name}
                    class="max-h-8 sm:max-h-10 md:max-h-12 lg:max-h-14 max-w-full object-contain transition-transform duration-300 group-hover:scale-110"
                    loading="lazy"
                  />
                </div>
              </div>

              <!-- Tooltip -->
              <div class="logo-tooltip">{client.name}</div>
            </div>
          ))}
        </div>

        <!-- Divider -->
        <div class="flex items-center justify-center gap-4 my-4 md:my-6">
          <div class="h-px w-1/4 bg-gradient-to-r from-transparent to-[#a855f7]/30"></div>
          <span class="text-[#a855f7]/30 font-mono text-xs">•••</span>
          <div class="h-px w-1/4 bg-gradient-to-l from-transparent to-[#a855f7]/30"></div>
        </div>

        <!-- Row 2 -->
        <div class="flex flex-wrap justify-center gap-3 md:gap-4 lg:gap-5">
          {row2.map((client, index) => (
            <div class="logo-card group" style={`--delay: ${(index + midPoint) * 0.05}s`}>
              <!-- Outer glow on hover -->
              <div class="absolute inset-0 rounded-xl bg-[#a855f7]/20 blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

              <!-- Dark card with border -->
              <div class="logo-card-outer">
                <!-- Corner accents -->
                <div class="absolute top-1 left-1 w-2 h-2 border-t border-l border-[#a855f7]/0 group-hover:border-[#a855f7] transition-all duration-300"></div>
                <div class="absolute top-1 right-1 w-2 h-2 border-t border-r border-[#a855f7]/0 group-hover:border-[#a855f7] transition-all duration-300"></div>
                <div class="absolute bottom-1 left-1 w-2 h-2 border-b border-l border-[#a855f7]/0 group-hover:border-[#a855f7] transition-all duration-300"></div>
                <div class="absolute bottom-1 right-1 w-2 h-2 border-b border-r border-[#a855f7]/0 group-hover:border-[#a855f7] transition-all duration-300"></div>

                <!-- White inner for logo -->
                <div class="logo-card-inner">
                  <img
                    src={client.logo}
                    alt={client.name}
                    class="max-h-8 sm:max-h-10 md:max-h-12 lg:max-h-14 max-w-full object-contain transition-transform duration-300 group-hover:scale-110"
                    loading="lazy"
                  />
                </div>
              </div>

              <!-- Tooltip -->
              <div class="logo-tooltip">{client.name}</div>
            </div>
          ))}
        </div>
      </div>

      <!-- Terminal footer -->
      <div class="terminal-footer">
        <span class="text-[#9090a8]">&gt;</span>
        <span>loading_more_success_stories...</span>
        <span class="animate-pulse">_</span>
      </div>
    </div>
  </div>
</section>

<style>
  /* Terminal Frame */
  .terminal-frame {
    position: relative;
    background: linear-gradient(145deg, #15151f 0%, #0d0d14 100%);
    border: 1px solid #2a2a3a;
    border-radius: 16px;
    overflow: hidden;
    box-shadow:
      0 4px 40px rgba(0, 0, 0, 0.5),
      0 0 60px rgba(168, 85, 247, 0.05);
  }

  .terminal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    background: rgba(10, 10, 15, 0.8);
    border-bottom: 1px solid #2a2a3a;
  }

  .terminal-footer {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px;
    background: rgba(10, 10, 15, 0.5);
    border-top: 1px solid #2a2a3a;
    font-family: monospace;
    font-size: 12px;
    color: rgba(168, 85, 247, 0.4);
  }

  /* Logo Card */
  .logo-card {
    position: relative;
    animation: logoFadeIn 0.5s ease-out var(--delay) both;
  }

  .logo-card-outer {
    position: relative;
    width: 70px;
    height: 70px;
    background: linear-gradient(145deg, #18181f 0%, #0f0f14 100%);
    border: 1px solid #2a2a3a;
    border-radius: 12px;
    padding: 6px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
  }

  .logo-card-inner {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 8px;
    overflow: hidden;
  }

  @media (min-width: 640px) {
    .logo-card-outer {
      width: 90px;
      height: 90px;
      padding: 8px;
    }
  }

  @media (min-width: 768px) {
    .logo-card-outer {
      width: 110px;
      height: 110px;
      padding: 10px;
      border-radius: 14px;
    }
    .logo-card-inner {
      border-radius: 10px;
    }
  }

  @media (min-width: 1024px) {
    .logo-card-outer {
      width: 130px;
      height: 130px;
      padding: 12px;
      border-radius: 16px;
    }
    .logo-card-inner {
      border-radius: 12px;
    }
  }

  .logo-card:hover .logo-card-outer {
    transform: translateY(-4px);
    border-color: rgba(168, 85, 247, 0.5);
    box-shadow:
      0 8px 30px rgba(168, 85, 247, 0.2),
      0 4px 20px rgba(0, 0, 0, 0.4);
  }

  /* Tooltip */
  .logo-tooltip {
    position: absolute;
    bottom: calc(100% + 8px);
    left: 50%;
    transform: translateX(-50%) translateY(4px);
    padding: 6px 12px;
    background: rgba(12, 12, 18, 0.98);
    border: 1px solid rgba(168, 85, 247, 0.4);
    border-radius: 6px;
    font-family: monospace;
    font-size: 11px;
    color: #c084fc;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s ease;
    z-index: 20;
    pointer-events: none;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
  }

  .logo-tooltip::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 5px solid transparent;
    border-top-color: rgba(12, 12, 18, 0.98);
  }

  .logo-card:hover .logo-tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  @keyframes logoFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
