---
/**
 * Client Logos - Dual-direction marquee with rounded square cards
 * Desktop: Two rows scrolling in opposite directions
 * Mobile: Two rows marquee (slower, smaller)
 */
import { clients } from "../data/clients";

// Split clients into two rows
const half = Math.ceil(clients.length / 2);
const row1 = clients.slice(0, half);
const row2 = clients.slice(half);
---

<section class="relative py-10 md:py-14 bg-[#0a0a0f]" data-section>
  <!-- Header -->
  <div class="text-center mb-8 md:mb-10 px-4">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-3">
      חלק מהלקוחות <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#a855f7] to-[#c084fc]">שסומכים עלינו</span>
    </h2>
    <p class="text-[#b0b0c0] text-base md:text-lg max-w-md mx-auto">
      מוסדות אקדמיים, ארגונים ועסקים מובילים
    </p>
  </div>

  <!-- Marquee container -->
  <div class="logos-wrapper">
    <!-- Row 1 - scrolls right -->
    <div class="marquee-row" style="--direction: normal; --duration: 35s;">
      <div class="marquee-track">
        {[...row1, ...row1, ...row1].map((client) => (
          <div class="logo-card" title={client.name}>
            <img src={client.logo} alt={client.name} loading="lazy" decoding="async" width="140" height="90" />
          </div>
        ))}
      </div>
    </div>

    <!-- Row 2 - scrolls left -->
    <div class="marquee-row" style="--direction: reverse; --duration: 40s;">
      <div class="marquee-track">
        {[...row2, ...row2, ...row2].map((client) => (
          <div class="logo-card" title={client.name}>
            <img src={client.logo} alt={client.name} loading="lazy" decoding="async" width="140" height="90" />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .logos-wrapper {
    display: flex;
    flex-direction: column;
    gap: 12px;
    overflow: hidden;
    mask-image: linear-gradient(to right, transparent 0%, black 8%, black 92%, transparent 100%);
    -webkit-mask-image: linear-gradient(to right, transparent 0%, black 8%, black 92%, transparent 100%);
  }

  .marquee-row {
    overflow: hidden;
    width: 100%;
  }

  .marquee-track {
    display: flex;
    gap: 12px;
    width: max-content;
    animation: marqueeScroll var(--duration) linear infinite;
    animation-direction: var(--direction);
  }

  .marquee-row:hover .marquee-track {
    animation-play-state: paused;
  }

  @keyframes marqueeScroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-33.333%); }
  }

  .logo-card {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 140px;
    height: 90px;
    background: white;
    border-radius: 16px;
    padding: 12px 16px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .logo-card:hover {
    transform: scale(1.06);
    box-shadow: 0 6px 24px rgba(168, 85, 247, 0.15);
  }

  .logo-card img {
    width: auto;
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .logo-card:hover img {
    opacity: 1;
  }

  /* Desktop */
  @media (min-width: 768px) {
    .logos-wrapper {
      gap: 16px;
    }

    .logo-card {
      width: 170px;
      height: 100px;
      border-radius: 20px;
      padding: 16px 20px;
    }

    .marquee-track {
      gap: 16px;
    }
  }

  /* Mobile - smaller cards, faster readability */
  @media (max-width: 767px) {
    .logo-card {
      width: 110px;
      height: 70px;
      border-radius: 12px;
      padding: 8px 12px;
    }

    .marquee-track {
      gap: 10px;
    }
  }
</style>
