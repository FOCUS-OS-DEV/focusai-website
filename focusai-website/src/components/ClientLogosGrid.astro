---
/**
 * Client Logos - Simple white band with logos, blur edges
 */
import { clients } from "../data/clients";
---

<section class="relative py-10 md:py-14 bg-[#0a0a0f]" data-section>
  <!-- Header -->
  <div class="text-center mb-8 md:mb-10 px-4">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-3">
      חלק מהלקוחות <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#a855f7] to-[#c084fc]">שסומכים עלינו</span>
    </h2>
    <p class="text-[#b0b0c0] text-base md:text-lg max-w-md mx-auto">
      מוסדות אקדמיים, ארגונים ועסקים מובילים
    </p>
  </div>

  <!-- White band with logos -->
  <div class="client-band">
    <div class="flex flex-wrap justify-center items-center gap-6 md:gap-8 lg:gap-10 px-6 py-8 md:py-10 max-w-6xl mx-auto">
      {clients.map((client) => (
        <div class="client-logo" title={client.name}>
          <img src={client.logo} alt={client.name} loading="lazy" decoding="async" />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .client-band {
    background: white;
    position: relative;
    box-shadow:
      0 -40px 60px -10px rgba(255, 255, 255, 0.15),
      0 40px 60px -10px rgba(255, 255, 255, 0.15);
  }

  .client-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 50px;
    flex-shrink: 0;
  }

  .client-logo img {
    width: auto;
    max-width: 120px;
    max-height: 100%;
    object-fit: contain;
    opacity: 0.7;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .client-logo:hover img {
    opacity: 1;
    transform: scale(1.08);
  }

  @media (max-width: 768px) {
    .client-logo {
      height: 36px;
    }
    .client-logo img {
      max-width: 80px;
    }
  }
</style>
