---
/**
 * Client Logos - Floating logos with dual-direction marquee
 * Desktop: Two rows scrolling in opposite directions
 * Mobile: Two rows, smaller logos
 * Style: Grayscale → full color + purple glow on hover
 */
import { clients } from "../data/clients";

// Split clients into two rows
const half = Math.ceil(clients.length / 2);
const row1 = clients.slice(0, half);
const row2 = clients.slice(half);
---

<section class="relative py-10 md:py-14 bg-[#0a0a0f]" data-section>
  <!-- Header -->
  <div class="text-center mb-8 md:mb-10 px-4">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-3">
      חלק מהלקוחות <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#a855f7] to-[#c084fc]">שסומכים עלינו</span>
    </h2>
    <p class="text-[#b0b0c0] text-base md:text-lg max-w-md mx-auto">
      מוסדות אקדמיים, ארגונים ועסקים מובילים
    </p>
  </div>

  <!-- Marquee container -->
  <div class="logos-wrapper">
    <!-- Row 1 - scrolls right -->
    <div class="marquee-row" style="--direction: normal; --duration: 35s;">
      <div class="marquee-track">
        {[...row1, ...row1, ...row1].map((client) => (
          <div class="logo-item" title={client.name}>
            <img src={client.logo} alt={client.name} loading="lazy" decoding="async" width="140" height="60" />
          </div>
        ))}
      </div>
    </div>

    <!-- Row 2 - scrolls left -->
    <div class="marquee-row" style="--direction: reverse; --duration: 40s;">
      <div class="marquee-track">
        {[...row2, ...row2, ...row2].map((client) => (
          <div class="logo-item" title={client.name}>
            <img src={client.logo} alt={client.name} loading="lazy" decoding="async" width="140" height="60" />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .logos-wrapper {
    display: flex;
    flex-direction: column;
    gap: 20px;
    overflow: hidden;
    mask-image: linear-gradient(to right, transparent 0%, black 8%, black 92%, transparent 100%);
    -webkit-mask-image: linear-gradient(to right, transparent 0%, black 8%, black 92%, transparent 100%);
  }

  .marquee-row {
    overflow: hidden;
    width: 100%;
  }

  .marquee-track {
    display: flex;
    align-items: center;
    gap: 40px;
    width: max-content;
    animation: marqueeScroll var(--duration) linear infinite;
    animation-direction: var(--direction);
  }

  .marquee-row:hover .marquee-track {
    animation-play-state: paused;
  }

  @keyframes marqueeScroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-33.333%); }
  }

  /* Floating logo - no card background */
  .logo-item {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 8px 16px;
    height: 70px;
  }

  .logo-item img {
    max-height: 50px;
    width: auto;
    max-width: 160px;
    object-fit: contain;
    filter: grayscale(1) brightness(1.8);
    opacity: 0.4;
    transition: all 0.4s ease;
  }

  .logo-item:hover img {
    filter: grayscale(0) brightness(1) drop-shadow(0 0 16px rgba(168, 85, 247, 0.5));
    opacity: 1;
    transform: scale(1.12);
  }

  /* Desktop */
  @media (min-width: 768px) {
    .logos-wrapper {
      gap: 28px;
    }

    .marquee-track {
      gap: 56px;
    }

    .logo-item {
      height: 80px;
      padding: 8px 20px;
    }

    .logo-item img {
      max-height: 56px;
      max-width: 180px;
    }
  }

  /* Mobile - smaller */
  @media (max-width: 767px) {
    .logo-item {
      height: 52px;
      padding: 4px 10px;
    }

    .logo-item img {
      max-height: 38px;
      max-width: 120px;
    }

    .marquee-track {
      gap: 28px;
    }
  }
</style>
