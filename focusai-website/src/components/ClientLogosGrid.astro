---
/**
 * Client Logos - Infinite scrolling carousel
 * Uses CSS-only animation with 3 identical copies for seamless loop
 */
import { clients } from "../data/clients";
---

<section class="relative py-10 md:py-14 bg-[#0a0a0f] overflow-hidden" data-section>
  <!-- Background glow -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[700px] h-[500px] bg-[#a855f7]/6 rounded-full blur-[200px]"></div>

  <!-- Fingerprint background -->
  <img
    src="https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_700/v1765571815/FOCUS_LOGO-06_2_grkja9.png"
    alt=""
    aria-hidden="true"
    loading="lazy"
    decoding="async"
    class="absolute top-1/2 left-0 w-[500px] lg:w-[700px] h-auto -translate-y-1/2 opacity-[0.15] pointer-events-none select-none"
  />

  <!-- Header -->
  <div class="text-center mb-6 md:mb-8 relative z-10 px-4">
    <div class="inline-flex items-center gap-3 px-4 py-2 bg-[#12121a] border border-[#a855f7]/30 mb-5" data-animate="fade-up">
      <span class="w-2 h-2 rounded-full bg-[#a855f7] animate-pulse"></span>
      <span class="font-mono text-sm font-semibold text-[#a855f7] uppercase tracking-[0.15em]">TRUSTED_BY</span>
    </div>
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-3">
      חלק מהלקוחות <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#a855f7] to-[#c084fc]">שסומכים עלינו</span>
    </h2>
    <p class="text-[#b0b0c0] text-base md:text-lg max-w-md mx-auto">
      מוסדות אקדמיים, ארגונים ועסקים מובילים
    </p>
  </div>

  <!-- Logos - Infinite Carousel -->
  <div class="logos-carousel-section relative z-10">
    <div class="logos-carousel-wrapper">
      <div class="logos-carousel-track">
        <!-- Copy 1 -->
        <div class="logos-set">
          {clients.map((client) => (
            <div class="logo-slide" title={client.name}>
              <img src={client.logo} alt={client.name} loading="lazy" decoding="async" />
            </div>
          ))}
        </div>
        <!-- Copy 2 (identical) -->
        <div class="logos-set">
          {clients.map((client) => (
            <div class="logo-slide" title={client.name}>
              <img src={client.logo} alt={client.name} loading="lazy" decoding="async" />
            </div>
          ))}
        </div>
        <!-- Copy 3 (identical) -->
        <div class="logos-set">
          {clients.map((client) => (
            <div class="logo-slide" title={client.name}>
              <img src={client.logo} alt={client.name} loading="lazy" decoding="async" />
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .logos-carousel-section {
    width: 100%;
    padding: 10px 0;
    overflow: hidden;
    position: relative;
    mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
  }

  .logos-carousel-wrapper {
    width: 100%;
    overflow: hidden;
  }

  .logos-carousel-track {
    display: flex;
    width: fit-content;
    animation: logosScrollLeft 30s linear infinite;
  }

  .logos-carousel-track:hover {
    animation-play-state: paused;
  }

  .logos-set {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 0 8px;
    flex-shrink: 0;
  }

  .logo-slide {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100px;
    aspect-ratio: 3 / 2;
    padding: 10px;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    transition: transform 0.3s, background 0.3s, border-color 0.3s;
  }

  .logo-slide img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    opacity: 0.8;
    transition: opacity 0.3s;
  }

  .logo-slide:hover {
    transform: translateY(-3px) scale(1.05);
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(168, 85, 247, 0.3);
  }

  .logo-slide:hover img {
    opacity: 1;
  }

  @keyframes logosScrollLeft {
    0% { transform: translateX(0); }
    100% { transform: translateX(-33.333%); }
  }

  @media (min-width: 640px) {
    .logo-slide {
      width: 120px;
      padding: 12px;
    }
    .logos-set {
      gap: 20px;
    }
  }

  @media (min-width: 1024px) {
    .logo-slide {
      width: 140px;
      padding: 14px;
      border-radius: 14px;
    }
    .logos-set {
      gap: 24px;
    }
  }
</style>
