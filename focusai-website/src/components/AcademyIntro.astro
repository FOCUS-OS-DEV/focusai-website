---
/**
 * Academy Intro Section
 * Storytelling section that introduces the Academy before course cards
 * Human-centered AI learning narrative
 */

const classroomImage = "https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_900,e_sharpen:150/v1770386851/%D7%AA%D7%9E%D7%95%D7%A0%D7%94-%D7%9B%D7%99%D7%AA%D7%94-e1762357672410-1024x438_fpwarm.png";

// Learning format features
const formatFeatures = [
  { icon: "users", text: "שיעורים פרונטליים בהרצליה" },
  { icon: "video", text: "Zoom Live - מכל מקום" },
  { icon: "teacher", text: "2-3 מרצים בכל מפגש" },
  { icon: "practice", text: "תרגול מעשי בזמן אמת" }
];
---

<section class="py-12 md:py-16 relative overflow-hidden bg-[#0a0a0f]">
  <!-- Background -->
  <div class="absolute inset-0">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[1000px] h-[600px] bg-[#a855f7]/8 rounded-full blur-[150px]"></div>
  </div>

  <div class="container relative z-10">
    <!-- Section Badge - Centered -->
    <div class="flex justify-center mb-12" data-animate="fade-up">
      <div class="inline-flex items-center gap-3 px-4 py-2 bg-white/[0.03] backdrop-blur-sm border border-white/[0.08] rounded-full">
        <span class="font-mono text-sm text-[#a855f7]">[FOCUS_AI_ACADEMY]</span>
        <span class="w-1.5 h-1.5 rounded-full bg-[#a855f7] animate-pulse"></span>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">

      <!-- Text Content -->
      <div class="order-2 lg:order-1 text-center lg:text-start">
        <!-- Headline -->
        <h2 class="text-2xl sm:text-3xl md:text-5xl lg:text-6xl font-black mb-6 leading-tight" data-animate="fade-up" data-delay="0.1">
          <span class="text-white">לומדים בינה מלאכותית</span>
          <span class="block mt-2 bg-gradient-to-r from-[#a855f7] via-[#c084fc] to-[#e879f9] bg-clip-text text-transparent">בצורה אנושית</span>
        </h2>

        <!-- Description -->
        <p class="text-xl text-[#b0b0c0] mb-8 leading-relaxed" data-animate="fade-up" data-delay="0.2">
          אצלנו לומדים
          <span class="text-white font-semibold">פנים מול פנים</span> - בכיתות פרונטליות ובשידור חי בזום, עם מרצים שעונים על שאלות ומלווים אתכם עד הסוף.
        </p>

        <!-- Format Features -->
        <div class="grid grid-cols-2 gap-4 mb-10" data-animate="fade-up" data-delay="0.3">
          {formatFeatures.map((feature) => (
            <div class="flex items-center gap-3 p-4 bg-white/[0.03] backdrop-blur-sm border border-white/[0.08] rounded-xl hover:border-[#a855f7]/30 transition-colors">
              <div class="w-10 h-10 rounded-lg bg-[#a855f7]/10 flex items-center justify-center">
                {feature.icon === "users" && (
                  <svg class="w-5 h-5 text-[#a855f7]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                )}
                {feature.icon === "video" && (
                  <svg class="w-5 h-5 text-[#a855f7]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  </svg>
                )}
                {feature.icon === "teacher" && (
                  <svg class="w-5 h-5 text-[#a855f7]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                  </svg>
                )}
                {feature.icon === "practice" && (
                  <svg class="w-5 h-5 text-[#a855f7]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                  </svg>
                )}
              </div>
              <span class="text-sm text-[#b0b0c0] font-medium">{feature.text}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Image Collage -->
      <div class="order-1 lg:order-2 relative" data-animate="fade-up" data-delay="0.2">
        <!-- Glow effect behind images -->
        <div class="absolute inset-0 bg-gradient-to-r from-[#a855f7]/20 to-[#ec4899]/20 blur-3xl rounded-3xl"></div>

        <div class="relative">
          <!-- Top row - smaller images -->
          <div class="flex gap-3 mb-3 justify-center flex-wrap">
            <div class="w-24 h-24 md:w-32 md:h-32 rounded-2xl overflow-hidden border border-white/[0.08] shadow-lg transform rotate-[-3deg] hover:rotate-0 transition-transform duration-300">
              <img
                src="https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_200/v1764513699/IMG_9082_ej3sr0.heic"
                alt="תלמידים לומדים AI"
                class="w-full h-full object-cover"
                loading="lazy"
                width="200"
                height="200"
              />
            </div>
            <div class="w-28 h-28 md:w-36 md:h-36 rounded-2xl overflow-hidden border border-white/[0.08] shadow-lg transform rotate-[2deg] hover:rotate-0 transition-transform duration-300">
              <img
                src="https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_200/v1764675923/IMG_8298_vhl1gz.heic"
                alt="מפגש לימודי"
                class="w-full h-full object-cover"
                loading="lazy"
                width="200"
                height="200"
              />
            </div>
            <div class="w-20 h-20 md:w-28 md:h-28 rounded-2xl overflow-hidden border border-white/[0.08] shadow-lg transform rotate-[4deg] hover:rotate-0 transition-transform duration-300 hidden sm:block">
              <img
                src="https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_200/v1770468490/WhatsApp_Image_2026-02-07_at_14.47.47_cham41.jpg"
                alt="הרצאה"
                class="w-full h-full object-cover"
                loading="lazy"
                width="200"
                height="200"
              />
            </div>
            <div class="w-24 h-24 md:w-32 md:h-32 rounded-2xl overflow-hidden border border-white/[0.08] shadow-lg transform rotate-[-2deg] hover:rotate-0 transition-transform duration-300 hidden md:block">
              <img
                src="https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_200/v1764239338/41_nufstk.png"
                alt="הדרכת AI"
                class="w-full h-full object-cover"
                loading="lazy"
                width="200"
                height="200"
              />
            </div>
          </div>

          <!-- Main classroom image -->
          <div class="relative rounded-3xl overflow-hidden border border-white/[0.08] shadow-2xl">
            <img
              src={classroomImage}
              alt="כיתת הלימוד של Focus AI Academy - לימוד בינה מלאכותית בצורה אנושית"
              class="w-full h-auto object-cover"
              loading="lazy"
              width="700"
              height="300"
            />

            <!-- Overlay gradient -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent"></div>

            <!-- Live badge -->
            <div class="absolute top-4 right-4 flex items-center gap-2 px-4 py-2 bg-black/50 backdrop-blur-sm border border-white/20 rounded-full">
              <span class="w-2 h-2 rounded-full bg-red-500 animate-pulse"></span>
              <span class="text-sm text-white font-medium">שידור חי</span>
            </div>
          </div>

          <!-- Bottom row - smaller images -->
          <div class="flex gap-3 mt-3 justify-center flex-wrap">
            <div class="w-24 h-24 md:w-32 md:h-32 rounded-2xl overflow-hidden border border-white/[0.08] shadow-lg transform rotate-[2deg] hover:rotate-0 transition-transform duration-300 hidden md:block">
              <img
                src="https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_200/v1764239319/24_fcxmpa.png"
                alt="למידה מעשית"
                class="w-full h-full object-cover"
                loading="lazy"
                width="200"
                height="200"
              />
            </div>
            <div class="w-28 h-28 md:w-36 md:h-36 rounded-2xl overflow-hidden border border-white/[0.08] shadow-lg transform rotate-[3deg] hover:rotate-0 transition-transform duration-300">
              <img
                src="https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_200/v1765177221/2_ytkcuf.jpg"
                alt="סדנת AI"
                class="w-full h-full object-cover"
                loading="lazy"
                width="200"
                height="200"
              />
            </div>
            <div class="w-24 h-24 md:w-32 md:h-32 rounded-2xl overflow-hidden border border-white/[0.08] shadow-lg transform rotate-[-2deg] hover:rotate-0 transition-transform duration-300">
              <img
                src="https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_200/v1764513069/WhatsApp_Image_2025-11-30_at_16.29.04_f6lckc.jpg"
                alt="קהילת הלומדים"
                class="w-full h-full object-cover"
                loading="lazy"
                width="200"
                height="200"
              />
            </div>
            <div class="w-20 h-20 md:w-28 md:h-28 rounded-2xl overflow-hidden border border-white/[0.08] shadow-lg transform rotate-[-3deg] hover:rotate-0 transition-transform duration-300 hidden sm:block">
              <img
                src="https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_200/v1765177220/1_d3qx5v.jpg"
                alt="תלמידים בכיתה"
                class="w-full h-full object-cover"
                loading="lazy"
                width="200"
                height="200"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>
