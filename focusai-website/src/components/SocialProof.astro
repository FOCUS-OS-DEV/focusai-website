---
/**
 * Social Proof Bar - Light Theme
 * Stats and client logos
 */

const clients = [
  { name: "אוניברסיטת חיפה", iconType: "academic" },
  { name: "טכניון", iconType: "building" },
  { name: "iJump", iconType: "rocket" },
  { name: "קיממה", iconType: "sprout" },
  { name: "היסוד הבסיסי", iconType: "home" },
];

const stats = [
  { value: "500+", label: "בוגרי הכשרות", iconType: "academic" },
  { value: "50+", label: "ארגונים מרוצים", iconType: "office" },
  { value: "95%", label: "שביעות רצון", iconType: "star" },
  { value: "30", label: "ימים ל-ROI", iconType: "trending" },
];
---

<section class="py-8 sm:py-10 lg:py-14 section-cream relative overflow-hidden border-y border-border-subtle">
  <div class="container relative z-10">
    <!-- Stats Row -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-3 sm:gap-4 lg:gap-6 mb-8 sm:mb-10 lg:mb-14">
      {stats.map((stat, index) => (
        <div
          class="social-stat text-center p-3 sm:p-4 lg:p-6 rounded-xl sm:rounded-2xl bg-white shadow-sm hover:shadow-md transition-all duration-300"
          data-index={index}
        >
          <div class="w-8 h-8 sm:w-10 sm:h-10 mx-auto mb-1 sm:mb-2 flex items-center justify-center rounded-lg bg-purple-soft text-purple-primary">
            {stat.iconType === 'academic' && (
              <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/></svg>
            )}
            {stat.iconType === 'office' && (
              <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
            )}
            {stat.iconType === 'star' && (
              <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/></svg>
            )}
            {stat.iconType === 'trending' && (
              <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/></svg>
            )}
          </div>
          <div class="text-xl sm:text-2xl lg:text-3xl font-bold gradient-text">
            {stat.value}
          </div>
          <div class="text-xs sm:text-sm text-text-muted mt-1">{stat.label}</div>
        </div>
      ))}
    </div>

    <!-- Clients Row -->
    <div class="text-center">
      <p class="text-xs sm:text-sm text-text-muted mb-3 sm:mb-4">עבדנו עם ארגונים מובילים</p>
      <div class="flex flex-wrap items-center justify-center gap-2 sm:gap-3 lg:gap-4">
        {clients.map((client, index) => (
          <div
            class="social-client flex items-center gap-1.5 sm:gap-2 px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg sm:rounded-xl bg-white shadow-sm hover:shadow-md transition-all duration-300 cursor-default"
          >
            <span class="w-5 h-5 sm:w-6 sm:h-6 flex items-center justify-center text-purple-primary">
              {client.iconType === 'academic' && (
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/></svg>
              )}
              {client.iconType === 'building' && (
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"/></svg>
              )}
              {client.iconType === 'rocket' && (
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/></svg>
              )}
              {client.iconType === 'sprout' && (
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l-7-4V8l7-4 7 4v7l-7 4z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19V12m0 0l-7-4m7 4l7-4"/></svg>
              )}
              {client.iconType === 'home' && (
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
              )}
            </span>
            <span class="text-text-secondary text-xs sm:text-sm font-medium">{client.name}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .social-stat {
    opacity: 0;
    transform: translateY(20px);
  }

  .social-client {
    opacity: 0;
    transform: translateY(10px);
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    gsap.to('.social-stat', {
      opacity: 1,
      y: 0,
      duration: 0.5,
      stagger: 0.1,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: '.social-stat',
        start: 'top 90%',
        toggleActions: 'play none none reverse'
      }
    });

    gsap.to('.social-client', {
      opacity: 1,
      y: 0,
      duration: 0.4,
      stagger: 0.08,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: '.social-client',
        start: 'top 95%',
        toggleActions: 'play none none reverse'
      }
    });
  });
</script>
