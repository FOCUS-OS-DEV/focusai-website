---
/**
 * Why Focus AI Section
 * Light theme - Differentiators with outcome-focused messaging
 */

interface Reason {
  title: string;
  description: string;
  iconType: string;
  highlight?: string;
}

const reasons: Reason[] = [
  {
    title: "לומדים מאינטגרטורים",
    description: "לא תיאורטיקנים! מה שאנחנו מלמדים - אנחנו עושים בעצמנו. הידע מגיע מפרויקטים אמיתיים.",
    iconType: "wrench",
    highlight: "מעשי"
  },
  {
    title: "ליווי אקדמי",
    description: "תעודה מקצועית בליווי אקדמי של היחידה ללימודי חוץ באוניברסיטת חיפה.",
    iconType: "academic",
    highlight: "אקדמי"
  },
  {
    title: "2-3 מרצים בכל מפגש",
    description: "יחס שאין באף מקום אחר. מחזיקים לך את היד עד הסוף, לא משאירים אף אחד מאחור.",
    iconType: "users",
    highlight: "יחס 1:5"
  },
  {
    title: "ROI תוך 30 יום",
    description: "יש לנו סטודנט שכבר בשיעור השלישי סגר עסקה ראשונה. תוצאות מדידות, לא הבטחות.",
    iconType: "trending",
    highlight: "30 יום"
  },
  {
    title: "בונים ומלווים",
    description: "לא רק מייעצים - בונים לכם את הסוכן, מחברים את המערכות, ומלווים עד שעובד.",
    iconType: "cog",
    highlight: "End-to-End"
  },
  {
    title: "קהילת בוגרים",
    description: "500+ בוגרים, קבוצת WhatsApp פעילה, אירועים, הזדמנויות עסקיות. התמיכה לא נגמרת.",
    iconType: "handshake",
    highlight: "500+"
  }
];

const fingerprint = "https://res.cloudinary.com/dfudxxzlj/image/upload/q_auto,f_auto,w_700/v1765571815/FOCUS_LOGO-06_2_grkja9.png";
---

<section id="why-focus-ai" class="section-padding section-white relative overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="orb orb-purple w-[500px] h-[500px] -top-40 -left-40 opacity-10"></div>
    <div class="orb orb-pink w-[400px] h-[400px] bottom-20 -right-20 opacity-8"></div>

    <!-- Fingerprint watermark -->
    <img
      src={fingerprint}
      alt=""
      class="absolute right-0 top-1/2 -translate-y-1/2 w-[400px] h-auto opacity-[0.02]"
      aria-hidden="true"
    />
  </div>

  <div class="container relative z-10">
    <!-- Section Header -->
    <div class="section-header" data-animate="fade-up">
      <div class="badge mb-6">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/></svg>
        <span>למה דווקא אנחנו?</span>
      </div>

      <h2 class="heading-large mb-4">
        לא נותנים דגים,
        <span class="gradient-text">מלמדים לדוג</span>
      </h2>

      <p class="text-body-large max-w-2xl mx-auto">
        אנחנו לא חברת ייעוץ שנותנת המלצות ונעלמת.
        בונים, מלווים, מכשירים - עד שאתם עצמאיים.
      </p>
    </div>

    <!-- Reasons Grid - Bento style -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
      {reasons.map((reason, index) => (
        <div class="reason-card group" data-index={index}>
          <div class="card h-full relative overflow-hidden">
            <!-- Highlight badge -->
            {reason.highlight && (
              <div class="absolute top-4 left-4 sm:top-6 sm:left-6">
                <span class="badge badge-outline text-xs">
                  {reason.highlight}
                </span>
              </div>
            )}

            <div class="pt-10 sm:pt-12">
              <!-- Icon -->
              <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-2xl bg-purple-soft flex items-center justify-center mb-4 sm:mb-6 group-hover:scale-110 transition-transform duration-300 text-purple-primary">
                {reason.iconType === 'wrench' && (
                  <svg class="w-7 h-7 sm:w-8 sm:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                )}
                {reason.iconType === 'academic' && (
                  <svg class="w-7 h-7 sm:w-8 sm:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"/></svg>
                )}
                {reason.iconType === 'users' && (
                  <svg class="w-7 h-7 sm:w-8 sm:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
                )}
                {reason.iconType === 'trending' && (
                  <svg class="w-7 h-7 sm:w-8 sm:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/></svg>
                )}
                {reason.iconType === 'cog' && (
                  <svg class="w-7 h-7 sm:w-8 sm:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                )}
                {reason.iconType === 'handshake' && (
                  <svg class="w-7 h-7 sm:w-8 sm:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
                )}
              </div>

              <!-- Content -->
              <h3 class="text-lg sm:text-xl lg:text-2xl font-bold text-text-primary mb-2 sm:mb-3 group-hover:text-purple-primary transition-colors">
                {reason.title}
              </h3>
              <p class="text-sm sm:text-base text-text-secondary leading-relaxed">
                {reason.description}
              </p>
            </div>

            <!-- Bottom accent line on hover -->
            <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-purple-primary to-pink-accent transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-right rounded-b-xl"></div>
          </div>
        </div>
      ))}
    </div>

    <!-- Bottom Quote -->
    <div class="mt-12 sm:mt-16 lg:mt-20 text-center" data-animate="fade-up">
      <div class="relative inline-block max-w-2xl px-4">
        <!-- Quote marks -->
        <span class="absolute -top-4 -right-2 sm:-top-6 sm:-right-4 text-4xl sm:text-6xl text-purple-soft font-serif">"</span>

        <blockquote class="text-xl sm:text-2xl lg:text-3xl font-medium text-text-primary leading-relaxed">
          מה שאנחנו מלמדים -
          <span class="gradient-text">אנחנו עושים בפועל</span>
        </blockquote>

        <p class="text-text-muted mt-3 sm:mt-4 text-sm sm:text-base">
          הידע מגיע מפרויקטים אמיתיים, לא מתיאוריה
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .reason-card {
    opacity: 0;
    transform: translateY(30px);
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    gsap.utils.toArray('.reason-card').forEach((card: any, index: number) => {
      gsap.to(card, {
        opacity: 1,
        y: 0,
        duration: 0.6,
        ease: 'power3.out',
        delay: index * 0.1,
        scrollTrigger: {
          trigger: '#why-focus-ai',
          start: 'top 75%',
          toggleActions: 'play none none reverse'
        }
      });
    });
  });
</script>
